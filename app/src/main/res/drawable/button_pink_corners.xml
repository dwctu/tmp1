<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="@color/buttom_select_background"
                android:endColor="@color/buttom_select_background"
                android:angle="270"/>
            <stroke
                android:width="2dp"
                android:color="@color/buttom_select_background"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item
        android:state_focused="false"
        android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="@color/chat_pattern_time"
                android:endColor="@color/chat_pattern_time"
                android:angle="270"/>
            <stroke
                android:width="2dp"
                android:color="@color/chat_pattern_time"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
</selector>
