<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#c6318f"/>
            <gradient
                android:startColor="#c6318f"
                android:endColor="#c6318f"
                android:angle="90"/>
            <corners android:bottomLeftRadius="10dp"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/buttom_select_background"/>
            <gradient
                android:startColor="@color/buttom_select_background"
                android:endColor="@color/buttom_select_background"
                android:angle="90"/>
            <corners android:bottomLeftRadius="10dp"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>
</selector>
