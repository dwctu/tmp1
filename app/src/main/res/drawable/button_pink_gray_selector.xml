<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="@color/buttom_select_background"
                android:endColor="@color/buttom_select_background"
                android:angle="270"/>
            <stroke
                android:width="2dp"
                android:color="@color/buttom_select_background"/>
            <corners android:radius="2dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient
                android:startColor="#ffc2b7"
                android:endColor="#ffc2b7"
                android:angle="270"/>
            <stroke
                android:width="2dp"
                android:color="#dcdcdc"/>
            <corners android:radius="2dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#c6318f"
                android:endColor="#c6318f"
                android:angle="270"/>
            <stroke
                android:width="2dp"
                android:color="#c6318f"/>
            <corners android:radius="2dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <item
        android:state_focused="false"
        android:state_enabled="false">
        <shape>
            <gradient
                android:startColor="#f6a2ca"
                android:endColor="#f6a2ca"
                android:angle="270"/>
            <stroke
                android:width="2dp"
                android:color="#f6a2ca"/>
            <corners android:radius="2dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>
