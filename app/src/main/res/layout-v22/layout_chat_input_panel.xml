<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/ll_chat_input_panel"
        android:background="@color/lvs_ui_standard_systemBackground2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_reply"
            android:background="@color/reply_ll_reply_bg"
            android:paddingLeft="5dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/chat_reply_line_view"
                android:padding="10dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1">
                <TextView
                    android:textColor="@color/reply_msg_textcolor"
                    android:ellipsize="end"
                    android:id="@+id/tv_reply_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>
                <TextView
                    android:textColor="@color/reply_msg_textcolor"
                    android:ellipsize="end"
                    android:id="@+id/tv_reply_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="40dp"
                    android:maxLines="1"
                    android:singleLine="true"/>
                <com.wear.widget.RadiuImageView
                    android:id="@+id/miv_reply_user_picture"
                    android:visibility="visible"
                    android:clickable="false"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/icon_edit"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    app:radius="3dp"/>
                <RelativeLayout
                    android:id="@+id/rl_reply_video"
                    android:visibility="visible"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">
                    <com.wear.widget.RadiuImageView
                        android:id="@+id/miv_reply_user_video_picture"
                        android:visibility="visible"
                        android:clickable="false"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:src="@drawable/icon_edit"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:layout_centerInParent="true"
                        app:radius="5dp"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:background="@drawable/chat_video_play_bg"
                        android:paddingLeft="6dp"
                        android:paddingTop="5dp"
                        android:paddingRight="6dp"
                        android:paddingBottom="5dp"
                        android:clickable="false"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/chat_video_preview_play"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/ll_reply_voice"
                    android:visibility="visible"
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/reply_voice_icon"
                        android:layout_width="20dp"
                        android:layout_height="10dp"
                        android:src="@drawable/chat_voice_reply"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/reply_msg_textcolor"
                        android:gravity="center"
                        android:id="@+id/reply_voice_time"
                        android:paddingLeft="0dp"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_close_reply"
                android:paddingBottom="21dp"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/chat_reply_close"/>
        </LinearLayout>
        <View
            android:background="@color/reply_btm_line_color"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <RelativeLayout
            android:id="@+id/rl_chat_input_panel"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">
            <com.wear.widget.BaseImageButton
                android:id="@+id/chat_more"
                android:tag="voice"
                android:padding="7dp"
                android:clickable="true"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/chat_function_openfunction"
                android:layout_alignBottom="@+id/chat_message_container"
                android:layout_centerVertical="false"
                android:layout_marginHorizontal="5dp"/>
            <com.wear.widget.BaseImageButton
                android:id="@+id/chat_voice"
                android:tag="open"
                android:padding="7dp"
                android:clickable="true"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/selector_chat_voice_btn"
                android:layout_alignBottom="@+id/chat_message_container"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="false"/>
            <com.wear.widget.BaseImageButton
                android:id="@+id/chat_send"
                android:tag="open"
                android:visibility="invisible"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/icon_chat_send_new"
                android:layout_alignBottom="@+id/chat_message_container"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="15dp"/>
            <com.wear.widget.BaseImageButton
                android:id="@+id/chat_pictures"
                android:tag="pictures"
                android:padding="7dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/chat_function_picture"
                android:layout_alignBottom="@+id/chat_message_container"
                android:layout_centerVertical="false"
                android:layout_marginStart="5dp"
                android:layout_toStartOf="@+id/chat_voice"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/chat_message_container"
                android:background="@drawable/default_chat_edit_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/chat_pictures"
                android:layout_toEndOf="@+id/chat_more">
                <com.wear.widget.ChatEditText
                    android:textSize="16sp"
                    android:textColor="@color/text_color_85"
                    android:gravity="center"
                    android:id="@+id/chat_message"
                    android:background="@null"
                    android:paddingLeft="10dp"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingRight="10dp"
                    android:paddingBottom="@dimen/dp_8"
                    android:visibility="visible"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:text=""
                    android:maxLines="5"
                    android:lines="1"
                    android:includeFontPadding="false"
                    android:layout_weight="1"
                    android:inputType="textMultiLine"
                    android:textCursorDrawable="@null"
                    android:layout_marginEnd="40dp"
                    android:paddingVertical="@dimen/dp_8"
                    app:lineHeight="22dp"/>
            </LinearLayout>
            <com.wear.widget.BaseImageButton
                android:id="@+id/chat_emojis"
                android:tag="mojis"
                android:padding="7dp"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:src="@drawable/chat_function_emojis"
                android:layout_alignBottom="@+id/chat_more"
                android:layout_marginStart="5dp"
                android:layout_alignEnd="@+id/chat_message_container"/>
            <View
                android:id="@+id/v_block_tip"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:maxHeight="100dp"
                android:minHeight="37dp"/>
        </RelativeLayout>
    </LinearLayout>
    <com.wear.widget.chatMic.VoiceMessagePanelView
        android:id="@+id/voice_message_panel_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>
