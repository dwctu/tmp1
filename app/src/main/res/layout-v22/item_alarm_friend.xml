<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_root_anima"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginVertical="3dp">
    <include
        android:id="@+id/long_chat_create_layout"
        layout="@layout/long_chat_item_times"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/long_chat_item_selection"/>
        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/chat_avatar_default_new"
            android:scaleType="centerCrop"
            app:riv_border_color="#333333"
            app:riv_border_width="0dp"
            app:riv_corner_radius="4dp"
            app:riv_mutate_background="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/alarm_message"
            android:layout_width="@dimen/activity_msg_max_lenth"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_alarm"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/chat_send_alarm_friend"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/lvs_ui_standard_systemText"
                        android:gravity="center_vertical"
                        android:id="@+id/alarm_time"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="06:27"
                        android:includeFontPadding="false"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/alarm_requency"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="Every day"
                        android:singleLine="true"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/alarm_action_layout"
                android:background="@drawable/chat_message_self_mask_bg_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/alarm_auto_play_icon"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:src="@drawable/home_pattern_sync_fail"/>
                <TextView
                    android:enabled="true"
                    android:textSize="12sp"
                    android:textColor="@color/lvs_ui_standard_systemLDText6"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/alarm_auto_play"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="@string/alarm_status_automatic"
                    android:drawablePadding="@dimen/dp_6"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/alarm_action"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1">
                    <TextView
                        android:enabled="true"
                        android:textSize="16sp"
                        android:textColor="@color/chat_pattern_text_selector"
                        android:gravity="center"
                        android:id="@+id/alarm_decline"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/common_decline"
                        android:layout_weight="1"/>
                    <View
                        android:id="@+id/alarm_vertical_line"
                        android:background="@color/lvs_ui_standard_systemBackground5"
                        android:layout_width="1dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/chat_pattern_text_selector"
                        android:gravity="center"
                        android:id="@+id/alarm_accept"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/common_accept"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
