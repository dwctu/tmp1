<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_root_anima"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginVertical="3dp">
    <include
        android:id="@+id/long_chat_create_layout"
        layout="@layout/long_chat_item_times"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/long_chat_item_selection"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <ProgressBar
            android:layout_gravity="center_vertical"
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginRight="4dp"/>
        <ImageView
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/block_sync"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/message_fail"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>
        <com.wear.widget.roundwidget.SkinRoundConstraintLayout
            android:gravity="center"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:id="@+id/voice_play"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.wear.widget.roundwidget.SkinRoundAutoLinearLayout
                android:gravity="end"
                android:orientation="horizontal"
                android:id="@+id/ll_voice"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingHorizontal="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/lvs_ui_standard_systemText"
                    android:gravity="center_vertical"
                    android:id="@+id/voice_time"
                    android:paddingLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxWidth="@dimen/activity_msg_max_lenth"
                    android:text="sdsadasasdasdsadd"/>
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/voice_icon"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="@dimen/dp_10"/>
            </com.wear.widget.roundwidget.SkinRoundAutoLinearLayout>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:id="@+id/v_guideline"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_end="35dp"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/text_color_b45_wo"
                android:gravity="end"
                android:id="@+id/tv_expired"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/voice_message_expired"
                android:drawablePadding="@dimen/dp_5"
                android:layout_below="@+id/ll_voice"
                android:drawableEnd="@drawable/home_pattern_sync_fail"
                android:paddingHorizontal="@dimen/dp_12"
                app:layout_constraintEnd_toEndOf="@+id/ll_voice"
                app:layout_constraintStart_toStartOf="@+id/ll_voice"
                app:layout_constraintTop_toBottomOf="@+id/ll_voice"/>
        </com.wear.widget.roundwidget.SkinRoundConstraintLayout>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/user_img"
            android:visibility="gone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/chat_avatar_default"
            android:scaleType="centerCrop"
            app:riv_border_color="#333333"
            app:riv_border_width="0dp"
            app:riv_corner_radius="4dp"
            app:riv_mutate_background="true"/>
    </LinearLayout>
</LinearLayout>
