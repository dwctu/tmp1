<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/window_background_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.widget.MyActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:back="true"
        app:title="David(Online)"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_24">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/rounded_rectangle_icon"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:paddingHorizontal="@dimen/dp_20">
            <RelativeLayout
                android:id="@+id/rl_group_chat_invite_others"
                android:layout_width="match_parent"
                android:layout_height="68dp">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/text_color_group_manager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/group_chat_invite_others"
                    android:layout_centerVertical="true"/>
                <com.wear.widget.SwitchView
                    android:id="@+id/sb_group_chat_invite_others"
                    android:background="@null"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn=""
                    android:textOff=""
                    android:thumb="@drawable/switch_custom_thumb_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/switch_custom_track_selector"/>
            </RelativeLayout>
            <View
                android:id="@+id/line"
                android:background="@color/group_people_info"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <RelativeLayout
                android:id="@+id/rl_group_chat_invitation_approval"
                android:paddingTop="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/dp_20">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/text_color_group_manager"
                    android:id="@+id/invitation_approval_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/group_chat_invitation_approval"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="#ff6c7273"
                    android:id="@+id/tv_group_chat_invitation_approval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="@string/group_chat_invitation_approval_tip"
                    android:layout_below="@+id/invitation_approval_text"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_toStartOf="@+id/sb_group_chat_invitation_approval"/>
                <com.wear.widget.SwitchView
                    android:id="@+id/sb_group_chat_invitation_approval"
                    android:background="@null"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn=""
                    android:textOff=""
                    android:thumb="@drawable/switch_custom_thumb_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/switch_custom_track_selector"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/window_background_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginHorizontal="@dimen/dp_16">
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_color_group_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/common_admin"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/iv_add_admin"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/group_manage_add"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_12"/>
    </LinearLayout>
</LinearLayout>
