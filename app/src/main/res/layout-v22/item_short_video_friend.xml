<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_root_anima"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginVertical="3dp">
    <include
        android:id="@+id/long_chat_create_layout"
        layout="@layout/long_chat_item_times"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/long_chat_item_selection"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/user_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/chat_avatar_default_new"
            android:scaleType="centerCrop"
            app:riv_border_color="#333333"
            app:riv_border_width="0dp"
            app:riv_corner_radius="4dp"
            app:riv_mutate_background="true"/>
        <RelativeLayout
            android:id="@+id/parentRelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.wear.widget.MyImageView
                android:id="@+id/user_picture"
                android:visibility="visible"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/play_icon"
                android:background="@drawable/chat_video_play_bg"
                android:paddingLeft="12dp"
                android:paddingTop="11dp"
                android:paddingRight="10dp"
                android:paddingBottom="11dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/chat_video_preview_play"
                android:layout_centerInParent="true"/>
            <com.wear.widget.ChatBurnedLayout
                android:id="@+id/chat_burned_bg"
                android:visibility="gone"
                android:layout_width="122dp"
                android:layout_height="91dp"
                app:chat_burned_bg="@drawable/chatting_burned_video"
                app:chat_burned_left="true"/>
        </RelativeLayout>
        <View
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
