<?xml version="1.0" encoding="utf-8"?>
<skin.support.widget.SkinAutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/screan_root_layout"
    android:background="@drawable/new_title_color_bg_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <skin.support.widget.SkinAutoLinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/frameLayout"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <skin.support.widget.SkinAutoLinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:src="@drawable/icon_people_new"/>
                <com.wear.widget.MediumBoldTextView
                    android:textSize="15sp"
                    android:textColor="@color/text_color_45"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <skin.support.widget.SkinAutoLinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <skin.support.widget.SkinCompatTextView
                        android:textStyle="bold"
                        android:textColor="@color/lvs_ui_standard_systemBrandGradient1"
                        android:gravity="center"
                        android:id="@+id/rl_toy_1"
                        android:background="@drawable/content_icon_pink_new"
                        android:paddingLeft="1dp"
                        android:paddingRight="1dp"
                        android:visibility="gone"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="8dp"
                        android:maxLines="1"
                        app:autoSizeMaxTextSize="10sp"
                        app:autoSizeMinTextSize="4sp"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform"/>
                    <skin.support.widget.SkinCompatTextView
                        android:textStyle="bold"
                        android:textColor="@color/lvs_ui_standard_systemBrandGradient1"
                        android:gravity="center"
                        android:layout_gravity="bottom"
                        android:id="@+id/rl_toy_2"
                        android:background="@drawable/content_icon_pink_new"
                        android:paddingLeft="1dp"
                        android:paddingRight="1dp"
                        android:visibility="gone"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="8dp"
                        android:text="2"
                        android:maxLines="1"
                        app:autoSizeMaxTextSize="10sp"
                        app:autoSizeMinTextSize="4sp"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform"/>
                    <com.wear.widget.roundwidget.SkinRoundTextView
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/lvs_ui_standard_systemBrandGradient1"
                        android:gravity="center"
                        android:id="@+id/toys_number_text"
                        android:background="@drawable/toys_number_background"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingRight="@dimen/dp10"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:textAlignment="center"/>
                </skin.support.widget.SkinAutoLinearLayout>
                <ImageView
                    android:id="@+id/iv_not_toy"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/icon_link_toy_new"/>
                <ImageView
                    android:id="@+id/btn_add"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/icon_add_toy_new"/>
            </skin.support.widget.SkinAutoLinearLayout>
            <skin.support.widget.SkinAutoLinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/pb_login_ing"
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:indeterminateDrawable="@drawable/anim_friendlist_title"
                    android:layout_marginEnd="6px"/>
                <com.wear.widget.MediumBoldTextView
                    android:textSize="18sp"
                    android:textColor="@color/lvs_ui_standard_systemText"
                    android:gravity="center"
                    android:id="@+id/mtv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_people_text"
                    android:layout_marginStart="6px"
                    app:textStrokeWidth="semibold"/>
            </skin.support.widget.SkinAutoLinearLayout>
        </FrameLayout>
        <skin.support.widget.SkinAutoLinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <skin.support.widget.SkinAutoLinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/xmpp_connect_status_layout"
                android:background="@drawable/home_toy_unconnect_bg"
                android:paddingLeft="32px"
                android:paddingTop="20px"
                android:paddingRight="32px"
                android:paddingBottom="20px"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:layout_marginTop="24px"
                android:layout_marginRight="32px"
                android:paddingHorizontal="32px"
                android:paddingVertical="20px">
                <skin.support.widget.SkinCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_warn_red"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/lvs_ui_standard_systemRedRegular"
                    android:id="@+id/xmpp_connect_status_tip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/net_connect_error_tip"
                    android:layout_weight="1"
                    android:layout_marginStart="16px"
                    android:layout_marginEnd="32px"
                    app:lineHeight="@dimen/dp_17"/>
                <skin.support.widget.SkinCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_right_arrow_red"/>
            </skin.support.widget.SkinAutoLinearLayout>
            <com.wear.widget.roundwidget.SkinRoundAutoLinearLayout
                android:gravity="center_vertical"
                android:id="@+id/lan_api_control"
                android:background="@color/lvs_ui_standard_systemBackground5"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="76px"
                android:layout_marginLeft="32px"
                android:layout_marginTop="24px"
                android:layout_marginRight="32px"
                style="@style/lvs_ui_standard_radius_16px">
                <TextView
                    android:textSize="24px"
                    android:textColor="@color/lvs_ui_standard_systemText"
                    android:ellipsize="end"
                    android:id="@+id/tv_lan_api_platform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32px"
                    android:text="@string/lan_api_control"
                    android:maxLines="1"
                    android:layout_weight="1"/>
                <com.kproduce.roundcorners.RoundTextView
                    android:textSize="22px"
                    android:textColor="@color/lvs_ui_standard_systemTextAccent"
                    android:gravity="center"
                    android:id="@+id/lan_api_control_update"
                    android:paddingLeft="16px"
                    android:paddingTop="9px"
                    android:paddingRight="16px"
                    android:paddingBottom="9px"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16px"
                    android:layout_marginRight="16px"
                    android:text="@string/common_update"
                    style="@style/lvs_ui_standard_brand_gradient_radius_8px"/>
                <com.wear.widget.roundwidget.SkinRoundTextView
                    android:textSize="22px"
                    android:textColor="@color/lvs_ui_standard_systemTextAccent"
                    android:gravity="center"
                    android:id="@+id/lan_api_control_stop"
                    android:paddingLeft="16px"
                    android:paddingTop="9px"
                    android:paddingRight="16px"
                    android:paddingBottom="9px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16px"
                    android:layout_marginRight="16px"
                    android:text="@string/common_stop"
                    style="@style/lvs_ui_standard_brand_gradient_radius_8px"/>
            </com.wear.widget.roundwidget.SkinRoundAutoLinearLayout>
            <com.wear.widget.roundwidget.SkinRoundAutoLinearLayout
                android:gravity="center"
                android:id="@+id/ll_video_pattern_control"
                android:background="@color/lvs_ui_standard_systemBackground5"
                android:paddingTop="16px"
                android:paddingBottom="16px"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:layout_marginTop="24px"
                android:layout_marginRight="32px"
                style="@style/lvs_ui_standard_radius_16px">
                <TextView
                    android:textSize="24px"
                    android:textColor="@color/lvs_ui_standard_systemText"
                    android:ellipsize="end"
                    android:id="@+id/tv_video_pattern_control_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="16px"
                    android:text="Syncing toy(s) to video"
                    android:maxLines="2"
                    android:layout_weight="1"/>
                <com.wear.widget.roundwidget.SkinRoundTextView
                    android:textSize="24px"
                    android:textColor="@color/lvs_ui_standard_systemTextAccent"
                    android:id="@+id/tv_video_pattern_control_unsync"
                    android:paddingLeft="16px"
                    android:paddingTop="9px"
                    android:paddingRight="16px"
                    android:paddingBottom="9px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16px"
                    android:text="Unsync"
                    style="@style/lvs_ui_standard_brand_gradient_radius_8px"/>
            </com.wear.widget.roundwidget.SkinRoundAutoLinearLayout>
        </skin.support.widget.SkinAutoLinearLayout>
        <skin.support.widget.SkinAutoLinearLayout
            android:orientation="vertical"
            android:id="@+id/login_long_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.wear.widget.roundwidget.SkinRoundAutoLinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_search"
                android:background="@color/lvs_ui_standard_systemFillRegular"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginLeft="32px"
                android:layout_marginTop="24px"
                android:layout_marginRight="32px"
                android:transitionName="editTransition"
                app:layout_scrollFlags="scroll"
                style="@style/lvs_ui_standard_radius_500px">
                <ImageView
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="12px"
                    android:src="@drawable/icon_search_new"/>
                <TextView
                    android:textSize="32px"
                    android:textColor="@color/lvs_ui_standard_systemText"
                    android:textColorHint="@color/lvs_ui_standard_systemText3"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/common_search"
                    android:layout_weight="1"/>
            </com.wear.widget.roundwidget.SkinRoundAutoLinearLayout>
            <skin.support.widget.SkinAutoLinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="enterAlways">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_online"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32px"
                    android:layout_marginTop="24px"
                    android:layout_marginRight="32px"/>
                <com.wear.widget.roundwidget.SkinRoundAutoRelativeLayout
                    android:id="@+id/cl_request"
                    android:background="@color/lvs_ui_standard_systemBackground5"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="96px"
                    android:layout_marginLeft="32px"
                    android:layout_marginTop="48px"
                    android:layout_marginRight="32px"
                    style="@style/lvs_ui_standard_radius_16px">
                    <com.wear.widget.MediumBoldTextView
                        android:textSize="28px"
                        android:textColor="@color/lvs_ui_standard_systemText"
                        android:id="@+id/tv_request_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/friends_new_requests"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="32px"/>
                    <TextView
                        android:textSize="20px"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/tv_request_count"
                        android:background="@drawable/new_red_tips_layout"
                        android:visibility="visible"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="8px"
                        android:text="5"
                        android:singleLine="true"
                        android:layout_toRightOf="@+id/tv_request_left"
                        android:layout_centerVertical="true"/>
                    <com.wear.widget.roundwidget.SkinRoundImageView
                        android:id="@+id/riv_request_photo"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="16px"
                        android:src="@drawable/icon_default_new"
                        android:scaleType="centerCrop"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:rRadius="6dp"
                        app:rStrokeColor="@color/lvs_ui_standard_systemStrokeStrong"
                        app:rStrokeWidth="1dp"/>
                </com.wear.widget.roundwidget.SkinRoundAutoRelativeLayout>
            </skin.support.widget.SkinAutoLinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/people_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        </skin.support.widget.SkinAutoLinearLayout>
        <skin.support.widget.SkinAutoLinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/offline_long_distance"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="240px"
                android:layout_height="240px"
                android:src="@drawable/earth_new"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/lvs_ui_standard_systemText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64px"
                android:text="@string/main_partnerPlay"/>
            <TextView
                android:textColor="@color/lvs_ui_standard_systemText2"
                android:gravity="center"
                android:id="@+id/long_distance_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="135px"
                android:layout_marginTop="24px"
                android:layout_marginRight="135px"
                android:text="@string/long_distance_des2"/>
            <com.wear.widget.roundwidget.SkinRoundTextView
                android:textSize="32px"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/offline_login"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginLeft="135px"
                android:layout_marginTop="192px"
                android:layout_marginRight="135px"
                android:text="@string/welcome_login"
                app:textStrokeWidth="medium"
                style="@style/lvs_ui_standard_brand_gradient_radius_20px"/>
            <com.wear.widget.roundwidget.SkinRoundTextView
                android:textSize="32px"
                android:textColor="@color/lvs_ui_standard_systemText"
                android:gravity="center"
                android:id="@+id/control_roulette"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_marginLeft="135px"
                android:layout_marginTop="32px"
                android:layout_marginRight="135px"
                android:text="@string/control_roulette"
                app:textStrokeWidth="medium"
                style="@style/lvs_ui_standard_fill_regular_radius_20px"/>
        </skin.support.widget.SkinAutoLinearLayout>
    </skin.support.widget.SkinAutoLinearLayout>
</skin.support.widget.SkinAutoLinearLayout>
