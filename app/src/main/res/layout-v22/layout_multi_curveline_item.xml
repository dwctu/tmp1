<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.widget.control.CurveLineView
        android:id="@+id/curveline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"/>
    <RelativeLayout
        android:id="@+id/rl_velvo_preview"
        android:background="@drawable/solace_preview_btn_bg"
        android:visibility="gone"
        android:layout_width="100dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:elevation="4dp"
        android:outlineProvider="background">
        <ImageView
            android:id="@+id/img_velvo_preview_play"
            android:background="@drawable/icon_cruve_preview_play"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_centerVertical="true"/>
        <TextView
            android:textColor="@color/curve_line_view_preview"
            android:gravity="center"
            android:id="@+id/tv_preview_toy_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="@dimen/dp_10"
            android:text="@string/velvo_name"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="6sp"
            android:autoSizeMaxTextSize="12sp"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentTop="true">
        <TextView
            android:textSize="9sp"
            android:textColor="@color/text_color_100"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            android:id="@+id/toy_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:text="Ambi"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/toy_battery"
            android:layout_width="11dp"
            android:layout_height="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/battery_trans_50"/>
        <LinearLayout
            android:gravity="bottom"
            android:orientation="horizontal"
            android:id="@+id/multi_curve_ll_reconnect"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp">
            <TextView
                android:textSize="9sp"
                android:textColor="@color/migrate_status_interrupted_color"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="("/>
            <TextView
                android:textSize="9sp"
                android:textColor="@color/migrate_status_interrupted_color"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/common_reconnecting"/>
            <com.airbnb.lottie.LottieAnimationView
                android:layout_gravity="bottom"
                android:id="@+id/multi_curve_lottie_reconnect"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>
            <TextView
                android:textSize="9sp"
                android:textColor="@color/migrate_status_interrupted_color"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=")"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/multi_curve_item_top_line"
        android:background="@color/multi_curve_item_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"/>
</RelativeLayout>
