<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:tag="layout/activity_roulette_chat_end_0"
    android:background="@color/lvs_ui_standard_systemBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.widget.MyActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:back="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Session Ended"
        app:withTab="false"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:src="@drawable/icon_roulette_session_ended"/>
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/lvs_ui_standard_systemText"
        android:gravity="center"
        android:id="@+id/reason_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="56dp"
        android:layout_marginHorizontal="56dp"
        app:lineHeight="19dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <TextView
            android:textColor="@color/lvs_ui_standard_systemText2"
            android:tag="binding_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/lvs_ui_standard_systemTextRegular"
            android:tag="binding_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <com.wear.widget.roundwidget.SkinRoundTextView
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/exit"
        android:background="@drawable/selector_lvs_ui_standard_brand_gradient"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="96dp"
        android:layout_marginRight="68dp"
        android:text="@string/common_exit"
        android:layout_marginHorizontal="68dp"
        app:rRadius="10dp"/>
    <TextView
        android:textColor="@color/lvs_ui_standard_systemText5"
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/patterns_menu_report"/>
</LinearLayout>
