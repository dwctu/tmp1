<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newtoy_btdisabledrl"
    android:background="@color/bg"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/newtoy_btdisablediv"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:src="@drawable/bt_disable"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/diff_text_color_65"
        android:id="@+id/newtoy_btdisabledtv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/des_bluetooth_disabled"
        android:layout_below="@+id/newtoy_btdisablediv"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/disable_bttt_40fff"
        android:gravity="center_horizontal"
        android:id="@+id/newtoy_btdisabledtv2"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="25dp"
        android:text="@string/connect_toy_entrance2"
        android:layout_below="@+id/newtoy_btdisabledtv1"
        android:layout_marginHorizontal="25dp"
        android:paddingHorizontal="30dp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/newtoy_btn"
        android:background="@drawable/bg_game_mode_connect_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="44dp"
        android:layout_marginRight="63dp"
        android:text="@string/button_go_to_settings"
        android:layout_below="@+id/newtoy_btdisabledtv2"
        android:layout_marginHorizontal="63dp"/>
</RelativeLayout>
