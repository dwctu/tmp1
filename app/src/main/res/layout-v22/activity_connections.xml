<?xml version="1.0" encoding="utf-8"?>
<skin.support.widget.SkinAutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lvs_ui_standard_systemBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <skin.support.widget.SkinAutoRelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/title_container"
        android:paddingLeft="32px"
        android:paddingRight="32px"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:paddingHorizontal="32px">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_back_default"
            android:layout_centerVertical="true"
            android:layout_marginStart="18px"/>
        <com.wear.widget.MediumBoldTextView
            android:textSize="18sp"
            android:textColor="@color/lvs_ui_standard_systemText"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/mtv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/long_distance_connections"
            android:layout_centerInParent="true"
            app:textStrokeWidth="semibold"/>
    </skin.support.widget.SkinAutoRelativeLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_container">
        <skin.support.design.widget.SkinMaterialAppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            app:layout_behavior="com.wear.ui.longDistance.behavior.FlingBehavior">
            <skin.support.widget.SkinAutoLinearLayout
                android:orientation="vertical"
                android:id="@+id/top_container"
                android:background="@color/lvs_ui_standard_systemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="44dp"
                app:layout_scrollFlags="exitUntilCollapsed|scroll">
                <com.wear.widget.roundwidget.SkinRoundAutoLinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/search_container"
                    android:background="@color/lvs_ui_standard_systemFillRegular"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:layout_marginLeft="32px"
                    android:layout_marginTop="16px"
                    android:layout_marginRight="32px"
                    android:transitionName="editTransition"
                    app:layout_scrollFlags="scroll"
                    style="@style/lvs_ui_standard_radius_500px">
                    <ImageView
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:layout_marginLeft="32px"
                        android:layout_marginRight="12px"
                        android:src="@drawable/icon_search_new"/>
                    <TextView
                        android:textSize="32px"
                        android:textColor="@color/lvs_ui_standard_systemText"
                        android:textColorHint="@color/lvs_ui_standard_systemText3"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/common_search"
                        android:layout_weight="1"/>
                </com.wear.widget.roundwidget.SkinRoundAutoLinearLayout>
                <com.wear.widget.roundwidget.SkinRoundTextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/lvs_ui_standard_systemText"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_header_1"
                    android:background="@color/lvs_ui_standard_systemBackground"
                    android:paddingLeft="32px"
                    android:paddingRight="32px"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/search_requests"
                    android:paddingHorizontal="32px"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:gravity="center"
                    android:id="@+id/recycler_view_request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                <com.wear.widget.roundwidget.SkinRoundTextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/lvs_ui_standard_systemText"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_header_2"
                    android:background="@color/lvs_ui_standard_systemBackground"
                    android:paddingLeft="32px"
                    android:paddingRight="32px"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="@string/connection_cotacts_groups"
                    android:paddingHorizontal="32px"/>
            </skin.support.widget.SkinAutoLinearLayout>
        </skin.support.design.widget.SkinMaterialAppBarLayout>
        <skin.support.widget.SkinAutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <com.wear.widget.sticky.StickyHeadContainer
                android:id="@+id/sticky_header_container"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    android:id="@+id/sticky_header_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/item_connections_letter"/>
            </com.wear.widget.sticky.StickyHeadContainer>
        </skin.support.widget.SkinAutoRelativeLayout>
        <skin.support.widget.SkinAutoFrameLayout
            android:orientation="vertical"
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.wear.ui.longDistance.behavior.ConnectionsBehavior">
            <skin.support.widget.SkinAutoLinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.wear.widget.roundwidget.SkinRoundTextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/lvs_ui_standard_systemText"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_header_11"
                    android:background="@color/lvs_ui_standard_systemBackground"
                    android:paddingLeft="32px"
                    android:paddingRight="32px"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="@string/search_requests"
                    android:paddingHorizontal="32px"
                    app:layout_scrollFlags="scroll"/>
                <View
                    android:id="@+id/line"
                    android:background="@color/lvs_ui_standard_systemStrokeRegular"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
            </skin.support.widget.SkinAutoLinearLayout>
            <com.wear.widget.roundwidget.SkinRoundTextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/lvs_ui_standard_systemText"
                android:gravity="center_vertical"
                android:id="@+id/tv_header_22"
                android:background="@color/lvs_ui_standard_systemBackground"
                android:paddingLeft="32px"
                android:paddingRight="32px"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="@string/connection_cotacts_groups"
                android:paddingHorizontal="32px"/>
        </skin.support.widget.SkinAutoFrameLayout>
        <com.wear.widget.ConnectionsSideBar
            android:layout_gravity="end"
            android:id="@+id/side_bar"
            android:layout_width="26dp"
            android:layout_height="444dp"
            android:layout_below="@+id/title_container"
            android:layout_alignParentEnd="true"
            app:layout_behavior="com.wear.ui.longDistance.behavior.ConnectionsSlideBehavior"
            app:letterColor="@color/lvs_ui_standard_systemText4"
            app:letterSize="10sp"
            app:selectColor="@color/lvs_ui_standard_systemTextAccent"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <TextView
        android:textSize="48px"
        android:textStyle="bold"
        android:textColor="@color/lvs_ui_standard_systemTextAccent"
        android:gravity="center"
        android:id="@+id/letter_hint_pop"
        android:background="@drawable/bg_letter_hint_pop"
        android:visibility="gone"
        android:layout_width="108px"
        android:layout_height="90px"
        android:text="A"
        android:paddingEnd="18px"
        android:layout_marginEnd="74px"
        android:layout_alignParentEnd="true"/>
</skin.support.widget.SkinAutoRelativeLayout>
