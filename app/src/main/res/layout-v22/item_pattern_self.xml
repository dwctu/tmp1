<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_root_anima"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginVertical="3dp">
    <include
        android:id="@+id/long_chat_create_layout"
        layout="@layout/long_chat_item_times"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/long_chat_item_selection"/>
        <View
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"/>
        <ProgressBar
            android:layout_gravity="center_vertical"
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginRight="4dp"/>
        <ImageView
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/block_sync"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/message_fail"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/pattern_message"
            android:visibility="visible"
            android:layout_width="@dimen/activity_msg_max_lenth"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_icon"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/chat_theme_pattern"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_content"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_toRightOf="@+id/img_icon"
                    android:paddingVertical="16dp">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/lvs_ui_standard_systemText"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/pattern_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Pattern"
                        android:singleLine="true"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/pattern_play_icon"
                            android:visibility="gone"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/content_icon_musicewave_playing"/>
                        <TextView
                            android:textSize="14sp"
                            android:id="@+id/pattern_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:id="@+id/view_line"
                    android:background="@drawable/chat_message_friend_notice_bg_default"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/ll_content"/>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/ll_pattern_button"
                    android:longClickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/view_line">
                    <TextView
                        android:textColor="@color/lvs_ui_standard_systemText"
                        android:gravity="center"
                        android:id="@+id/pattern_resend"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/common_resend"
                        android:layout_weight="1"
                        style="@style/lvs_ui_standard_text_body"/>
                    <View
                        android:id="@+id/pattern_vertical_line"
                        android:background="@color/lvs_ui_standard_systemStrokeRegular"
                        android:layout_width="1px"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:textColor="@color/lvs_ui_standard_systemText"
                        android:gravity="center"
                        android:id="@+id/pattern_save"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/common_save"
                        android:layout_weight="1"
                        style="@style/lvs_ui_standard_text_body"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_img"
            android:visibility="gone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/chat_avatar_default"
            android:scaleType="centerCrop"
            app:riv_border_color="#333333"
            app:riv_border_width="0dp"
            app:riv_corner_radius="4dp"
            app:riv_mutate_background="true"/>
    </LinearLayout>
</LinearLayout>
