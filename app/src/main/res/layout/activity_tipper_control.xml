<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:background="#25252d"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_top_bg"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:src="@drawable/pannel_mirrorlife_logo_bg"
        android:scaleType="fitXY"/>
    <TextView
        android:textSize="21sp"
        android:textColor="#ffff2d89"
        android:id="@+id/tv_pf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CamSoda"
        app:layout_constraintBottom_toBottomOf="@+id/iv_top_bg"
        app:layout_constraintLeft_toLeftOf="@+id/iv_top_bg"
        app:layout_constraintRight_toRightOf="@+id/iv_top_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_top_bg"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_toys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_tip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_top_bg"/>
    <TextView
        android:textSize="18sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:id="@+id/tv_times_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/takecontrol_timesup"
        app:layout_constraintBottom_toTopOf="@+id/tv_tip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:textSize="15sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:id="@+id/tv_tip"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/takecontrol_running"
        app:layout_constraintBottom_toBottomOf="@+id/v_center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/v_center"/>
    <TextView
        android:textSize="15sp"
        android:textColor="#ffff2d89"
        android:gravity="center"
        android:id="@+id/tv_time"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="00:00"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip"/>
    <View
        android:id="@+id/v_center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_center_1"/>
    <View
        android:id="@+id/v_center_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#ffffffff"
        android:gravity="center"
        android:id="@+id/tv_stop"
        android:background="@drawable/bnt_background_pink_all_corners_3"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="119dp"
        android:text="@string/common_exit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip"/>
    <TextView
        android:textSize="12sp"
        android:textColor="#ff6c7273"
        android:gravity="center"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="@string/run_app_in_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
