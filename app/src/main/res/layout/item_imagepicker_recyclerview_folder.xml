<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp">
    <ImageView
        android:id="@+id/iv_item_imageCover"
        android:background="@color/white"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/iv_item_imageCover"
        android:layout_centerVertical="true">
        <TextView
            android:textSize="17sp"
            android:textColor="@color/color_DBDBDB"
            android:ellipsize="end"
            android:id="@+id/tv_item_folderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:singleLine="true"
            android:maxLength="12"/>
        <TextView
            android:textSize="17sp"
            android:textColor="@color/color_6e6e6e"
            android:id="@+id/tv_item_imageSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_item_check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/darkmode_status_select"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <View
        android:background="@color/color_444444"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
