<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.widget.MyActionBar
        android:id="@+id/actionbar"
        android:background="#d1347e"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:back="true"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/button_create_control_link"
        app:withTab="false"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="130dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actionbar">
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/create_control_link_item_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/toysLinear"
                    android:layout_width="match_parent"
                    android:layout_height="59dp">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/create_control_link_item_title_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/common_patterns_toys"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"/>
                    <ImageView
                        android:id="@+id/enter_toys"
                        android:paddingLeft="4dp"
                        android:paddingTop="6dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="6dp"
                        android:layout_width="16dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/item_enter"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/create_control_link_item_content_color"
                        android:gravity="center"
                        android:id="@+id/toy_names"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_toLeftOf="@+id/enter_toys"
                        android:layout_alignTop="@+id/enter_toys"
                        android:layout_alignBottom="@+id/enter_toys"/>
                </RelativeLayout>
                <View
                    android:id="@+id/view1"
                    android:background="@color/create_control_link_line_color"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <RelativeLayout
                    android:id="@+id/durationLinear"
                    android:layout_width="match_parent"
                    android:layout_height="59dp">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/create_control_link_item_title_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/control_link_duration"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"/>
                    <ImageView
                        android:id="@+id/enter_duration"
                        android:paddingLeft="4dp"
                        android:paddingTop="6dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="6dp"
                        android:layout_width="16dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/item_enter"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/create_control_link_item_content_color"
                        android:gravity="center"
                        android:id="@+id/durationTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_toLeftOf="@+id/enter_duration"
                        android:layout_alignTop="@+id/enter_duration"
                        android:layout_alignBottom="@+id/enter_duration"/>
                </RelativeLayout>
                <View
                    android:id="@+id/view2"
                    android:background="@color/create_control_link_line_color"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <RelativeLayout
                    android:paddingBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/create_control_link_item_title_text_color"
                        android:id="@+id/repeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/control_link_auto_reactivate"/>
                    <TextView
                        android:textColor="@color/create_control_link_item_des_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:maxWidth="230dp"
                        android:text="@string/control_link_auto_reactivate_des"
                        android:layout_below="@+id/repeat"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <com.wear.widget.SwitchView
                        android:id="@+id/switchButton"
                        android:background="@null"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:textOn=""
                        android:textOff=""
                        android:thumb="@drawable/switch_custom_thumb_selector"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:track="@drawable/switch_custom_track_selector"/>
                </RelativeLayout>
                <View
                    android:background="@color/create_control_link_line_color"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <RelativeLayout
                    android:paddingBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/create_control_link_item_title_text_color"
                        android:id="@+id/control_permission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/control_permission"/>
                    <TextView
                        android:id="@+id/tv_permission_red"
                        android:background="@drawable/control_link_permission_tv"
                        android:visibility="gone"
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_6"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/control_permission"/>
                    <TextView
                        android:textColor="@color/create_control_link_item_des_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:maxWidth="230dp"
                        android:text="@string/control_link_control_permission"
                        android:layout_below="@+id/control_permission"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <com.wear.widget.SwitchView
                        android:id="@+id/control_link_permission"
                        android:background="@null"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:textOn=""
                        android:textOff=""
                        android:thumb="@drawable/switch_custom_thumb_selector"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:track="@drawable/switch_custom_track_selector"/>
                </RelativeLayout>
                <View
                    android:background="@color/create_control_link_line_color"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <RelativeLayout
                    android:paddingBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/create_control_link_item_title_text_color"
                        android:id="@+id/tv_share_public"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/control_link_share_publicly"
                        android:layout_marginStart="20dp"/>
                    <TextView
                        android:textColor="@color/create_control_link_item_des_color"
                        android:id="@+id/tv_share_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:maxWidth="230dp"
                        android:text="@string/control_link_share_publicly_des"
                        android:layout_below="@+id/tv_share_public"
                        android:layout_marginStart="20dp"
                        app:layout_constraintLeft_toLeftOf="parent"/>
                    <com.wear.widget.SwitchView
                        android:id="@+id/swi_share_public"
                        android:background="@null"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:textOn=""
                        android:textOff=""
                        android:thumb="@drawable/switch_custom_thumb_selector"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:track="@drawable/switch_custom_track_selector"/>
                </RelativeLayout>
                <View
                    android:background="@color/create_control_link_line_color"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/create_control_link_item_background"
                android:padding="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/create_control_link_item_title_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/control_link_friend_request"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/create_control_link_item_des_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="@string/control_link_friend_request_intro"/>
                <RelativeLayout
                    android:paddingBottom="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/create_control_link_item_title_text_color"
                        android:id="@+id/tv_send_to_the_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="@string/control_link_send_friend_request_switch"/>
                    <com.wear.widget.SwitchView
                        android:id="@+id/sch_send_to_the_other"
                        android:background="@null"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOn=""
                        android:textOff=""
                        android:thumb="@drawable/switch_custom_thumb_selector"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:track="@drawable/switch_custom_track_selector"/>
                </RelativeLayout>
                <RelativeLayout
                    android:paddingBottom="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/create_control_link_item_title_text_color"
                        android:id="@+id/tv_receive_from_the_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="@string/control_link_receive_friend_request_switch"/>
                    <com.wear.widget.SwitchView
                        android:id="@+id/sch_receive_from_the_other"
                        android:background="@null"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOn=""
                        android:textOff=""
                        android:thumb="@drawable/switch_custom_thumb_selector"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:track="@drawable/switch_custom_track_selector"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/descriptionLinear"
                android:background="@drawable/create_control_link_item_background"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_marginTop="@dimen/dp_12">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/create_control_link_item_title_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/pattern_description"/>
                <ImageView
                    android:id="@+id/enter_des"
                    android:paddingLeft="4dp"
                    android:paddingTop="6dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="6dp"
                    android:layout_width="16dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="@dimen/dp10"
                    android:src="@drawable/item_enter"
                    android:layout_alignParentRight="true"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/enter_des"
                    android:layout_alignTop="@+id/enter_des">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/create_control_link_item_content_color"
                        android:ellipsize="end"
                        android:id="@+id/description"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="185dp"
                        android:singleLine="true"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textColor="@color/create_control_link_item_content_color"
                        android:id="@+id/tags"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="150dp"
                        android:layout_alignTop="@+id/description"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/description"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <FrameLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <LinearLayout
            android:gravity="center"
            android:background="@drawable/control_libk_bottom_bg"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/save"
                android:background="@drawable/control_link_save_bg"
                android:layout_width="240dp"
                android:layout_height="44dp"
                android:text="@string/musci_pattern_save"/>
        </LinearLayout>
        <View
            android:layout_gravity="bottom"
            android:background="@color/lvs_ui_standard_systemBackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"/>
    </FrameLayout>
</FrameLayout>
