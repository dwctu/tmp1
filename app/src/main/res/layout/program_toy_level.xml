<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_primary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="17sp"
            android:textColor="@color/text_color_85"
            android:id="@+id/change_level_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/common_cancel"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textSize="17sp"
            android:textColor="@color/text_color_85"
            android:id="@+id/change_level_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/common_save"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:background="#676c6e"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.wear.widget.control.LevelControlView
            android:id="@+id/level_control_group"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_third_light"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tapTip"
            android:padding="5dp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/toy_control_tip_max_level"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
    </FrameLayout>
</LinearLayout>
