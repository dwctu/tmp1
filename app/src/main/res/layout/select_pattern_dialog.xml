<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/root_layout"
    android:background="@drawable/menu_small_buttom_bg"
    android:layout_width="120dp"
    android:layout_height="180dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/action_row_1"
            android:layout_width="120dp"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/action_row_1_icon"
                android:background="@drawable/icon_pattern_favorite_add"
                android:visibility="gone"
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:layout_marginLeft="4dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/text_primary_light"
                android:id="@+id/action_row_1_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/common_share"/>
        </LinearLayout>
        <View
            android:background="@color/text_secondary_light"
            style="@style/h_divider_line_light"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/action_row_2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="2dp">
            <ImageView
                android:id="@+id/action_row_2_icon"
                android:background="@drawable/icon_pattern_fshare"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="19dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="3dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/text_primary_light"
                android:id="@+id/action_row_2_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/common_rename"/>
        </LinearLayout>
        <View
            android:background="@color/text_secondary_light"
            style="@style/h_divider_line_light"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/action_row_3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="2dp">
            <ImageView
                android:id="@+id/action_row_3_icon"
                android:background="@drawable/icon_pattern_report"
                android:visibility="gone"
                android:layout_width="28dp"
                android:layout_height="24dp"
                android:layout_marginLeft="4dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/text_primary_light"
                android:id="@+id/action_row_3_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/common_delete"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
