<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">
        <ImageView
            android:id="@+id/background_image"
            android:background="@drawable/add_picture_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/pic_action"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/pic_notice"
                android:background="@drawable/me_help_picture_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"/>
            <TextView
                android:textSize="9sp"
                android:textColor="@color/text_gray"
                android:id="@+id/txt_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/picture_add"
                android:layout_centerVertical="true"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/pic_content"
            android:background="#f4f4f4"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <ImageView
        android:layout_gravity="top|right"
        android:id="@+id/pic_delete"
        android:background="@drawable/icon_addpicture_delete"
        android:visibility="gone"
        android:layout_width="25dp"
        android:layout_height="25dp"/>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/loading_compress"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:indeterminateDrawable="@anim/pb_loading"/>
    <SeekBar
        android:layout_gravity="bottom"
        android:id="@+id/upload_seek"
        android:padding="0dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:maxHeight="3dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/seekbar_define_style"
        android:minHeight="3dp"
        android:thumb="@null"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:splitTrack="false"
        android:progressBackgroundTintMode="src_over"/>
</FrameLayout>
