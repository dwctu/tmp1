<?xml version="1.0" encoding="utf-8"?>
<com.wear.widget.roundwidget.SkinRoundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lvs_ui_standard_systemBackground4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rTopRadius="16dp">
    <TextView
        android:textColor="@color/lvs_ui_standard_systemText"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/title_rating_popup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/lvs_ui_standard_text_title"/>
    <ImageView
        android:id="@+id/iv_close"
        android:padding="5dp"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/nav_login_close"
        android:layout_marginStart="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title"/>
    <View
        android:id="@+id/v_divider"
        android:background="@color/lvs_ui_standard_systemStrokeRegular"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
    <com.wear.widget.roundwidget.SkinRoundAutoLinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/ll_bad"
        android:background="@color/lvs_ui_standard_systemFillRegular"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ll_excellent"
        app:layout_constraintTop_toBottomOf="@+id/v_divider"
        app:rRadius="12dp"
        app:rStrokeColor="@color/lvs_ui_standard_systemRedRegular"
        app:rStrokeWidth="0dp">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_bad"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_fileName="score/bad/data.json"
            app:lottie_imageAssetsFolder="score/bad/images"
            app:lottie_loop="true"
            app:lottie_repeatMode="restart"/>
        <TextView
            android:textColor="@color/lvs_ui_standard_systemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/rating_popup_bad"
            style="@style/lvs_ui_standard_text_title2"/>
    </com.wear.widget.roundwidget.SkinRoundAutoLinearLayout>
    <com.wear.widget.roundwidget.SkinRoundAutoLinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/ll_excellent"
        android:background="@color/lvs_ui_standard_systemFillRegular"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="24dp"
        app:layout_constraintLeft_toRightOf="@+id/ll_bad"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ll_bad"
        app:rRadius="12dp"
        app:rStrokeColor="@color/lvs_ui_standard_systemRedRegular"
        app:rStrokeWidth="0dp">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_excellent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_fileName="score/excellent/data.json"
            app:lottie_imageAssetsFolder="score/excellent/images"
            app:lottie_loop="true"
            app:lottie_repeatMode="restart"/>
        <TextView
            android:textColor="@color/lvs_ui_standard_systemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/rating_popup_excellent"
            style="@style/lvs_ui_standard_text_title2"/>
    </com.wear.widget.roundwidget.SkinRoundAutoLinearLayout>
    <com.wear.widget.roundwidget.SkinRoundTextView
        android:enabled="false"
        android:id="@+id/btn_rate_now"
        android:layout_width="match_parent"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="10dp"
        android:text="@string/button_rate_now"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_bad"
        style="@style/lvs_ui_standard_button_brand_gradient_large"/>
</com.wear.widget.roundwidget.SkinRoundConstraintLayout>
