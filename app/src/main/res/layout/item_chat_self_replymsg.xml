<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cl_reply"
    android:paddingLeft="16dp"
    android:paddingTop="12dp"
    android:paddingRight="16dp"
    android:visibility="gone"
    android:clickable="true"
    android:layout_width="@dimen/activity_msg_max_lenth"
    android:layout_height="wrap_content"
    android:maxWidth="@dimen/activity_msg_max_lenth">
    <View
        android:id="@+id/v_left"
        android:background="@color/lvs_ui_standard_systemLDText7"
        android:layout_width="2px"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/ll_click"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ll_click"/>
    <com.wear.widget.InterceptLinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_click"
        android:background="@drawable/reply_msg_item_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/v_left"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="12sp"
            android:id="@+id/tv_reply_from_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="sadasdasdas"/>
        <com.wear.widget.GlassText
            android:textSize="12sp"
            android:textColor="@color/reply_msg_textcolor_self"
            android:id="@+id/tv_reply_msg"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:maxWidth="@dimen/activity_msg_max_lenth"
            android:text="sadasdasdas"
            android:maxLines="3"
            app:layout_constraintLeft_toRightOf="@+id/v_left"
            app:layout_constraintTop_toBottomOf="@+id/tv_reply_from_name"/>
        <com.wear.widget.RadiuImageView
            android:id="@+id/miv_reply_user_picture"
            android:visibility="gone"
            android:layout_width="39dp"
            android:layout_height="58dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/icon_edit"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:radius="3dp"/>
        <RelativeLayout
            android:id="@+id/rl_reply_video"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp">
            <com.wear.widget.RadiuImageView
                android:id="@+id/miv_reply_user_video_picture"
                android:visibility="visible"
                android:layout_width="70dp"
                android:layout_height="39dp"
                android:src="@drawable/icon_edit"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                app:radius="5dp"/>
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/chat_video_play_bg"
                android:paddingLeft="6dp"
                android:paddingTop="5dp"
                android:paddingRight="6dp"
                android:paddingBottom="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/chat_video_preview_play"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_reply_voice"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/reply_voice_icon"
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/lvs_ui_standard_systemLDText6"
                android:gravity="center"
                android:id="@+id/reply_voice_time"
                android:paddingLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:maxWidth="140dp"
                android:text="20"
                android:layout_toRightOf="@+id/reply_voice_icon"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/img_expired"
                android:visibility="gone"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_6"
                android:src="@drawable/home_pattern_sync_fail"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </com.wear.widget.InterceptLinearLayout>
    <View
        android:id="@+id/v_line_bottom"
        android:background="@color/lvs_ui_standard_systemLDText7"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="12dp"
        android:layout_marginRight="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_click"/>
</androidx.constraintlayout.widget.ConstraintLayout>
