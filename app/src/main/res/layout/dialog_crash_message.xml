<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_round_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="12sp"
            android:textColor="#a0000000"
            android:gravity="left"
            android:id="@+id/tv_text"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:paddingRight="5dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:minHeight="100dp"
            android:text=""/>
    </ScrollView>
    <ImageView
        android:background="#50000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/common_dialog_btn_text_selector"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_cancel"
            android:background="@drawable/common_dialog_btn_left_selector"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/common_exit"
            android:layout_weight="1"/>
        <View
            android:background="#50000000"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/common_dialog_btn_text_selector"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_confirm"
            android:background="@drawable/common_dialog_btn_left_selector"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/common_restartApp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
