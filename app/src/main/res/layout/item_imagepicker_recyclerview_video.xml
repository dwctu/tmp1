<?xml version="1.0" encoding="utf-8"?>
<com.wear.ui.longDistance.imagepicker.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/srl_item"
    android:padding="1dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.ui.longDistance.imagepicker.view.SquareImageView
        android:id="@+id/iv_item_image"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/iv_item_check"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/icon_image_checked"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:visibility="gone"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginRight="12dp"/>
        <TextView
            android:textSize="10dp"
            android:textColor="@color/white"
            android:id="@+id/tv_item_videoDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="4dp"
            android:text="00:00"/>
    </LinearLayout>
    <View
        android:id="@+id/v_bg"
        android:background="#e6555555"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</com.wear.ui.longDistance.imagepicker.view.SquareRelativeLayout>
