<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_ds_round_loayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginBottom="18dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.wear.widget.MediumBoldTextView
                android:textSize="17sp"
                android:textColor="@color/text_color_85"
                android:gravity="center"
                android:id="@+id/tv_room_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="24dp"
                android:text="Lovense Orgy"
                app:textStrokeWidth="semibold"/>
            <com.wear.widget.MediumBoldTextView
                android:textSize="15sp"
                android:textColor="@color/text_color_65"
                android:gravity="center"
                android:id="@+id/ds_wait_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="24dp"
                android:text="@string/ds_creator_waiting_window"
                app:textStrokeWidth="regular"/>
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:background="@drawable/group_ds_sub_avatar_bg"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="20dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_user_img"
                    android:background="@drawable/sub_avatar_border"
                    android:padding="2dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/chat_avatar_default"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"
                    app:riv_border_color="#333333"
                    app:riv_border_width="0dp"
                    app:riv_corner_radius="4dp"
                    app:riv_mutate_background="true"
                    app:riv_oval="false"/>
            </RelativeLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="24dp">
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/text_color_85"
                    android:ellipsize="end"
                    android:id="@+id/tv_s_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verna Schmidt"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#ffefaf00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ("/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#ffefaf00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ds_sub"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="#ffefaf00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=")"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_gravity="center_horizontal"
                android:id="@+id/rv_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="21dp"
                android:layout_marginRight="21dp"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_group_control"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="30dp">
        <skin.support.widget.SkinCompatTextView
            android:textSize="15sp"
            android:textColor="@color/text_color_85"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_decline"
            android:background="@drawable/shape_group_ds_decline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/common_decline"
            android:layout_weight="1"/>
        <View
            android:layout_width="11dp"
            android:layout_height="match_parent"/>
        <skin.support.widget.SkinCompatTextView
            android:textSize="15sp"
            android:textColor="@color/text_white_same_selector"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_confirm"
            android:background="@drawable/shape_group_ds_accept"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/common_accept"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_create_control"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_marginBottom="30dp">
        <TextView
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_create_cancel"
            android:background="@drawable/shape_group_ds_accept"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/common_cancel"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
