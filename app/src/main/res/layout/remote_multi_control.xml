<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.widget.MyActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:back="true"
        app:title="@string/closeRange_remoteControl"/>
    <View
        android:background="@color/remote_control_line"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.wear.widget.control.multiToys.MultiControlPanel
            android:id="@+id/multi_control_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.wear.widget.velvo.VelvoPreviewView
            android:layout_gravity="end"
            android:id="@+id/velvo_preview"
            android:visibility="gone"
            android:layout_width="120dp"
            android:layout_height="206dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/dp_16"
            android:elevation="3dp"
            android:backgroundTint="@color/transparent"
            app:cardCornerRadius="12dp"/>
    </FrameLayout>
</LinearLayout>
