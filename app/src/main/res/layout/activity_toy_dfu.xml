<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:SwitchButton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.widget.MyActionBar
        android:id="@+id/actionbar"
        android:background="#d1347e"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        SwitchButton:back="true"
        SwitchButton:title="@string/toy_update_title"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_marginTop="80dp">
                <ImageView
                    android:id="@+id/toy_dfu_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/content_icon_pink"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:id="@+id/toy_upgrade_fail"
                    android:visibility="gone"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/toy_upgrade_fail"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:id="@+id/toy_up_case_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/ll_dfu_toy_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">
                <com.wear.util.TextOverlayImageView
                    android:id="@+id/iv_dfu_toy_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_icon_battery_100"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/text_color_85"
                    android:id="@+id/tv_dfu_toy_battery"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="100%"/>
            </LinearLayout>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/orgy_background_color"
                android:gravity="center"
                android:id="@+id/tv_upgrade_status"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/text_color_85"
                android:gravity="center"
                android:id="@+id/toy_update_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:text="@string/toy_update_notice"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/text_color_85"
                android:gravity="center"
                android:id="@+id/toy_update_tip_take"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:text="@string/firmware_update_success_tip"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:id="@+id/tv_update_tip"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/dolce_fireware_update_notice"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/low_battery"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">
                <Button
                    android:enabled="true"
                    android:textColor="#25252d"
                    android:layout_gravity="center"
                    android:id="@+id/low_battery_update_btn"
                    android:background="@drawable/round_white_same_corners"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/toy_update_bnt"
                    android:layout_weight="1"/>
                <Button
                    android:enabled="true"
                    android:textColor="@color/text_white_same_selector"
                    android:layout_gravity="center"
                    android:id="@+id/low_battery_ok"
                    android:background="@drawable/red_status_button_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:text="@string/common_ok"
                    android:layout_weight="1"/>
            </LinearLayout>
            <Button
                android:enabled="true"
                android:textColor="@color/text_white_same_selector"
                android:layout_gravity="center"
                android:id="@+id/update_btn"
                android:background="@drawable/red_status_button_bg"
                android:layout_width="260dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:text="@string/toy_update_bnt"/>
            <TextView
                android:textColor="@color/text_color_65"
                android:gravity="center"
                android:id="@+id/uploading_title"
                android:padding="16dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dfu_status_uploading_title"/>
            <ProgressBar
                android:id="@+id/progressbar_uploading"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="62dp"
                android:max="100"
                android:progress="50"
                style="@style/ProgressBar.Horizontal"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
