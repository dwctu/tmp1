<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_round_bg"
    android:layout_width="311dp"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="17sp"
        android:textColor="@color/common_dialog_title_text_color"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="24dp"/>
    <ImageView
        android:id="@+id/iv_gif"
        android:layout_width="263dp"
        android:layout_height="148dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:src="@drawable/f01_notice"
        android:adjustViewBounds="true"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/common_dialog_content_text_color"
        android:gravity="center"
        android:id="@+id/tv_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="30dp"
        android:text="@string/f01_notice"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/done"
        android:background="@drawable/common_dialog_red_btn"
        android:visibility="gone"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="30dp"
        android:text="@string/got_it"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/ll_connect_again"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="30dp">
        <TextView
            android:textSize="15sp"
            android:textColor="@color/common_dialog_left_text_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_connect_again"
            android:background="@drawable/common_dialog_grey_btn"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:text="@string/dont_remind_me"
            android:layout_weight="1"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/common_dialog_right_text_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_connect_done"
            android:background="@drawable/common_dialog_red_btn"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="11dp"
            android:text="@string/got_it"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
