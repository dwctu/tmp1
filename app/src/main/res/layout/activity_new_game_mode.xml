<?xml version="1.0" encoding="utf-8"?>
<skin.support.constraint.SkinCompatConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/activity_new_game_mode_0"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.widget.MyActionBar
        android:id="@+id/actionbar"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:back="true"
        app:title="@string/game_mode"/>
    <TextView
        android:textSize="13sp"
        android:textColor="@color/top_tip_text_color"
        android:gravity="center"
        android:id="@+id/tv_connect_toy_tip"
        android:background="@color/top_tip_bg_color"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/notice_no_toy"
        app:layout_constraintTop_toBottomOf="@+id/actionbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_connect_toy_tip">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_lan_info"
            android:paddingLeft="16dp"
            android:paddingTop="24dp"
            android:paddingRight="16dp"
            android:paddingBottom="102dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <skin.support.constraint.SkinCompatConstraintLayout
                android:background="@drawable/shape_common_grey_radius4"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/text_color_b65_wo"
                    android:id="@+id/tv_lan_enable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/switch_enable_lan"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/text_color_45"
                    android:id="@+id/tv_lan_tip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/des_enable_lan"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/switch_lan_enable"
                    app:layout_constraintTop_toBottomOf="@+id/tv_lan_enable"/>
                <com.wear.widget.SwitchView
                    android:id="@+id/switch_lan_enable"
                    android:background="@null"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn=""
                    android:textOff=""
                    android:thumb="@drawable/switch_custom_thumb_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/switch_custom_track_selector"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_lan_tip"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_lan_enable"/>
                <skin.support.constraint.SkinCompatConstraintLayout
                    android:id="@+id/cl_info"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_lan_tip">
                    <View
                        android:id="@+id/divider"
                        android:background="@color/add_to_play_list_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/text_color_b65_wo"
                        android:id="@+id/tv_local_ip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/lan_local_ip"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider"/>
                    <TextView
                        android:textSize="13sp"
                        android:textColor="@color/text_color_45"
                        android:id="@+id/tv_local_ip_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_local_ip"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_local_ip"/>/&gt; 
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/text_color_b65_wo"
                        android:id="@+id/tv_port"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/lan_port"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_local_ip_value"/>
                    <TextView
                        android:textSize="13sp"
                        android:textColor="@color/text_color_45"
                        android:id="@+id/tv_port_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_port"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_port"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/text_color_b65_wo"
                        android:id="@+id/tv_ssl_port"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="12dp"
                        android:text="@string/lan_ssl_port"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_port"/>
                    <TextView
                        android:textSize="13sp"
                        android:textColor="@color/text_color_45"
                        android:id="@+id/tv_ssl_port_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_ssl_port"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_ssl_port"/>
                </skin.support.constraint.SkinCompatConstraintLayout>
            </skin.support.constraint.SkinCompatConstraintLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/ll_accept_control"
                android:background="@drawable/shape_common_grey_radius4"
                android:padding="20dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <ImageView
                    android:id="@+id/iv_accept_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_game_mode_accept_control_disable"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/game_mode_card_title_text_color_disable"
                    android:gravity="center"
                    android:id="@+id/tv_accept_control_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/games_control_toys1"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/game_mode_card_content_text_color_disable"
                    android:id="@+id/tv_accept_control_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/games_control_toys2"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/ll_accept_control_info"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@color/add_to_play_list_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/game_mode_card_content_text_color_disable"
                        android:id="@+id/tv_accept_control_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/games_control_toys4"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/ll_control"
                android:background="@drawable/shape_common_grey_radius4"
                android:padding="20dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <ImageView
                    android:id="@+id/iv_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_game_mode_control_disable"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/game_mode_card_title_text_color_disable"
                    android:gravity="center"
                    android:id="@+id/tv_control_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/toys_control_games1"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/game_mode_card_content_text_color_disable"
                    android:gravity="center"
                    android:id="@+id/tv_control_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/toys_control_games2"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/ll_control_info"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@color/add_to_play_list_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/game_mode_card_content_text_color_disable"
                        android:id="@+id/tv_control_tip"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/games_control_toys4"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_control_info_detail"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp">
                        <TextView
                            android:textSize="14sp"
                            android:textColor="@color/game_mode_card_title_text_color_enable"
                            android:id="@+id/tv_third_party_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <View
                            android:id="@+id/v_status"
                            android:background="@drawable/bg_game_mode_game_tip_disconnect"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_third_party_status"
                            app:layout_constraintRight_toLeftOf="@+id/tv_third_party_status"
                            app:layout_constraintTop_toTopOf="@+id/tv_third_party_status"/>
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/game_mode_card_content_text_color_enable"
                            android:id="@+id/tv_third_party_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_third_party_name"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_third_party_name"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <View
                        android:id="@+id/v_control_info_line"
                        android:background="@color/add_to_play_list_line"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_control_toys"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</skin.support.constraint.SkinCompatConstraintLayout>
