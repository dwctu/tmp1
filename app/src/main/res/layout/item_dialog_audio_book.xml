<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_cover_root"
        android:layout_width="0dp"
        android:layout_height="356dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="20dp"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="0dp"
        android:layout_height="356dp"
        android:src="@drawable/bg_0d_ffffff"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="20dp"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_audio_book_cover"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_cover_root"
        app:layout_constraintTop_toTopOf="@+id/iv_cover_root"
        app:riv_corner_radius="8dp"/>
    <TextView
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#d9ffffff"
        android:ellipsize="end"
        android:gravity="start"
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:maxLines="1"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintLeft_toRightOf="@+id/riv_audio_book_cover"
        app:layout_constraintRight_toLeftOf="@+id/iv_play"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12sp"
        android:textColor="#a6ffffff"
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_audio_book_play"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_duration"
        app:layout_constraintRight_toRightOf="@+id/iv_cover_root"
        app:layout_constraintTop_toTopOf="@+id/tv_title"/>
    <View
        android:id="@+id/view_line"
        android:background="#1affffff"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/riv_audio_book_cover"
        app:layout_constraintRight_toRightOf="@+id/iv_play"
        app:layout_constraintTop_toBottomOf="@+id/riv_audio_book_cover"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_cover_root"
        app:layout_constraintRight_toRightOf="@+id/iv_cover_root"
        app:layout_constraintTop_toBottomOf="@+id/view_line"/>
    <ScrollView
        android:id="@+id/scroll_view"
        android:fadingEdgeLength="30dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:overScrollMode="never"
        android:requiresFadingEdge="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/iv_cover_root"
        app:layout_constraintRight_toRightOf="@+id/iv_cover_root"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView">
        <TextView
            android:textColor="#d9ffffff"
            android:id="@+id/tv_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="4dp"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
