<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ac_main_dsguide_rl"
    android:background="@color/status_night_bg"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ac_main_dsguide_close"
        android:padding="16dp"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/pop_close"/>
    <com.wear.widget.llong.VerticalScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="77dp"
        android:fillViewport="true">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.wear.widget.MediumBoldTextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/ds_guide_title_color"
                android:id="@+id/ac_main_guide_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discover_speed_mode"
                app:textStrokeWidth="medium"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/ds_guide_comtent_color"
                android:gravity="center_horizontal"
                android:id="@+id/ac_main_guide_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/speed_mode_onboarding_des"/>
            <com.wear.widget.llong.DSGuideViewpager
                android:id="@+id/ac_main_dsguide_dsvp"
                android:background="@drawable/ds_guide_viewpager_bg"
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:layout_marginTop="24dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/trun"
                android:gravity="center"
                android:id="@+id/ac_main_dsguide_check"
                android:background="@drawable/standard_red_btn_bg"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="45dp"
                android:text="@string/common_ok"/>
        </LinearLayout>
    </com.wear.widget.llong.VerticalScrollView>
    <com.wear.widget.iwatcher.ImageWatcher
        android:id="@+id/v_image_watcher"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
