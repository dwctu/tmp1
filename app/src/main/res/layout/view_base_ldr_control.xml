<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_panel"
    android:background="@color/multi_control_panel_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_friend"
                android:fadingEdge="none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:overScrollMode="never"/>
            <View
                android:id="@+id/left_view"
                android:background="@drawable/gradual_grey_left_bg"
                android:layout_width="10dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/default_color"
                android:ellipsize="end"
                android:id="@+id/tv_friend_name"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:maxWidth="140dp"
                android:text="@string/control_link_controllee"
                android:maxLines="1"
                android:layout_below="@+id/rv_friend"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_ldr_control_states"
            android:layout_width="25dp"
            android:layout_height="14dp"
            android:src="@drawable/chat_sync_direction_interactive"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_self"
                android:fadingEdge="none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:overScrollMode="never"/>
            <View
                android:id="@+id/right_view"
                android:background="@drawable/gradual_grey_right_bg"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/default_color"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/tv_me"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:maxWidth="140dp"
                android:text="@string/str_me"
                android:maxLines="1"
                android:layout_below="@+id/rv_self"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:background="@color/chat_control_board_line"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>
