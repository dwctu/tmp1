<?xml version="1.0" encoding="utf-8"?>
<com.wear.widget.roundwidget.SkinRoundAutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lvs_ui_standard_systemBackground"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.widget.MyActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:back="true"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/patterns_menu_report"/>
    <com.wear.widget.roundwidget.SkinRoundAutoLinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="50dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/icon_report_success"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/lvs_ui_standard_systemText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/report_submit_succeeded"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/lvs_ui_standard_systemTextAccent"
            android:gravity="center"
            android:id="@+id/tv_ok"
            android:background="@drawable/bg_fa4bd4_r8"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="30dp"
            android:text="@string/common_ok"/>
    </com.wear.widget.roundwidget.SkinRoundAutoLinearLayout>
</com.wear.widget.roundwidget.SkinRoundAutoRelativeLayout>
