<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <skin.support.constraint.SkinCompatConstraintLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/toy_name"
            android:background="@drawable/shape_item_fys"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:maxLines="2"
            android:textAlignment="center"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeMinTextSize="4sp"
            app:autoSizeStepGranularity="3sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/nora_rotation_icon"
            android:visibility="gone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/chat_traditional_rotation_clockwise_blue"
            app:layout_constraintBottom_toBottomOf="@+id/toy_name"
            app:layout_constraintLeft_toRightOf="@+id/toy_name"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/batter_feedback_linear"
            android:background="@drawable/shape_fys_ellipse"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginLeft="42dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/feedback"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/battery"
                android:visibility="gone"
                android:layout_width="14dp"
                android:layout_height="8dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </LinearLayout>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_animation"
            android:padding="6dp"
            android:visibility="visible"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginStart="-5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_repeatMode="restart"/>
    </skin.support.constraint.SkinCompatConstraintLayout>
</LinearLayout>
