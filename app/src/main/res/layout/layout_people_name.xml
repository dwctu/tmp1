<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.wear.widget.MediumBoldTextView
        android:textSize="16sp"
        android:textColor="@color/text_color_85"
        android:ellipsize="end"
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        app:textStrokeWidth="medium"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_toy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="11sp"
            android:textColor="@color/select_text_color"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/toy_type_name_1"
            android:background="@drawable/default_toy_bg"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Ambi"
            android:singleLine="true"/>
        <TextView
            android:textSize="11sp"
            android:textColor="@color/select_text_color"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/toy_type_name_2"
            android:background="@drawable/default_toy_bg"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Hush"
            android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>
