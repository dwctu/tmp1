<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <skin.support.constraint.SkinCompatConstraintLayout
        android:layout_gravity="bottom"
        android:background="@drawable/picview_for_birthday_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.wear.widget.MediumBoldTextView
            android:textColor="@color/text_color_25252D_A5FFFFFF"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/me_user_infor_birthday"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textStrokeWidth="medium"/>
        <FrameLayout
            android:id="@+id/layout_for_picker_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"/>
        <RelativeLayout
            android:id="@+id/top_action_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_for_picker_view">
            <Button
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/text_color_25252D_A5FFFFFF"
                android:gravity="center"
                android:id="@+id/iv_cancel"
                android:background="@drawable/birth_day_pickerview_left_button"
                android:padding="8dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:text="@string/common_cancel"
                android:layout_centerVertical="true"
                android:layout_marginStart="17dp"
                android:layout_alignParentStart="true"/>
            <Button
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/d8ffffff"
                android:gravity="center"
                android:id="@+id/tv_finish"
                android:background="@drawable/help_button_pink_corners_selector"
                android:padding="8dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="17dp"
                android:text="@string/common_ok"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                app:textStrokeWidth="medium"/>
        </RelativeLayout>
    </skin.support.constraint.SkinCompatConstraintLayout>
</FrameLayout>
