<?xml version="1.0" encoding="utf-8"?>
<skin.support.constraint.SkinCompatConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/riv_user_cover"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round="4dp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/status_night_bg"
        android:id="@+id/tv_my_self_message"
        android:background="@drawable/chat_gpt_message_right_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:lineSpacingExtra="2dp"
        android:paddingStart="16dp"
        android:paddingEnd="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toRightOf="@+id/guide_line"
        app:layout_constraintRight_toLeftOf="@+id/riv_user_cover"
        app:layout_constraintTop_toTopOf="@+id/riv_user_cover"
        app:layout_constraintWidth_default="wrap"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="71dp"/>
    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/block_sync"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/message_fail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_my_self_message"
        app:layout_constraintTop_toTopOf="parent"/>
</skin.support.constraint.SkinCompatConstraintLayout>
