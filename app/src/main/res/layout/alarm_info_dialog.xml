<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#00000000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/root_layout"
        android:background="@drawable/common_dialog_round_gray_layout"
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/common_dialog_round_top_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textSize="17sp"
                android:textStyle="normal"
                android:textColor="@color/text_primary_light"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/chat_alarm_info_title"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="4dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/text_primary_light"
                    android:gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="@string/chat_alarm_info_time"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/text_secondary_light"
                    android:gravity="center_vertical"
                    android:id="@+id/alarm_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="06:27 AM"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/text_primary_light"
                    android:gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="@string/chat_alarm_info_type"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/text_secondary_light"
                    android:gravity="center_vertical"
                    android:id="@+id/alarm_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Pattern"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/text_primary_light"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="@string/chat_alarm_info_name"
                    android:singleLine="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/text_secondary_light"
                    android:gravity="center_vertical"
                    android:id="@+id/alarm_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Chris Alarm"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/text_primary_light"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="@string/chat_alarm_info_repeat"
                    android:singleLine="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/text_secondary_light"
                    android:gravity="center_vertical"
                    android:id="@+id/alarm_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Wed, Fri, Sat"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
