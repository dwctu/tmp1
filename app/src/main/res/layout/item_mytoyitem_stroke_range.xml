<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_54">
    <ImageView
        android:id="@+id/mytoy_item1_funcationbg"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@drawable/new_toy_stroke"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/dp_12"
        android:textColor="@color/diff_text_color_65"
        android:id="@+id/mytoy_item1_funcationname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@+id/mytoy_item1_funcationbg"
        app:layout_constraintTop_toTopOf="@+id/mytoy_item1_funcationbg"/>
    <View
        android:background="@color/report_edittext_box_stroke_color"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/mytoy_stroke_seekbar"
        app:layout_constraintLeft_toLeftOf="@+id/mytoy_stroke_seekbar"/>
    <com.wear.widget.seekbar.RangeSeekBar
        android:id="@+id/mytoy_stroke_seekbar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/mytoy_item1_funcationbg"
        app:layout_constraintRight_toRightOf="parent"
        app:rsb_gravity="bottom"
        app:rsb_indicator_background_color="@color/item_pattern_toy_name_2"
        app:rsb_indicator_height="30dp"
        app:rsb_indicator_show_mode="showWhenTouch"
        app:rsb_indicator_text_color="@color/stroke_control_text_select_color"
        app:rsb_indicator_text_size="13sp"
        app:rsb_indicator_width="40dp"
        app:rsb_max="100"
        app:rsb_min="0"
        app:rsb_min_interval="20"
        app:rsb_mode="range"
        app:rsb_progress_color="@color/stroke_control_text_select_color"
        app:rsb_progress_default_color="@color/report_edittext_box_stroke_color"
        app:rsb_progress_height="3dp"
        app:rsb_thumb_drawable="@drawable/thumb_toy_stroke_range"
        app:rsb_thumb_height="20dp"
        app:rsb_thumb_width="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
