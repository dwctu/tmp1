<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/item_group_manager_member_0"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.wear.widget.RadiuImageView
        android:id="@+id/iv_user_img"
        android:tag="binding_1"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:src="@drawable/chat_avatar_default"
        android:scaleType="centerCrop"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="5dp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/text_color_group_manager"
        android:ellipsize="end"
        android:id="@+id/tv_user_name"
        android:tag="binding_2"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/dp_16"
        app:layout_constraintBottom_toBottomOf="@+id/iv_user_img"
        app:layout_constraintLeft_toRightOf="@+id/iv_user_img"
        app:layout_constraintTop_toTopOf="@+id/iv_user_img"/>
</androidx.constraintlayout.widget.ConstraintLayout>
