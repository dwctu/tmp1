<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_max_view"
    android:background="@drawable/bg_voice"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="top|center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_friend_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/chat_avatar_default"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            app:riv_border_color="#333333"
            app:riv_border_width="0dp"
            app:riv_corner_radius="4dp"
            app:riv_mutate_background="true"
            app:riv_oval="true"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/tv_friend_name"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Super Rebecca"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/tip_background_light"
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/tv_calling_notice"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/chat_waitAcceptance_notice"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/tip_background_light"
            android:layout_gravity="top|center_horizontal"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/chat_waitAcceptance_notice"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/layout_receive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp">
        <ImageView
            android:id="@+id/iv_reject"
            android:background="@drawable/content_icon_cutphone_big"
            android:visibility="invisible"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            app:layout_constraintRight_toLeftOf="@+id/iv_cancel"
            app:layout_constraintTop_toTopOf="@+id/iv_cancel"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/tv_reject"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/common_reject"
            app:layout_constraintLeft_toLeftOf="@+id/iv_reject"
            app:layout_constraintRight_toRightOf="@+id/iv_reject"
            app:layout_constraintTop_toBottomOf="@+id/iv_reject"/>
        <ImageView
            android:id="@+id/iv_cancel"
            android:background="@drawable/content_icon_cutphone_big"
            android:visibility="visible"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/tv_cancel"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/common_cancel"
            app:layout_constraintLeft_toLeftOf="@+id/iv_cancel"
            app:layout_constraintRight_toRightOf="@+id/iv_cancel"
            app:layout_constraintTop_toBottomOf="@+id/iv_cancel"/>
        <ImageView
            android:id="@+id/iv_accept"
            android:background="@drawable/content_icon_phone_accept"
            android:visibility="invisible"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_cancel"
            app:layout_constraintTop_toTopOf="@+id/iv_cancel"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/tv_accept"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/common_accept"
            app:layout_constraintLeft_toLeftOf="@+id/iv_accept"
            app:layout_constraintRight_toRightOf="@+id/iv_accept"
            app:layout_constraintTop_toBottomOf="@+id/iv_accept"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
