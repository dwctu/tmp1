<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/screan_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <skin.support.constraint.SkinCompatConstraintLayout
        android:orientation="vertical"
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView"
            android:background="@drawable/startup_logo"
            android:layout_width="71dp"
            android:layout_height="71dp"
            bar:layout_constraintBottom_toBottomOf="parent"
            bar:layout_constraintLeft_toLeftOf="parent"
            bar:layout_constraintRight_toRightOf="parent"
            bar:layout_constraintTop_toTopOf="parent"
            bar:layout_constraintVertical_bias="0.42"/>
        <ImageView
            android:id="@+id/textView3"
            android:background="@drawable/lovense_newlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            bar:layout_constraintLeft_toLeftOf="parent"
            bar:layout_constraintRight_toRightOf="parent"
            bar:layout_constraintTop_toBottomOf="@+id/imageView"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_progress"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            bar:layout_constraintBottom_toBottomOf="parent"
            bar:layout_constraintLeft_toLeftOf="parent"
            bar:layout_constraintRight_toRightOf="parent"
            bar:layout_constraintTop_toBottomOf="@+id/textView3">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color_100"
                android:gravity="center"
                android:id="@+id/tv_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="0%"/>
            <ProgressBar
                android:layout_gravity="center_vertical"
                android:id="@+id/proBar"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="5dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/pb_pd_sp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        </LinearLayout>
    </skin.support.constraint.SkinCompatConstraintLayout>
    <RelativeLayout
        android:id="@+id/rl_activity"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/dot_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_activity"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_skip"
        android:background="@drawable/flash_skip"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:minWidth="90dp"
        android:text="@string/common_skip"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
