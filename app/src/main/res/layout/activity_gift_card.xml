<?xml version="1.0" encoding="utf-8"?>
<skin.support.constraint.SkinCompatConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <skin.support.constraint.SkinCompatConstraintLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/nav_back"
            android:background="@color/transparent"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/nav_back_selector"
            android:layout_marginStart="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.wear.widget.MediumBoldTextView
            android:textSize="18sp"
            android:textColor="@color/text_color_85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gift_tittle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textStrokeWidth="semibold"/>
    </skin.support.constraint.SkinCompatConstraintLayout>
    <skin.support.constraint.SkinCompatConstraintLayout
        android:id="@+id/guide_page"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar_layout">
        <skin.support.constraint.SkinCompatConstraintLayout
            android:id="@+id/innner_layout"
            android:background="@drawable/gift_card_bg"
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/text_color_85"
                android:id="@+id/inner_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/gift_onboarding_txt1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/gift_image"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/gift_gift"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inner_title"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color_85"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/gift_onboarding_txt2"
                app:layout_constraintBottom_toBottomOf="@+id/gift_image"
                app:layout_constraintLeft_toRightOf="@+id/gift_image"
                app:layout_constraintTop_toTopOf="@+id/gift_image"/>
            <ImageView
                android:id="@+id/checkout_image"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/gift_checkout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gift_image"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color_85"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/gift_onboarding_txt3"
                app:layout_constraintBottom_toBottomOf="@+id/checkout_image"
                app:layout_constraintLeft_toRightOf="@+id/checkout_image"
                app:layout_constraintTop_toTopOf="@+id/checkout_image"/>
            <ImageView
                android:id="@+id/share_image"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/gift_share"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkout_image"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color_85"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/gift_onboarding_txt4"
                app:layout_constraintBottom_toBottomOf="@+id/share_image"
                app:layout_constraintLeft_toRightOf="@+id/share_image"
                app:layout_constraintTop_toTopOf="@+id/share_image"/>
            <ImageView
                android:id="@+id/wait_image"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/gift_wait"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/share_image"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color_85"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/gift_onboarding_txt5"
                app:layout_constraintBottom_toBottomOf="@+id/wait_image"
                app:layout_constraintLeft_toRightOf="@+id/wait_image"
                app:layout_constraintTop_toTopOf="@+id/wait_image"/>
            <ImageView
                android:layout_width="0.5dp"
                android:layout_height="15dp"
                android:src="@drawable/gift_path"
                app:layout_constraintBottom_toTopOf="@+id/checkout_image"
                app:layout_constraintLeft_toLeftOf="@+id/gift_image"
                app:layout_constraintRight_toRightOf="@+id/gift_image"
                app:layout_constraintTop_toBottomOf="@+id/gift_image"/>
            <ImageView
                android:layout_width="0.5dp"
                android:layout_height="15dp"
                android:src="@drawable/gift_path"
                app:layout_constraintBottom_toTopOf="@+id/share_image"
                app:layout_constraintLeft_toLeftOf="@+id/gift_image"
                app:layout_constraintRight_toRightOf="@+id/gift_image"
                app:layout_constraintTop_toBottomOf="@+id/checkout_image"/>
            <ImageView
                android:layout_width="0.5dp"
                android:layout_height="15dp"
                android:src="@drawable/gift_path"
                app:layout_constraintBottom_toTopOf="@+id/wait_image"
                app:layout_constraintLeft_toLeftOf="@+id/gift_image"
                app:layout_constraintRight_toRightOf="@+id/gift_image"
                app:layout_constraintTop_toBottomOf="@+id/share_image"/>
        </skin.support.constraint.SkinCompatConstraintLayout>
        <skin.support.widget.SkinCompatButton
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/start_gift"
            android:background="@drawable/red_status_button_bg"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:text="@string/button_create_gift1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/innner_layout"/>
    </skin.support.constraint.SkinCompatConstraintLayout>
    <skin.support.constraint.SkinCompatConstraintLayout
        android:id="@+id/gift_list"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar_layout">
        <skin.support.constraint.SkinCompatConstraintLayout
            android:id="@+id/set_new_gift_layout"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/set_new_gift_image"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/set_new_gift"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/diff_select_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/button_create_gift2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/set_new_gift_image"
                app:layout_constraintTop_toTopOf="parent"/>
        </skin.support.constraint.SkinCompatConstraintLayout>
        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/smartRefresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/set_new_gift_layout">
            <com.scwang.smart.refresh.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"/>
            <com.scwang.smart.refresh.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    </skin.support.constraint.SkinCompatConstraintLayout>
</skin.support.constraint.SkinCompatConstraintLayout>
