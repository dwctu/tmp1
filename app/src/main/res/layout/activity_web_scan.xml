<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.wear.widget.AutoScannerView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/scan_album_iv"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginRight="39dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/scan_album"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <com.wear.widget.MyActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:back="true"
        app:title="@string/qrcode_menu"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#ffffffff"
        android:id="@+id/tv_input_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Input QR code number"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
