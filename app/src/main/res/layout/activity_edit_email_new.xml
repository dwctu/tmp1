<?xml version="1.0" encoding="utf-8"?>
<skin.support.widget.SkinAutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bar="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <skin.support.widget.SkinAutoFrameLayout
        android:id="@+id/login_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/test_2"
            android:adjustViewBounds="true"/>
        <skin.support.widget.SkinAutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="110px">
            <ImageView
                android:id="@+id/actionbar_back"
                android:background="@color/transparent"
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_marginLeft="32px"
                android:src="@drawable/nav_back_selector"
                android:layout_centerVertical="true"/>
            <com.wear.widget.MediumBoldTextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_color_85"
                android:gravity="center"
                android:id="@+id/actionbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/button_edit"
                android:singleLine="true"
                android:layout_centerInParent="true"/>
        </skin.support.widget.SkinAutoRelativeLayout>
        <com.wear.widget.MyActionBar
            android:id="@+id/actionbar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:src="@drawable/test_2"
            bar:back="true"
            bar:title="@string/button_edit"/>
    </skin.support.widget.SkinAutoFrameLayout>
    <skin.support.widget.SkinAutoRelativeLayout
        android:orientation="vertical"
        android:id="@+id/forget_above_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="274px">
        <skin.support.widget.SkinAutoLinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px">
            <TextView
                android:textSize="40px"
                android:textStyle="bold"
                android:textColor="@color/text_color_85"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_email"/>
        </skin.support.widget.SkinAutoLinearLayout>
        <skin.support.widget.SkinAutoLinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px">
            <skin.support.widget.SkinAutoRelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120px">
                <skin.support.widget.SkinAutoRelativeLayout
                    android:id="@+id/email_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textSize="30px"
                        android:textColor="@color/text_color_100"
                        android:textColorHint="@color/text_color_25"
                        android:id="@+id/email"
                        android:background="@color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/common_email"
                        android:singleLine="true"/>
                    <ImageView
                        android:id="@+id/email_content_delete"
                        android:visibility="visible"
                        android:layout_width="36px"
                        android:layout_height="36px"
                        android:src="@drawable/icon_psw_clear"
                        android:layout_alignParentRight="true"/>
                </skin.support.widget.SkinAutoRelativeLayout>
                <View
                    android:background="@color/lvs_ui_standard_systemStrokeRegular"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="41px"
                    android:layout_below="@+id/email_content_layout"/>
                <TextView
                    android:textSize="24px"
                    android:textColor="@color/top_tip_text_color"
                    android:id="@+id/tv_email_notice"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="89px"
                    android:text="@string/system_email_error"/>
            </skin.support.widget.SkinAutoRelativeLayout>
        </skin.support.widget.SkinAutoLinearLayout>
        <com.wear.widget.roundwidget.SkinRoundTextView
            android:enabled="false"
            android:textSize="32px"
            android:textColor="@color/text_white_login_selector"
            android:gravity="center"
            android:id="@+id/send_email_btn"
            android:visibility="visible"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginLeft="80px"
            android:layout_marginTop="311px"
            android:layout_marginRight="80px"
            android:text="@string/common_confirm"
            style="@style/lvs_ui_standard_brand_gradient_radius_20px"/>
    </skin.support.widget.SkinAutoRelativeLayout>
</skin.support.widget.SkinAutoRelativeLayout>
