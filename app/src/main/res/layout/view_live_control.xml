<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/fl_live_layout"
    android:background="@color/tab_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/v_be_controled_live"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_white_to_pink_selector"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tv_control_time_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="00:00"
                android:drawableLeft="@drawable/chat_toolbar_end"
                android:drawablePadding="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <skin.support.constraint.SkinCompatConstraintLayout
        android:id="@+id/v_control_live_no_toys"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <TextView
            android:textSize="14sp"
            android:textColor="#ffacb6b7"
            android:gravity="center"
            android:id="@+id/tv_live_control_tip"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/live_control_panel_partner_no_toy"
            bar:layout_constraintBottom_toBottomOf="parent"
            bar:layout_constraintLeft_toLeftOf="parent"
            bar:layout_constraintRight_toLeftOf="@+id/v_live_control_line"
            bar:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/v_live_control_line"
            android:background="@color/control_board_line_7"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            bar:layout_constraintLeft_toRightOf="@+id/tv_live_control_tip"
            bar:layout_constraintRight_toLeftOf="@+id/ll_live_control_time"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_live_control_time"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            bar:layout_constraintLeft_toRightOf="@+id/v_live_control_line"
            bar:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:id="@+id/iv_control_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/chat_toolbar_end"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/text_tray_to_pink_selector"
                android:gravity="center"
                android:id="@+id/tv_control_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="00:00"/>
        </LinearLayout>
    </skin.support.constraint.SkinCompatConstraintLayout>
    <LinearLayout
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@color/control_board_line_7"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <com.wear.widget.control.CurveLineTimeView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
    </LinearLayout>
    <com.wear.widget.control.multiToys.MultiControlPanel
        android:id="@+id/multipanel_livecontrol"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>
