<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <skin.support.constraint.SkinCompatConstraintLayout
        android:layout_gravity="center"
        android:background="@drawable/dialog_frozen_background"
        android:layout_width="match_parent"
        android:layout_height="194dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">
        <TextView
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/account_frozen_title_text_color"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/activate_success_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/account_frozen_dialog_content_text_color"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="24dp"
            android:text="@string/activate_success_des"
            app:layout_constraintTop_toBottomOf="@+id/title"/>
        <Button
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/button"
            android:background="@drawable/red_natural_button_bg"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_marginBottom="30dp"
            android:text="@string/got_it"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </skin.support.constraint.SkinCompatConstraintLayout>
</LinearLayout>
