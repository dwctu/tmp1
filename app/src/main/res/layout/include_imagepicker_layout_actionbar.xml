<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_222222"
    android:layout_width="match_parent"
    android:layout_height="44dp">
    <ImageView
        android:id="@+id/iv_actionBar_back"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/choose_album_close"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ll_main_imageFolders"
        android:background="@drawable/imagepicke_title_item_bg_16r"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_centerInParent="true">
        <com.wear.widget.MediumBoldTextView
            android:textSize="17sp"
            android:textColor="@color/color_DBDBDB"
            android:gravity="center"
            android:id="@+id/tv_main_imageFolders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/all_media"/>
        <ImageView
            android:paddingLeft="12dp"
            android:paddingRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/choose_album_dropdown"
            android:layout_centerVertical="true"/>
    </LinearLayout>
</RelativeLayout>
