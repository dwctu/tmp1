<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:background="@drawable/patterns_card_bg"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:gravity="center_vertical"
            android:id="@+id/cons_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/hiden_linear"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/iv_under_preview"
                    android:visibility="visible"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/audit"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.wear.widget.MarqueeTextView
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/pattern_text_color"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical"
                    android:id="@+id/pattern_single_title"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="16dp"
                    android:text="asdasdasdasdas"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintLeft_toRightOf="@+id/iv_under_preview"
                    app:layout_constraintTop_toTopOf="parent"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/ll_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    app:layout_constraintTop_toBottomOf="@+id/pattern_single_title">
                    <ImageView
                        android:id="@+id/iv_lovense_pick"
                        android:visibility="visible"
                        android:layout_width="77dp"
                        android:layout_height="28dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/lovense_recommend_lable"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="9sp"
                        android:textColor="@color/item_pattern_toy_name_text"
                        android:gravity="center"
                        android:id="@+id/pattern_toy_name"
                        android:background="@drawable/bg_pattern_toy_name_2"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginEnd="8dp"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_pattern_toy_name_2"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:layout_marginStart="6dp">
                        <ImageView
                            android:id="@+id/toy_type_1"
                            android:layout_width="22dp"
                            android:layout_height="18dp"
                            android:src="@drawable/icon_label_toy_function_vibration"/>
                        <ImageView
                            android:id="@+id/toy_type_2"
                            android:visibility="gone"
                            android:layout_width="22dp"
                            android:layout_height="18dp"
                            android:src="@drawable/icon_label_toy_function_vibration_2"/>
                        <ImageView
                            android:id="@+id/toy_type_3"
                            android:visibility="gone"
                            android:layout_width="22dp"
                            android:layout_height="18dp"
                            android:src="@drawable/dark_home_wave"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:id="@+id/hiden_linear"
                android:paddingLeft="10dp"
                android:paddingTop="16dp"
                android:paddingRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/pattern_hiden"
                    android:visibility="gone"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/home_pattern_more"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/ll_pattern"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/cons_2"
            app:layout_constraintTop_toBottomOf="@+id/cons_1">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.wear.widget.control.NewCurveLineView
                    android:id="@+id/pattern_play_curve"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/pattern_play"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/pattern_pattern_play"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="@color/text_color_b45_wo"
                        android:id="@+id/pattern_times"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="00:21"
                        android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:gravity="center_vertical"
            android:id="@+id/cons_2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pattern_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/home_pattern_avatar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/pattern_text_color"
                android:ellipsize="marquee"
                android:id="@+id/rv_pattern_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:maxWidth="150dp"
                android:text="@string/common_anonymous"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                app:layout_constraintLeft_toRightOf="@+id/pattern_icon"
                app:layout_constraintTop_toTopOf="@+id/pattern_icon"/>
            <TextView
                android:textSize="10sp"
                android:textColor="@color/text_color_b45_wo"
                android:id="@+id/tv_pattern_send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="2dp"
                android:text="1 hour ago"
                app:layout_constraintLeft_toRightOf="@+id/pattern_icon"
                app:layout_constraintTop_toBottomOf="@+id/rv_pattern_auth"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/like_linear"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/iv_pattern_like_loading"
                    android:background="@drawable/pattern_like_loading"
                    android:visibility="gone"
                    android:layout_width="22dp"
                    android:layout_height="22dp"/>
                <ImageView
                    android:id="@+id/iv_pattern_like"
                    android:background="@drawable/patterns_patternlist_favorite"
                    android:visibility="gone"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/pattern_text_color"
                    android:gravity="center"
                    android:id="@+id/tv_pattern_like_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="7945"
                    app:layout_constraintBottom_toBottomOf="@+id/view"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/down_linear"
                android:padding="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="122dp"
                android:layout_centerVertical="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/like_linear"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/iv_pattern_download"
                    android:background="@drawable/patterns_patternlist_download"
                    android:visibility="gone"
                    android:layout_width="18dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/text_color_85"
                    android:gravity="center"
                    android:id="@+id/tv_pattern_download_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/view"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        android:id="@+id/removed_top_view"
        android:background="@drawable/round_glass_layout"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <ImageView
            android:id="@+id/iv_removed_action"
            android:layout_width="45dp"
            android:layout_height="38dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/icon_pattern_delete_white"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/patterns_no_available"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/data_loading_view"
        android:background="@drawable/round_glass_white_layout_radius_18"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:alpha="1">
        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:indeterminateDrawable="@anim/pb_pink_loading"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</FrameLayout>
