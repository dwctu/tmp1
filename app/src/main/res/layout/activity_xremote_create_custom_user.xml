<?xml version="1.0" encoding="utf-8"?>
<skin.support.constraint.SkinCompatConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.widget.MyActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:back="true"
        app:title="@string/custom_name"
        app:withTab="false"/>
    <EditText
        android:textSize="16sp"
        android:textColor="@color/text_color_85"
        android:id="@+id/et_name"
        android:background="@drawable/shape_xremote_edittext_custom_name_normal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginTop="24dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@+id/actionbar"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/text_color_25"
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="0/20"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_name"
        app:layout_constraintRight_toRightOf="@+id/et_name"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_color_b45_wo"
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/tip_enter_custom_name"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@+id/et_name"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/textcolor_low_volume_prompt"
        android:id="@+id/tv_warning"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/custom_name_length"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_tip"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/defaut_theme_i_control_content_text_color"
        android:gravity="center"
        android:id="@+id/btn_confirm"
        android:background="@drawable/selector_btn_common_pink_radius5"
        android:layout_width="155dp"
        android:layout_height="45dp"
        android:layout_marginTop="89dp"
        android:text="@string/common_confirm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_name"/>
</skin.support.constraint.SkinCompatConstraintLayout>
