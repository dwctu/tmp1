<?xml version="1.0" encoding="utf-8"?>
<skin.support.widget.SkinAutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <skin.support.widget.SkinAutoFrameLayout
        android:id="@+id/login_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <skin.support.widget.SkinAutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="110px">
            <ImageView
                android:id="@+id/actionbar_back"
                android:background="@color/transparent"
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_marginLeft="32px"
                android:src="@drawable/nav_back_selector"
                android:layout_centerVertical="true"/>
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_color_85"
                android:gravity="center"
                android:id="@+id/actionbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/settings_my_account"
                android:singleLine="true"
                android:layout_centerInParent="true"/>
        </skin.support.widget.SkinAutoRelativeLayout>
        <com.wear.widget.MyActionBar
            android:id="@+id/actionbar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:src="@drawable/test_2"
            bar:back="true"
            bar:title="@string/settings_my_account"/>
    </skin.support.widget.SkinAutoFrameLayout>
    <skin.support.widget.SkinAutoLinearLayout
        android:orientation="vertical"
        android:background="@drawable/new_ui_pattern_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32px"
        android:layout_marginTop="48px"
        android:layout_marginRight="32px"
        android:layout_below="@+id/login_top_layout">
        <skin.support.widget.SkinAutoRelativeLayout
            android:id="@+id/setting_change_password"
            android:background="@drawable/card_status_bg_top"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="118px">
            <TextView
                android:textSize="32px"
                android:textColor="@color/text_color_b65_wo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_password_change"
                android:layout_centerVertical="true"/>
            <View
                android:id="@+id/my_account_reddot_change"
                android:background="@drawable/red_dot_new_bg"
                android:layout_width="16px"
                android:layout_height="16px"
                android:layout_marginRight="40px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/item_enter"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </skin.support.widget.SkinAutoRelativeLayout>
        <ImageView
            android:background="@color/divider_color"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"/>
        <skin.support.widget.SkinAutoRelativeLayout
            android:id="@+id/setting_passcode_settings"
            android:background="@drawable/card_status_bg_bottom"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="118px">
            <TextView
                android:textSize="32px"
                android:textColor="@color/text_color_b65_wo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_passcode_change"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/item_enter"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </skin.support.widget.SkinAutoRelativeLayout>
        <ImageView
            android:background="@color/divider_color"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"/>
        <skin.support.widget.SkinAutoRelativeLayout
            android:id="@+id/setting_delete_account"
            android:background="@drawable/card_status_bg_bottom"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="118px">
            <TextView
                android:textSize="32px"
                android:textColor="@color/text_color_b65_wo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_delete_account"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/item_enter"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </skin.support.widget.SkinAutoRelativeLayout>
    </skin.support.widget.SkinAutoLinearLayout>
</skin.support.widget.SkinAutoRelativeLayout>
