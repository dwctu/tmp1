<?xml version="1.0" encoding="utf-8"?>
<com.wear.ui.longDistance.imagepicker.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/srl_item"
    android:padding="1dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.ui.longDistance.imagepicker.view.SquareImageView
        android:id="@+id/iv_item_image"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/iv_item_check"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/icon_image_checked"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:id="@+id/iv_item_gif"
        android:visibility="gone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="6dp"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"/>
    <View
        android:id="@+id/v_bg"
        android:background="#d9555555"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</com.wear.ui.longDistance.imagepicker.view.SquareRelativeLayout>
