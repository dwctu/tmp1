<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:background="@drawable/list_no_radius_status_bg"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="36dp"
        android:layout_height="36dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/chat_avatar_default"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            app:riv_border_color="#d8d8d8"
            app:riv_border_width="0dp"
            app:riv_corner_radius="4dp"
            app:riv_mutate_background="true"
            app:riv_oval="false"/>
        <FrameLayout
            android:layout_gravity="right"
            android:id="@+id/fl_online_status"
            android:background="@drawable/chat_status_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="top|right"
                android:id="@+id/online_status"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/status_available"/>
        </FrameLayout>
    </FrameLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp">
            <com.wear.widget.MediumBoldTextView
                android:textSize="16sp"
                android:textColor="@color/text_color_85"
                android:ellipsize="end"
                android:id="@+id/contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                app:textStrokeWidth="medium"/>
            <TextView
                android:textSize="13sp"
                android:textColor="@color/text_color_b45_wo"
                android:ellipsize="end"
                android:id="@+id/tv_emotion"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:maxLines="1"/>
        </LinearLayout>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_official"
            android:paddingTop="@dimen/dp_5"
            android:visibility="gone"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/tag_official"/>
    </LinearLayout>
</LinearLayout>
