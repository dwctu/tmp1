<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/common_dialog_background_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/v_line">
        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_color_85"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="25dp"
            android:text="@string/str_led_color_title"/>
        <GridView
            android:id="@+id/gv_list"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:listSelector="#00000000"
            android:horizontalSpacing="14dp"
            android:verticalSpacing="20dp"
            android:numColumns="3"/>
    </LinearLayout>
    <View
        android:id="@+id/v_line"
        android:background="@color/window_background_light"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@+id/tv_cancel"/>
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_85"
        android:gravity="center"
        android:id="@+id/tv_cancel"
        android:background="@color/common_dialog_background_color"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/common_cancel"
        android:layout_alignParentBottom="true"/>
</LinearLayout>
