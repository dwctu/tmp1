<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_start_page"
            android:background="@color/bg"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/sp_14"
                android:textColor="@color/textcolor_fragment_music_applist_start_page_texttitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/music_required_permission"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/item_fragment_music_applist_start_page"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <FrameLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/icon_notifications"/>
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/textcolor_fragment_music_applist_start_page_texttitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/music_required_permission1"
                            android:drawablePadding="@dimen/dp10"
                            android:layout_marginStart="@dimen/dp10"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_gravity="right"
                        android:id="@+id/iv_has_permission1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/choose_item_select"/>
                </FrameLayout>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/textcolor_fragment_music_applist_start_page_textdes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/music_required_permission_des1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/item_fragment_music_applist_start_page"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <FrameLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/icon_recording"/>
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/textcolor_fragment_music_applist_start_page_texttitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/music_required_permission2"
                            android:drawablePadding="@dimen/dp10"
                            android:layout_marginStart="@dimen/dp10"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_gravity="right"
                        android:id="@+id/iv_has_permission2"
                        android:visibility="gone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/choose_item_select"/>
                </FrameLayout>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/textcolor_fragment_music_applist_start_page_textdes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/music_required_permission_des2"/>
            </LinearLayout>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/textcolor_fragment_music_applist_start_page_button"
                android:gravity="center"
                android:id="@+id/tv_set_up_now"
                android:background="@drawable/bg_fragment_music_applist_start_page_button"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="87dp"
                android:layout_marginTop="59dp"
                android:layout_marginRight="87dp"
                android:text="@string/button_set_up"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedscrollview_music"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="525dp">
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/iv_music_image"
                    android:layout_width="185dp"
                    android:layout_height="135dp"
                    android:layout_marginTop="65dp"
                    android:src="@drawable/music_default_musicapps_illustrator"
                    android:scaleType="fitXY"/>
                <TextView
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/music_app_list_text_bold"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_music_how"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/des_how_use"/>
                <TextView
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:textColor="@color/music_app_list_text_nomal"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_step_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="66dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="66dp"
                    android:text="@string/des_step_one"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:id="@+id/ll_app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginStart="66dp"
                    android:layout_marginEnd="66dp">
                    <LinearLayout
                        android:id="@+id/ll_music_appname_1"
                        android:background="@drawable/bg_app_name"
                        android:paddingLeft="16dp"
                        android:paddingTop="6dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:id="@+id/music_applogo_1"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/textcolor_app_name"
                            android:id="@+id/music_appname_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Spotify"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_app_name_more"
                        android:background="@drawable/bg_app_name"
                        android:paddingLeft="16dp"
                        android:paddingTop="6dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="13sp"
                            android:textColor="@color/textcolor_app_name"
                            android:id="@+id/music_appname_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Choose..."/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/music_app_list_text_nomal"
                    android:id="@+id/tv_step_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="66dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="66dp"
                    android:text="@string/des_step_two"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/music_app_list_text_nomal"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_step_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="66dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="66dp"
                    android:text="@string/des_step_three"/>
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:id="@+id/ll_applogo_vibrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/music_applogo_vibrate"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/music_app_list_text_bold"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/tv_music_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/des_vibrating_music_app"
                        android:layout_marginStart="@dimen/dp10"/>
                </LinearLayout>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/music_app_list_text_nomal"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_music_souc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="25dp"
                    android:text="@string/des_music_app"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/music_app_list_button_text"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_already_opened"
                    android:background="@drawable/music_applist_button_bg"
                    android:visibility="visible"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/button_already_opened"/>
            </LinearLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
