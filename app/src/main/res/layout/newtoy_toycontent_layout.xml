<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/newtoy_scrollview"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <skin.support.constraint.SkinCompatConstraintLayout
        android:id="@+id/warn_multiple_toys_tips"
        android:background="@color/multiple_warn_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/multiple_warn_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:text="@string/tip_recommend_use_speed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/icon_warn_multiple_close"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/icon_warn_multiple_close"
            android:padding="@dimen/dp_12"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/icon_warn_multiple_toys_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </skin.support.constraint.SkinCompatConstraintLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/bt_layout"
        android:background="@drawable/conner8_colorf7f8f9"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_16"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_below="@+id/warn_multiple_toys_tips">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/diff_text_color_65"
            android:id="@+id/bt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/des_bluetooth_disabled"
            android:drawablePadding="@dimen/dp_5"
            app:drawableStartCompat="@drawable/toy_mytoy1"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/diff_text_color_65"
            android:id="@+id/newtoy_bldisabledtv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_layout">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/diff_text_color_65"
                android:gravity="center"
                android:id="@+id/my_toy_title_tv"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/account_toy"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/dp_12"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/newtoy_recyclermytoy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_below="@+id/my_toy_title_tv"
                android:nestedScrollingEnabled="false"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/search_toy_title_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_below="@+id/newtoy_recyclermytoy">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/diff_text_color_65"
                    android:id="@+id/newtoy_searchtoytitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="@string/title_available_toys"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:id="@+id/bt_disabled_iv"
                    android:visibility="gone"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/icon_unbluetooth"
                    android:layout_marginEnd="@dimen/dp_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/bt_searing_iv"
                    android:visibility="visible"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginEnd="@dimen/dp_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:lottie_fileName="scan_light_data.json"
                    app:lottie_loop="true"
                    app:lottie_repeatMode="restart"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/multi_toys_connect_now_text_color"
                    android:id="@+id/newtoy_rescan"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_rescan"
                    android:layout_marginEnd="@dimen/dp_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/newtoy_recyclersearchtoy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:layout_below="@+id/search_toy_title_layout"
                android:nestedScrollingEnabled="false"/>
            <RelativeLayout
                android:id="@+id/bt_disabled_layout"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/newtoy_recyclersearchtoy"
                android:layout_alignParentTop="true"
                android:backgroundTint="@color/vm_color_fill_01"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
