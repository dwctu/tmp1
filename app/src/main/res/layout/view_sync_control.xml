<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/tab_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:orientation="vertical"
        android:id="@+id/fl_master_sync_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <skin.support.constraint.SkinCompatConstraintLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/line_long_distance_control_horizontal"
            android:showDividers="end|middle|beginning">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_control_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/line_long_distance_control_vertical"
                android:showDividers="end|middle|beginning"
                app:layout_constraintTop_toTopOf="parent">
                <com.wear.widget.control.multiToys.MultiControlPanel
                    android:id="@+id/multi_control_panel"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
                <skin.support.widget.SkinCompatLinearLayout
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:id="@+id/chat_live_bottom_pattern_layer"
                    android:background="@color/tab_bg"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="232dp">
                    <ListView
                        android:id="@+id/chat_live_bottom_pattern_list"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:divider="@null"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/pattern_list_empty"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:textSize="18sp"
                            android:textColor="@color/text_color_85"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:text="@string/pattern_no"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <View
                        android:background="@color/control_board_line_7"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                </skin.support.widget.SkinCompatLinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/ll_controlled"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:divider="@drawable/line_long_distance_control_horizontal"
                    android:showDividers="end|middle|beginning">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/ll_control_time_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="2dp"
                            android:src="@drawable/chat_toolbar_end"/>
                        <TextView
                            android:textSize="12sp"
                            android:textColor="@color/default_color"
                            android:gravity="center"
                            android:id="@+id/tv_control_time_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="00:00"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/ll_be_controlled_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="2dp"
                            android:src="@drawable/chat_toolbar_partner_controlled"/>
                        <TextView
                            android:textSize="12sp"
                            android:textColor="@color/default_color"
                            android:gravity="center"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/patterns_begin_control"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/touch_control_horizontal_bottom"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:divider="@drawable/line_long_distance_control_horizontal"
                    android:showDividers="middle|beginning">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/ll_control_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="150">
                        <ImageView
                            android:id="@+id/iv_control_close"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="4dp"
                            android:src="@drawable/chat_toolbar_end"/>
                        <TextView
                            android:textSize="12sp"
                            android:textColor="@color/default_color"
                            android:gravity="center"
                            android:id="@+id/tv_control_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="00:00"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="@color/default_color"
                        android:gravity="center"
                        android:id="@+id/tv_tochange_control_remote"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/sync_panel_mirror"
                        android:drawableTop="@drawable/chat_toolbar_mirror_click"
                        android:drawablePadding="4dp"
                        android:layout_weight="177"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="@color/default_color"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:id="@+id/tv_tochange_control_dlr"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:visibility="visible"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/chat_control_tochange_ldr"
                        android:singleLine="true"
                        android:drawableTop="@drawable/sync_longdistance"
                        android:drawablePadding="4dp"
                        android:layout_weight="250"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:id="@+id/ll_pattern"
                        android:layout_width="83dp"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/ll_pattern_sync"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10">
                            <ImageView
                                android:id="@+id/iv_pattern_sync"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginBottom="4dp"
                                android:src="@drawable/chat_toolbar_pattern"/>
                            <TextView
                                android:textSize="11sp"
                                android:textColor="@color/default_color"
                                android:gravity="center"
                                android:id="@+id/tv_sync_pattern"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/message_notification_type_pattern"/>
                        </LinearLayout>
                        <ImageView
                            android:textSize="11sp"
                            android:textColor="@color/default_color"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/iv_show_or_close_more"
                            android:layout_width="36dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/chat_toolbar_flod"
                            android:text="00:00"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <com.wear.widget.control.NewLDRPanel
                android:id="@+id/ldr_panel"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toTopOf="parent"/>
        </skin.support.constraint.SkinCompatConstraintLayout>
        <include
            android:id="@+id/sync_ldr_layer"
            android:visibility="gone"
            layout="@layout/layout_sync_control_ldr"/>
    </FrameLayout>
</LinearLayout>
