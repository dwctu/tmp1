<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_primary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.widget.MyActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        bar:back="true"
        bar:title="@string/closeRange_remoteControl"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.wear.widget.control.multiToys.MultiControlPanel
            android:id="@+id/multi_control_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.wear.widget.velvo.VelvoPreviewView
            android:layout_gravity="end"
            android:id="@+id/velvo_preview"
            android:visibility="gone"
            android:layout_width="120dp"
            android:layout_height="206dp"
            android:layout_marginTop="8dp"
            android:elevation="3dp"
            android:backgroundTint="@color/transparent"
            bar:cardCornerRadius="12dp"/>
    </FrameLayout>
</LinearLayout>
