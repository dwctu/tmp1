<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/music_control_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/view_hide"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="13sp"
            android:textColor="@color/textcolor_low_volume_prompt"
            android:gravity="center"
            android:id="@+id/tv_low_volume_prompt"
            android:background="@drawable/bg_low_volume_prompt"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tip_zero_volume"
            android:layout_above="@+id/fl_music"/>
        <include
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fl_music"
            layout="@layout/layout_sensitivity_be_replaced"/>
        <FrameLayout
            android:id="@+id/fl_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/music_play_layer_out_simple"
                android:background="@color/music_layout_bar"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <View
                    android:id="@+id/music_bar_line"
                    android:background="@color/divider"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <com.wear.widget.UnDragSeekBar
                    android:id="@+id/music_seek_out_simple"
                    android:padding="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:maxHeight="3dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/music_seekbar_style"
                    android:minHeight="3dp"
                    android:thumb="@null"
                    android:layout_below="@+id/music_bar_line"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:splitTrack="false"
                    android:progressBackgroundTintMode="src_over"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:layout_alignParentLeft="true">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/music_cover_1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/content_icon_music_cover"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius="4dp"/>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp">
                            <TextView
                                android:textSize="16sp"
                                android:textColor="@color/text_color_85"
                                android:id="@+id/music_title_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Music Title MusicMusic Music Music Music Music "
                                android:singleLine="true"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/text_color_45"
                                android:id="@+id/music_artist_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Artist"
                                android:singleLine="true"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true">
                        <View
                            android:background="@color/divider"
                            android:visibility="gone"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"/>
                        <FrameLayout
                            android:layout_width="28dp"
                            android:layout_height="28dp">
                            <ProgressBar
                                android:id="@+id/music_loading_1"
                                android:visibility="invisible"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:indeterminateDrawable="@anim/pb_loading"/>
                            <com.wear.widget.BaseImageButton
                                android:id="@+id/music_play_1"
                                android:background="@drawable/music_minibar_pause_new"
                                android:visibility="visible"
                                android:clickable="true"
                                android:layout_width="28dp"
                                android:layout_height="28dp"/>
                        </FrameLayout>
                        <ImageView
                            android:background="@drawable/music_minibar_pullup_new"
                            android:clickable="false"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="20dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/music_play_layer_out"
                android:background="#40000000"
                android:visibility="visible"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/music_play_layer"
                    android:background="@color/tab_bg"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <com.wear.widget.RoateImageView
                                android:id="@+id/music_cover"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/content_icon_music_cover"
                                app:riv_corner_radius="25dp"/>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="45dp">
                                <TextView
                                    android:textSize="16sp"
                                    android:textColor="@color/select_text_color"
                                    android:id="@+id/music_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Music Title"
                                    android:singleLine="true"/>
                                <TextView
                                    android:textSize="@dimen/sp_14"
                                    android:textColor="@color/text_color_85"
                                    android:id="@+id/music_artist"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Artist"
                                    android:singleLine="true"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true">
                            <ImageView
                                android:id="@+id/music_hide"
                                android:clickable="true"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/music_minibar_pulldown_new"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:id="@+id/ll_music_seek"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="20dp">
                            <TextView
                                android:textColor="@color/text_color_85"
                                android:id="@+id/music_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text="00:00"/>
                            <SeekBar
                                android:id="@+id/music_seek"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:maxHeight="3dp"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/seekbar_define_style"
                                android:minHeight="3dp"
                                android:thumb="@drawable/icon_musci_playing_circle"
                                android:thumbOffset="2dp"
                                android:layout_weight="1"
                                android:splitTrack="false"
                                android:progressBackgroundTintMode="src_over"/>
                            <TextView
                                android:textColor="@color/text_color_85"
                                android:id="@+id/music_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:text="2:34"/>
                        </LinearLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:id="@+id/ll_universal_bg"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/ll_control"
                                    android:layout_centerVertical="true">
                                    <com.wear.widget.BaseImageButton
                                        android:id="@+id/ib_play_music_model"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"/>
                                </RelativeLayout>
                                <LinearLayout
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:id="@+id/ll_control"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="10dp"
                                    android:paddingRight="20dp"
                                    android:paddingBottom="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true">
                                    <com.wear.widget.BaseImageButton
                                        android:id="@+id/music_prev"
                                        android:background="@drawable/toolbar_icon_music_pre"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <FrameLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <ProgressBar
                                            android:layout_gravity="center"
                                            android:id="@+id/music_loading"
                                            android:visibility="invisible"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:indeterminateDrawable="@anim/pb_loading"/>
                                        <com.wear.widget.BaseImageButton
                                            android:layout_gravity="center_vertical"
                                            android:id="@+id/music_play"
                                            android:background="@drawable/toolbar_icon_music_pausebig"
                                            android:visibility="visible"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="25dp"
                                            android:layout_marginRight="25dp"/>
                                    </FrameLayout>
                                    <com.wear.widget.BaseImageButton
                                        android:id="@+id/music_next"
                                        android:background="@drawable/toolbar_icon_music_next"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <RelativeLayout
                                    android:id="@+id/rl_icon_music_panel_record"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/ll_control"
                                    android:layout_centerVertical="true">
                                    <com.wear.widget.BaseImageButton
                                        android:id="@+id/bib_icon_music_panel_record"
                                        android:paddingTop="10dp"
                                        android:paddingBottom="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icon_music_panel_record"
                                        android:layout_centerInParent="true"/>
                                </RelativeLayout>
                            </RelativeLayout>
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:id="@+id/ll_app_list_bg"
                                android:background="@color/toolbar_music_play_layer_bg"
                                android:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/toolbar_icon_grey_music_loop"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="12dp"/>
                                <LinearLayout
                                    android:layout_gravity="center"
                                    android:background="@drawable/toolbar_icon_grey_music_ll_bg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp">
                                    <ImageView
                                        android:layout_gravity="center_vertical"
                                        android:id="@+id/iv_previous_song"
                                        android:layout_width="22dp"
                                        android:layout_height="22dp"
                                        android:src="@drawable/music_icon_previous_disable"
                                        android:layout_marginStart="32dp"
                                        android:layout_marginEnd="48dp"/>
                                    <com.wear.widget.BaseImageButton
                                        android:layout_gravity="center_vertical"
                                        android:id="@+id/bib_music_pause"
                                        android:background="@drawable/pattern_play_pause"
                                        android:visibility="visible"
                                        android:layout_width="22dp"
                                        android:layout_height="22dp"/>
                                    <ImageView
                                        android:layout_gravity="center_vertical"
                                        android:id="@+id/iv_next_song"
                                        android:layout_width="22dp"
                                        android:layout_height="22dp"
                                        android:src="@drawable/music_icon_next_disable"
                                        android:layout_marginStart="48dp"
                                        android:layout_marginEnd="32dp"/>
                                </LinearLayout>
                                <FrameLayout
                                    android:id="@+id/fl_sound_record"
                                    android:background="@drawable/toolbar_icon_sound_record_bg"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginEnd="16dp">
                                    <ImageView
                                        android:layout_gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="18dp"
                                        android:src="@drawable/toolbar_icon_grey_music_record"/>
                                </FrameLayout>
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="@color/color_primary"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="55dp">
                        <TextView
                            android:textSize="17sp"
                            android:textColor="@color/text_third_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/common_sensitivity"/>
                        <SeekBar
                            android:id="@+id/sensitivity_seek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="3dp"
                            android:max="100"
                            android:progress="75"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/v_seekbar_progress_left"
                            android:minHeight="3dp"
                            android:thumb="@drawable/chat_sensitivity_adjust"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
    <LinearLayout
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:id="@+id/confirm_from_layer"
        android:background="#a0000000"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_color_85"
            android:background="@color/tab_bg"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/music_add_to_playlist_hint"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/music_create_layout_pop"
            android:background="@color/tab_bg"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/content_button_add"
                    android:layout_width="65dp"
                    android:layout_height="65dp"/>
            </LinearLayout>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/color_accent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/music_create_playlist"/>
        </LinearLayout>
        <View
            android:background="@color/line_color_19"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="0dp"/>
        <com.yydcdut.sdlv.SlideAndDragListView
            android:id="@+id/music_playlist_add_list"
            android:background="@color/tab_bg"
            android:layout_width="match_parent"
            android:layout_height="220dp"/>
    </LinearLayout>
</RelativeLayout>
