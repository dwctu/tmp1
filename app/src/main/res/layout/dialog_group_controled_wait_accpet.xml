<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_round_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/iv_user_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="38dp"
        android:src="@drawable/chat_avatar_default"
        android:scaleType="centerCrop"
        app:riv_border_color="#333333"
        app:riv_border_width="0dp"
        app:riv_corner_radius="4dp"
        app:riv_mutate_background="true"
        app:riv_oval="false"/>
    <TextView
        android:textSize="17sp"
        android:textColor="@color/common_dialog_left_text_color"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp"
        android:text=""
        android:maxLines="1"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/help_block"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:text="@string/group_chat_sync_invitation"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/text_color_45"
        android:gravity="center"
        android:id="@+id/tv_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="24dp"
        android:text="5 other people are in the call"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_gravity="center_horizontal"
        android:id="@+id/rv_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp">
        <TextView
            android:textSize="15sp"
            android:textColor="@color/common_dialog_left_text_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_cancel"
            android:background="@drawable/common_dialog_btn_left"
            android:layout_width="126dp"
            android:layout_height="36dp"
            android:text="@string/common_decline"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/common_dialog_right_text_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_confirm"
            android:background="@drawable/common_dialog_btn_right"
            android:clickable="true"
            android:layout_width="126dp"
            android:layout_height="36dp"
            android:layout_marginLeft="11dp"
            android:text="@string/common_accept"/>
    </LinearLayout>
</LinearLayout>
