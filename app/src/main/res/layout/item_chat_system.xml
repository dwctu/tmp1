<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:tag="layout/item_chat_system_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp">
    <TextView
        android:textSize="12sp"
        android:textColor="#adb6b8"
        android:id="@+id/chat_item_time_create"
        android:background="@drawable/chat_system_message_bg"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="4dp"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="4dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_new_message_notice"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/defaut_theme_tip_defaut_text_color"
        android:gravity="center"
        android:id="@+id/tv_sync_message"
        android:tag="binding_1"
        android:background="@drawable/chat_system_message_bg"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_4"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_4"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"/>
</LinearLayout>
