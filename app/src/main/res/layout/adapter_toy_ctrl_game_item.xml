<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/card_status_bg"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp">
    <TextView
        android:textSize="16sp"
        android:textColor="@color/diff_text_color_65"
        android:ellipsize="middle"
        android:id="@+id/tv_game_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/game_model_adapter_name_default"
        android:singleLine="true"
        android:layout_weight="1"
        android:layout_centerVertical="true"/>
    <View
        android:id="@+id/v_tip"
        android:background="@drawable/bg_game_mode_game_tip_connected"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginRight="8dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_color_b45_wo"
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toy_connected"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</LinearLayout>
