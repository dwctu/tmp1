<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/window_background_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.widget.MyActionBar
        android:id="@+id/actionbar"
        android:background="#d1347e"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        bar:back="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:background="@color/bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <EditText
                android:textColor="@color/text_color_b65_wo"
                android:textColorHint="@color/text_secondary_light"
                android:id="@+id/current_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edit_alarm"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:textCursorDrawable="@null"/>
            <ImageView
                android:id="@+id/content_delete"
                android:visibility="gone"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/content_icon_delete_input"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView
            android:background="#30000000"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"/>
    </LinearLayout>
</LinearLayout>
