<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/screan_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.wear.widget.MyActionBar
            android:id="@+id/actionbar"
            android:background="#d1347e"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            bar:back="false"
            bar:title="Chat History"/>
        <View
            android:id="@+id/v_top_line"
            android:background="@color/chat_top_board_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/actionbar"/>
        <ImageView
            android:id="@+id/chat_background"
            android:background="@color/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_below="@+id/v_top_line"/>
        <View
            android:id="@+id/v_glass"
            android:background="@drawable/glass_layout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/v_top_line"/>
        <com.wear.widget.CustomSwipeRefreshLayout
            android:id="@+id/swipe_refresh_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/actionbar">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chat_message_list"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="#00000000"
                android:stackFromBottom="true"
                android:transcriptMode="normal"
                android:divider="@null"
                android:dividerHeight="8dp"
                android:choiceMode="none"/>
        </com.wear.widget.CustomSwipeRefreshLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/pic_view_layer"
            android:background="#a0000000"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="gone"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                android:id="@+id/pic_big_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="matrix"/>
            <ProgressBar
                android:layout_gravity="center"
                android:id="@+id/pic_big_loading"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <com.wear.widget.ChatEditText
        android:textSize="16sp"
        android:textColor="@color/text_color_85"
        android:gravity="center"
        android:id="@+id/chat_message"
        android:background="@drawable/default_chat_edit_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:maxHeight="100dp"
        android:minHeight="40dp"
        android:text=""
        android:layout_toLeftOf="@+id/chat_emojis"
        android:layout_toRightOf="@+id/chat_voice"
        android:layout_centerInParent="true"
        android:inputType="textCapSentences"
        android:imeOptions="actionSend"
        android:textCursorDrawable="@null"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>
    <FrameLayout
        android:gravity="center_vertical"
        android:id="@+id/chat_more_layer"
        android:background="@color/tab_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/chat_emojis_panel"
            layout="@layout/long_chat_emojis_layer"/>
    </FrameLayout>
    <com.wear.widget.EmojisToastView
        android:id="@+id/chat_emojis_tosat_layer"
        android:background="#00000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
