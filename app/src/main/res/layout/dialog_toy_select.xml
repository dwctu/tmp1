<?xml version="1.0" encoding="utf-8"?>
<skin.support.constraint.SkinCompatConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:background="@drawable/dialog_toy_select_background"
    android:paddingBottom="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dialog_toy_select_title_text_color"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:text="@string/common_patterns_toys"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/dialog_toy_select_item_text_color"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginRight="25dp"
        android:text="@string/common_all"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/view"
        android:background="@color/dialog_toy_select_line_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <TextView
        android:textColor="@color/dialog_toy_select_common_text_color"
        android:id="@+id/left_title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="28dp"
        android:text="@string/toy_connected"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/connectedRecyclerView"
        android:paddingLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="96dp"
        android:foregroundGravity="center_horizontal"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@+id/left_title_1"/>
    <TextView
        android:textColor="@color/dialog_toy_select_common_text_color"
        android:id="@+id/left_title_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="28dp"
        android:text="@string/toy_disconnected_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connectedRecyclerView"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/disconnectedRecyclerView"
        android:paddingLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="96dp"
        android:foregroundGravity="center_horizontal"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@+id/left_title_2"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/dialog_toy_select_title_text_color"
        android:gravity="center"
        android:id="@+id/cancel_btn"
        android:background="@drawable/dialog_toy_select_cancel_background"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/common_cancel"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ok_btn"
        app:layout_constraintTop_toBottomOf="@+id/disconnectedRecyclerView"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/dialog_toy_select_ok_color"
        android:gravity="center"
        android:id="@+id/ok_btn"
        android:background="@drawable/dialog_toy_select_ok_background"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/common_ok"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/cancel_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disconnectedRecyclerView"/>
</skin.support.constraint.SkinCompatConstraintLayout>
