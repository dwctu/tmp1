<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_round_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="15sp"
        android:textColor="@color/common_dialog_content_text_color"
        android:gravity="center"
        android:id="@+id/tv_text"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/common_dialog_right_text_color"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_confirm"
        android:background="@drawable/common_dialog_btn_right"
        android:clickable="true"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="@string/common_ok"/>
</LinearLayout>
