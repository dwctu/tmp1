<?xml version="1.0" encoding="utf-8"?>
<skin.support.widget.SkinCompatScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <skin.support.widget.SkinAutoLinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.wear.widget.roundwidget.SkinRoundButton
            android:id="@+id/btn_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:text="颜色"
            app:rRadius="500px"
            style="@style/lvs_ui_standard_button_stroke_large"/>
        <com.wear.widget.roundwidget.SkinRoundButton
            android:id="@+id/btn_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:text="字体"
            app:rRadius="500px"
            style="@style/lvs_ui_standard_button_stroke_large"/>
        <com.wear.widget.roundwidget.SkinRoundButton
            android:id="@+id/btn_shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:text="阴影"
            app:rRadius="500px"
            style="@style/lvs_ui_standard_button_stroke_large"/>
        <com.wear.widget.roundwidget.SkinRoundButton
            android:id="@+id/btn_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:text="圆角"
            app:rRadius="500px"
            style="@style/lvs_ui_standard_button_stroke_large"/>
        <com.wear.widget.roundwidget.SkinRoundButton
            android:id="@+id/btn_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:text="按钮"
            app:rRadius="500px"
            style="@style/lvs_ui_standard_button_stroke_large"/>
    </skin.support.widget.SkinAutoLinearLayout>
</skin.support.widget.SkinCompatScrollView>
