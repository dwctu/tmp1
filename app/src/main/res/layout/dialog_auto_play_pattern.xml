<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_received_pattern_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="17sp"
        android:textColor="@color/common_dialog_title_text_color"
        android:id="@+id/tv_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Name"
        android:singleLine="true"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/common_dialog_content_text_color"
        android:ellipsize="end"
        android:id="@+id/tv_title_notice"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:text="@string/chat_pattern_resend_play_title"
        android:singleLine="true"/>
    <TextView
        android:textSize="18sp"
        android:textColor="#a0000000"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_pattern_name"
        android:background="@drawable/grey_text_corners"
        android:paddingLeft="13dp"
        android:paddingTop="3dp"
        android:paddingRight="13dp"
        android:paddingBottom="3dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxWidth="150dp"
        android:minWidth="150dp"
        android:text=""
        android:singleLine="true"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/common_dialog_content_text_color"
        android:gravity="center"
        android:id="@+id/tv_pattern_receive"
        android:paddingLeft="13dp"
        android:paddingTop="3dp"
        android:paddingRight="13dp"
        android:paddingBottom="3dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/received_pattern_to_notice"
        android:singleLine="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:background="@color/common_dialog_line_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/common_dialog_btn_text_color"
        android:gravity="center"
        android:id="@+id/play_pattern"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/common_play"/>
    <ImageView
        android:background="@color/common_dialog_line_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/common_dialog_btn_text_color"
        android:gravity="center"
        android:id="@+id/tv_auto_play_pattern"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chat_pattern_resend_auto_play"/>
    <ImageView
        android:background="@color/common_dialog_line_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/common_dialog_btn_text_color"
        android:gravity="center"
        android:id="@+id/dont_play_pattern"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chat_pattern_resend_dont_play"/>
</LinearLayout>
