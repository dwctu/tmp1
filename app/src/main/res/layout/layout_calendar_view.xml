<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_calendar"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_color_25"
        android:gravity="left"
        android:id="@+id/tv_month_label"
        android:background="@color/bg"
        android:paddingTop="24dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingStart="30dp"/>
    <com.wear.widget.calendar.DayOfWeekView
        android:id="@+id/header_day_of_week"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingRight="16dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="#19ffffff"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="39.5dp"/>
</merge>
