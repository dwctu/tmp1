<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_primary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <com.wear.widget.MyActionBar
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:back="true"
            app:title="@string/setting_delete_account"/>
    </LinearLayout>
    <skin.support.constraint.SkinCompatConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear">
        <ImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/yellow_warning"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/account_delete_title_color"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="25dp"
            android:text="@string/delete_account_tips"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image"/>
        <skin.support.constraint.SkinCompatConstraintLayout
            android:id="@+id/editTextCons"
            android:background="@drawable/account_delete_circle_border"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title">
            <EditText
                android:textSize="15sp"
                android:textColor="@color/account_delete_input_color"
                android:textColorHint="@color/account_delete_hint_color"
                android:id="@+id/editText"
                android:background="@null"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="52dp"
                android:hint="@string/delete_account_hint"
                android:singleLine="true"
                android:inputType="textPassword"
                android:imeOptions="actionSend"
                style="android:attr/textViewStyle"/>
            <ImageView
                android:id="@+id/eyeImage"
                android:paddingTop="22dp"
                android:paddingRight="20dp"
                android:paddingBottom="22dp"
                android:visibility="gone"
                android:layout_width="52dp"
                android:layout_height="60dp"
                android:src="@drawable/icon_eye_close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </skin.support.constraint.SkinCompatConstraintLayout>
        <Button
            android:enabled="false"
            android:textSize="16sp"
            android:textColor="@color/account_delete_confirm_color"
            android:id="@+id/confirm"
            android:background="@drawable/accout_delete_confirm_background"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="25dp"
            android:text="@string/common_confirm"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/editTextCons"/>
    </skin.support.constraint.SkinCompatConstraintLayout>
</LinearLayout>
