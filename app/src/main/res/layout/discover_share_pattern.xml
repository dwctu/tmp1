<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_primary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.widget.MyActionBar
        android:id="@+id/actionbar"
        android:background="#d1347e"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        bar:back="true"
        bar:title="@string/pattern_shared_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/shape_edit_shared_item_bg"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginTop="24dp">
                <EditText
                    android:textSize="16sp"
                    android:textColor="@color/text_color_85"
                    android:textColorHint="@color/text_color_15"
                    android:id="@+id/pattern_name"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/pattern_name"
                    android:singleLine="true"
                    android:maxLength="30"
                    android:layout_weight="1"
                    android:textCursorDrawable="@null"/>
                <ImageView
                    android:id="@+id/iv_clear"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/nav_close"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/shape_edit_shared_item_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <EditText
                    android:textSize="16sp"
                    android:textColor="@color/text_color_85"
                    android:textColorHint="@color/text_color_15"
                    android:gravity="top|left"
                    android:id="@+id/pattern_text"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:minHeight="57dp"
                    android:hint="@string/pattern_description"
                    android:inputType="textMultiLine"
                    android:textCursorDrawable="@null"/>
                <TextView
                    android:textColor="@color/text_color_b45_wo"
                    android:gravity="right"
                    android:id="@+id/pattern_text_number"
                    android:paddingTop="12dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="140"/>
            </LinearLayout>
            <RelativeLayout
                android:background="@drawable/new_ui_pattern_bg"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginTop="12dp">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/text_color_b65_wo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pattern_shareAnonymous"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>
                <com.wear.widget.SwitchView
                    android:id="@+id/pattern_anonymous"
                    android:background="@null"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn=""
                    android:textOff=""
                    android:thumb="@drawable/switch_custom_thumb_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:track="@drawable/switch_custom_track_selector"/>
                <View
                    android:id="@+id/new_year_bg"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/mypattern_sync_fail"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/text_color_b45_wo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/pattern_share_notice"
                    android:lineSpacingExtra="3dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
