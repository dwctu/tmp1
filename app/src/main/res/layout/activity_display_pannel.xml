<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:background="#25252d"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:gravity="center_horizontal"
        android:background="#25252d"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_top_bg"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:src="@drawable/pannel_mirrorlife_logo_bg"
            android:scaleType="fitXY"/>
        <TextView
            android:textSize="21sp"
            android:textColor="#ffff2d89"
            android:id="@+id/tv_pf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintBottom_toBottomOf="@+id/iv_top_bg"
            app:layout_constraintLeft_toLeftOf="@+id/iv_top_bg"
            app:layout_constraintRight_toRightOf="@+id/iv_top_bg"
            app:layout_constraintTop_toTopOf="@+id/iv_top_bg"/>
        <ImageView
            android:id="@+id/iv_top_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/v_center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_top_bg"
            app:layout_constraintVertical_bias="0.49"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/tv_toy_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintBottom_toTopOf="@+id/tv_go_room_tip"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_top_icon"/>
        <TextView
            android:textSize="15sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/tv_go_room_tip"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/display_panel_toy_disconnect_title"
            app:layout_constraintBottom_toBottomOf="@+id/v_center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/v_center"/>
        <View
            android:id="@+id/v_center"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_center_1"/>
        <View
            android:id="@+id/v_center_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/text_color_red"
            android:gravity="center"
            android:id="@+id/tv_wait_reconnect_tip"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/display_panel_sync_not_stable"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_go_room_tip"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_progress"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_stop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text=""/>
            <ProgressBar
                android:layout_gravity="center_vertical"
                android:id="@+id/proBar"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="5dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/pb_pd_sp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        </LinearLayout>
        <TextView
            android:textSize="16sp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/tv_stop"
            android:background="@drawable/bnt_background_pink_all_corners_3"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="119dp"
            android:text="@string/display_panel_stop_sync"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_go_room_tip"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/browser_wait_ll"
        android:background="#25252d"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/qrcode_browser_upload_toy_successfully"/>
        <ImageView
            android:id="@+id/wait_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/gray_close"/>
    </LinearLayout>
</RelativeLayout>
