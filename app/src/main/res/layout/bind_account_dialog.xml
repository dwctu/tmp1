<?xml version="1.0" encoding="utf-8"?>
<skin.support.widget.SkinAutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/add_to_play_list_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <skin.support.widget.SkinAutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="116px">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="36px"
            android:layout_height="36px"
            android:layout_marginLeft="36px"
            android:src="@drawable/login_nav_selector"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="36px"
            android:textStyle="bold"
            android:textColor="@color/lvs_ui_standard_systemText"
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/des_two_options_popup"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </skin.support.widget.SkinAutoRelativeLayout>
    <View
        android:background="@color/divider_color"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <com.wear.widget.roundwidget.SkinRoundButton
        android:textColor="@color/lvs_ui_standard_systemText"
        android:id="@+id/btn_create_account"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginLeft="48px"
        android:layout_marginTop="48px"
        android:layout_marginRight="48px"
        android:text="@string/button_create_new_account"
        style="@style/lvs_ui_standard_fill_regular_radius_20px"/>
    <com.wear.widget.roundwidget.SkinRoundButton
        android:textColor="@color/lvs_ui_standard_systemText"
        android:id="@+id/btn_bind_account"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginLeft="48px"
        android:layout_marginTop="32px"
        android:layout_marginRight="48px"
        android:layout_marginBottom="52px"
        android:text="@string/button_bind_account"
        style="@style/lvs_ui_standard_fill_regular_radius_20px"/>
</skin.support.widget.SkinAutoLinearLayout>
