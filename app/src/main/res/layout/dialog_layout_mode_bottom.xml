<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_round_bg"
    android:layout_width="311dp"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="15sp"
        android:textColor="@color/common_dialog_content_text_color"
        android:gravity="center"
        android:id="@+id/tv_text_content"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/ll_bottom_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">
        <TextView
            android:textSize="15sp"
            android:textColor="@color/common_dialog_left_text_color"
            android:gravity="center"
            android:id="@+id/tv_cancel"
            android:background="@drawable/common_dialog_btn_left"
            android:layout_width="126dp"
            android:layout_height="36dp"
            android:layout_marginRight="11dp"
            android:text="@string/common_cancel"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/common_dialog_right_text_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_confirm"
            android:background="@drawable/common_dialog_btn_right"
            android:clickable="true"
            android:layout_width="126dp"
            android:layout_height="36dp"
            android:layout_marginLeft="0.1dp"
            android:layout_marginTop="0.1dp"
            android:text="Connect Now"/>
    </LinearLayout>
</LinearLayout>
