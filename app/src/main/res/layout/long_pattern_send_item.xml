<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true">
        <LinearLayout
            android:gravity="center"
            android:id="@+id/pattern_play_layout"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/pattern_select_icon"
                android:visibility="visible"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/chat_pattern_item_select"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/pattern_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/pattern_time_layer">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.wear.widget.MediumBoldTextView
                    android:textSize="16sp"
                    android:textColor="@color/text_color_85"
                    android:id="@+id/pattern_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    app:textStrokeWidth="medium"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:textSize="10sp"
                        android:textColor="@color/item_pattern_toy_name_text"
                        android:gravity="center"
                        android:id="@+id/pattern_toy_name"
                        android:background="@drawable/bg_pattern_toy_name"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginLeft="8dp"/>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_pattern_toy_name_2"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:layout_marginStart="6dp">
                        <ImageView
                            android:id="@+id/toy_type_1"
                            android:layout_width="22dp"
                            android:layout_height="18dp"
                            android:src="@drawable/icon_label_toy_function_vibration"/>
                        <ImageView
                            android:id="@+id/toy_type_2"
                            android:visibility="gone"
                            android:layout_width="22dp"
                            android:layout_height="18dp"
                            android:src="@drawable/icon_label_toy_function_vibration_2"/>
                        <ImageView
                            android:id="@+id/toy_type_3"
                            android:visibility="gone"
                            android:layout_width="22dp"
                            android:layout_height="18dp"
                            android:src="@drawable/dark_home_wave"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/text_color_45"
                    android:id="@+id/pattern_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="David"
                    android:singleLine="false"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/text_color_45"
                    android:gravity="center_vertical"
                    android:id="@+id/pattern_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="02:23"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
