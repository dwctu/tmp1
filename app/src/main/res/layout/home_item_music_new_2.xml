<?xml version="1.0" encoding="utf-8"?>
<skin.support.widget.SkinAutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <skin.support.widget.SkinAutoLinearLayout
        android:orientation="vertical"
        android:id="@+id/home_music_ll"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32px"
        android:layout_marginTop="24px"
        android:layout_marginRight="32px">
        <com.wear.widget.roundwidget.SkinRoundAutoLinearLayout
            android:orientation="vertical"
            android:id="@+id/home_item_music_ll_content"
            android:background="@color/lvs_ui_standard_systemBackground4"
            android:padding="0dp"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="352px"
            style="@style/lvs_ui_standard_radius_48px">
            <skin.support.widget.SkinAutoLinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="48px"
                android:layout_marginTop="40px"
                android:layout_marginRight="48px">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/home_item_music"/>
                <com.wear.widget.MediumBoldTextView
                    android:textSize="36px"
                    android:textStyle="bold"
                    android:textColor="@color/lvs_ui_standard_systemText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/closeRange_music"
                    android:layout_centerVertical="true"/>
            </skin.support.widget.SkinAutoLinearLayout>
            <com.wear.widget.roundwidget.SkinRoundAutoLinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="104px"
                android:layout_marginLeft="48px"
                android:layout_marginTop="40px"
                android:layout_marginRight="48px"
                android:layout_marginBottom="40px">
                <skin.support.widget.SkinAutoLinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="40px"
                    android:layout_weight="1">
                    <com.wear.widget.llong.MarqueeTextView
                        android:textSize="28px"
                        android:textColor="@color/lvs_ui_standard_systemText"
                        android:gravity="left"
                        android:id="@+id/home_item_music_title"
                        android:focusableInTouchMode="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:marqueeRepeatLimit="marquee_forever"/>
                    <com.wear.widget.llong.MarqueeTextView
                        android:textSize="22px"
                        android:textColor="@color/lvs_ui_standard_systemText3"
                        android:gravity="left"
                        android:id="@+id/home_item_music_content"
                        android:focusableInTouchMode="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4px"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:marqueeRepeatLimit="marquee_forever"/>
                </skin.support.widget.SkinAutoLinearLayout>
                <ImageView
                    android:id="@+id/home_music_previous"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_previous_new"/>
                <skin.support.widget.SkinAutoRelativeLayout
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="48px"
                    android:layout_marginRight="48px">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/home_music_play_pic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <View
                        android:id="@+id/home_music_play_pic_mask"
                        android:background="@drawable/home_music_pic_mask"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4px"/>
                    <com.wear.widget.llong.CircularProgressView
                        android:id="@+id/home_music_cpv"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        app:backColor="@color/transparent"
                        app:progColor="@color/lvs_ui_standard_systemBrandRegular"
                        app:progWidth="2dp"
                        app:progressCPV="0"/>
                    <ImageView
                        android:id="@+id/home_music_play"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/home_play_new"
                        android:layout_centerInParent="true"/>
                </skin.support.widget.SkinAutoRelativeLayout>
                <ImageView
                    android:id="@+id/home_music_next"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="40px"
                    android:src="@drawable/icon_next_new"/>
            </com.wear.widget.roundwidget.SkinRoundAutoLinearLayout>
        </com.wear.widget.roundwidget.SkinRoundAutoLinearLayout>
        <com.wear.widget.roundwidget.SkinRoundAutoLinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/home_item_music_ll_pure"
            android:background="@color/lvs_ui_standard_systemBackground4"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            style="@style/lvs_ui_standard_radius_48px">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="48px"
                android:src="@drawable/home_item_music"/>
            <com.wear.widget.MediumBoldTextView
                android:textSize="36px"
                android:textStyle="bold"
                android:textColor="@color/lvs_ui_standard_systemText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/closeRange_music"
                android:layout_centerVertical="true"/>
        </com.wear.widget.roundwidget.SkinRoundAutoLinearLayout>
    </skin.support.widget.SkinAutoLinearLayout>
</skin.support.widget.SkinAutoLinearLayout>
