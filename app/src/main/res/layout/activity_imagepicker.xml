<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/layout_actionBar"
        layout="@layout/include_imagepicker_layout_actionbar"/>
    <RelativeLayout
        android:id="@+id/rl_main_bottom"
        android:background="@color/color_222222"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:id="@+id/ac_imagepicker_tv_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/common_preview"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ll_burn_after_reading"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/ac_imagepicker_tv_preview"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/iv_burn_after_reading"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/chat_burn_choose_unselect"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/white"
                android:id="@+id/tv_burn_after_reading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/button_burn_after_reading"/>
        </LinearLayout>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/ac_imagepicker_tv_send"
            android:background="@drawable/camera_send_bg"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/common_send"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_main_bottom"
        android:layout_below="@+id/layout_actionBar">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_main_images"
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:id="@+id/tv_image_time"
            android:background="@color/text_gray"
            android:paddingLeft="16dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="24dp"/>
    </RelativeLayout>
</RelativeLayout>
