<?xml version="1.0" encoding="utf-8"?>
<skin.support.constraint.SkinCompatConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <skin.support.widget.SkinCompatImageView
        android:id="@+id/pop_up_image"
        android:layout_width="12dp"
        android:layout_height="7dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="-1dp"
        android:src="@drawable/gift_card_pop_up_triangle"
        app:layout_constraintBottom_toTopOf="@+id/gift_card_inner"
        app:layout_constraintRight_toRightOf="@+id/gift_card_inner"/>
    <skin.support.widget.SkinCompatImageView
        android:id="@+id/pop_down_image"
        android:layout_width="12dp"
        android:layout_height="7dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/gift_card_pop_down_triangle"
        app:layout_constraintRight_toRightOf="@+id/gift_card_inner"
        app:layout_constraintTop_toBottomOf="@+id/gift_card_inner"/>
    <skin.support.constraint.SkinCompatConstraintLayout
        android:id="@+id/gift_card_inner"
        android:background="@drawable/popwindow_gift_card_background"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:maxHeight="500dp"
        android:minHeight="144dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never">
            <skin.support.constraint.SkinCompatConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/note_text_color"
                    android:id="@+id/note_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/note_notice1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textColor="@color/gift_card_pop_window_text_color"
                    android:id="@+id/note_content"
                    android:paddingBottom="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="24dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/note_text1"/>
                <TextView
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/note_text_color"
                    android:id="@+id/recipient_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/note_notice2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/note_content"/>
                <TextView
                    android:textColor="@color/gift_card_pop_window_text_color"
                    android:id="@+id/recipient_content"
                    android:paddingBottom="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="24dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recipient_text"/>
            </skin.support.constraint.SkinCompatConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </skin.support.constraint.SkinCompatConstraintLayout>
</skin.support.constraint.SkinCompatConstraintLayout>
