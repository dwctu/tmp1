<?xml version="1.0" encoding="utf-8"?>
<skin.support.widget.SkinCompatLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:tag="layout/dialog_fragment_report_action_menu_0"
    android:background="@drawable/bg_dialog_report_roulette"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:background="@drawable/bg_dialog_report_line"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_4"
        android:layout_marginTop="12dp"/>
    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/lvs_ui_standard_systemText"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:text="@string/patterns_menu_report"
        android:layout_centerInParent="true"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/lvs_ui_standard_systemText5"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/control_roulette_reportpage_text"
        android:layout_centerInParent="true"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/lvs_ui_standard_systemText5"
        android:id="@+id/tv_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_30"
        android:text="@string/common_notice"/>
</skin.support.widget.SkinCompatLinearLayout>
