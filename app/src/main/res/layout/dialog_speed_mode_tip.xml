<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_round_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.wear.widget.MediumBoldTextView
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_85"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/common_warning"
        app:textStrokeWidth="regular"/>
    <com.wear.widget.MediumBoldTextView
        android:textSize="15sp"
        android:textColor="@color/text_color_b45_wo"
        android:gravity="left"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/warning_speed_mode_des"
        app:textStrokeWidth="regular"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="24dp">
        <ImageView
            android:id="@+id/iv_speed_mode_tip_select"
            android:padding="10dp"
            android:visibility="visible"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/choose_member_unselect"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/text_color_65"
            android:id="@+id/tv_speed_mode_tip_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dont_remind_button"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp">
        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/common_dialog_left_text_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_cancel"
            android:background="@drawable/common_dialog_cancel_btn_selector"
            android:layout_width="126dp"
            android:layout_height="36dp"
            android:layout_marginRight="11dp"
            android:text="@string/common_cancel"/>
        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/common_dialog_right_text_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_confirm"
            android:background="@drawable/common_dialog_confirm_btn_selector"
            android:clickable="true"
            android:layout_width="126dp"
            android:layout_height="36dp"
            android:text="@string/common_agree"/>
    </LinearLayout>
</LinearLayout>
