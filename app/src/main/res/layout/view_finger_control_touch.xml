<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/tab_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/v_one_line"
        android:background="@color/control_board_line_7"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <View
        android:id="@+id/v_two_line"
        android:background="@color/control_board_line_7"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <View
        android:id="@+id/v_three_line"
        android:background="@color/control_board_line_7"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageView
        android:background="@drawable/remote_control_marker"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"/>
    <RelativeLayout
        android:layout_gravity="bottom|left"
        android:id="@+id/rl_one"
        android:background="@drawable/chat_toolbar_toyfunction_vibration_click"
        android:padding="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/iv_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/content_button_vibration_pink"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/rl_two"
        android:padding="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/iv_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/content_button_rotation_blue"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_gravity="bottom|right"
        android:id="@+id/rl_three"
        android:padding="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/iv_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/content_button_pump_pink"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_traditional"
        android:background="@color/tab_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.wear.widget.control.TraditionalSeekBarView
            android:id="@+id/vb_one_vseek"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <com.wear.widget.control.TraditionalSeekBarView
            android:id="@+id/vb_two_vseek"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <com.wear.widget.control.TraditionalSeekBarView
            android:id="@+id/vb_three_vseek"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</FrameLayout>
