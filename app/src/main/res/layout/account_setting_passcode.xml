<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bar="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.wear.widget.MyActionBar
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            bar:back="true"
            bar:title="@string/setting_password_change"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:background="@drawable/me_setting_passcode_lock"
                android:layout_width="45dp"
                android:layout_height="57dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="0dp"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/text_color_65"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="30dp"
                android:text="@string/setting_passcode_notice_top"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color_45"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="17dp"
                android:layout_marginRight="50dp"
                android:text="@string/setting_passcode_notice_bottom"
                android:layout_weight="4.22"/>
        </LinearLayout>
        <Button
            android:textColor="@color/text_white_same_selector"
            android:layout_gravity="center"
            android:id="@+id/passcode_enable"
            android:background="@drawable/red_status_button_bg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="57dp"
            android:text="@string/common_enable"/>
        <Button
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:id="@+id/passcode_change"
            android:background="@drawable/button_link_change_passcode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="57dp"
            android:text="@string/lock_change_passcode"/>
    </LinearLayout>
</RelativeLayout>
