<?xml version="1.0" encoding="utf-8"?>
<skin.support.constraint.SkinCompatConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:background="@drawable/dialog_toy_select_background"
    android:paddingBottom="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="18sp"
        android:textColor="@color/dialog_toy_select_title_text_color"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:text="@string/control_link_duration"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        app:layout_constraintTop_toBottomOf="@+id/title">
        <com.wear.widget.CycleWheelView
            android:id="@+id/cycleWheelView0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.wear.widget.CycleWheelView
            android:id="@+id/cycleWheelView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <com.wear.widget.CycleWheelView
            android:id="@+id/cycleWheelView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/dialog_toy_select_title_text_color"
        android:gravity="center"
        android:id="@+id/cancel_btn"
        android:background="@drawable/dialog_toy_select_cancel_background"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/common_cancel"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ok_btn"
        app:layout_constraintTop_toBottomOf="@+id/linear"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/dialog_toy_select_ok_color"
        android:gravity="center"
        android:id="@+id/ok_btn"
        android:background="@drawable/dialog_toy_select_ok_background"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/common_ok"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/cancel_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear"/>
</skin.support.constraint.SkinCompatConstraintLayout>
