<?xml version="1.0" encoding="utf-8"?>
<com.wear.widget.swipe.EasySwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:tag="layout/item_online_status_user_0"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    app:contentView="@+id/content_container"
    app:rightMenuView="@+id/tv_delete">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24">
        <com.wear.widget.RadiuImageView
            android:tag="binding_1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_launcher"
            android:scaleType="centerCrop"
            app:radius="5dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_color_85"
            android:ellipsize="end"
            android:tag="binding_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:singleLine="true"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_delete"
        android:background="#ffe15050"
        android:layout_width="64dp"
        android:layout_height="44dp"
        android:text="@string/common_delete"/>
</com.wear.widget.swipe.EasySwipeMenuLayout>
