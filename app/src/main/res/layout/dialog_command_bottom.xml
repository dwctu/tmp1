<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_command_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/tv_command_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:text="Command prompt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/tv_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:text="1. Elementary Instruction"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_command_prompt"/>
    <ImageView
        android:id="@+id/iv_close"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/ic_voice_tips_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="18dp"
        app:constraint_referenced_ids="tv_command_start,tv_command_stop,tv_command_faster,tv_command_slower,tv_command_stronger,tv_command_weaker"
        app:flow_horizontalAlign="start"
        app:flow_horizontalBias="0"
        app:flow_horizontalGap="10dp"
        app:flow_horizontalStyle="packed"
        app:flow_maxElementsWrap="3"
        app:flow_verticalGap="10dp"
        app:flow_wrapMode="chain"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_instruction"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#b3ffffff"
        android:id="@+id/tv_command_start"
        android:background="@drawable/voice_command_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#b3ffffff"
        android:id="@+id/tv_command_stop"
        android:background="@drawable/voice_command_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#b3ffffff"
        android:id="@+id/tv_command_faster"
        android:background="@drawable/voice_command_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faster"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#b3ffffff"
        android:id="@+id/tv_command_slower"
        android:background="@drawable/voice_command_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slower"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#b3ffffff"
        android:id="@+id/tv_command_stronger"
        android:background="@drawable/voice_command_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stronger"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#b3ffffff"
        android:id="@+id/tv_command_weaker"
        android:background="@drawable/voice_command_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weaker"/>
    <View
        android:id="@+id/view_line_1"
        android:background="#0affffff"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow"/>
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/tv_intermediate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:text="2. Intermediate Command"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line_1"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#b3ffffff"
        android:id="@+id/tv_command_strength"
        android:background="@drawable/voice_command_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#b3ffffff"
        android:id="@+id/tv_command_speed"
        android:background="@drawable/voice_command_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed+(1-20)"/>
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_intermediate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="18dp"
        app:constraint_referenced_ids="tv_command_strength,tv_command_speed"
        app:flow_horizontalGap="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_intermediate"/>
    <TextView
        android:textSize="16sp"
        android:textColor="#b3ffffff"
        android:id="@+id/tv_ex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="18dp"
        android:text="Ex. If you want 50% strength, say ”strength fifty”"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow_intermediate"/>
    <View
        android:id="@+id/view_line_2"
        android:background="#0affffff"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ex"/>
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/tv_pattern_command"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:text="3. Pattern Command"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line_2"/>
    <ImageView
        android:id="@+id/iv_pattern_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_pattern_default"
        android:layout_marginStart="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pattern_command"/>
    <ImageView
        android:id="@+id/iv_pattern_straight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_pattern_straight"
        android:layout_marginStart="25dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_pattern_default"
        app:layout_constraintTop_toBottomOf="@+id/tv_pattern_command"/>
    <ImageView
        android:id="@+id/iv_pattern_wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_pattern_wave"
        android:layout_marginStart="25dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_pattern_straight"
        app:layout_constraintTop_toBottomOf="@+id/tv_pattern_command"/>
    <TextView
        android:textColor="#b3ffffff"
        android:id="@+id/tv_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="18dp"
        android:text="Defalut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/iv_pattern_default"
        app:layout_constraintRight_toRightOf="@+id/iv_pattern_default"
        app:layout_constraintTop_toBottomOf="@+id/iv_pattern_default"/>
    <TextView
        android:textColor="#b3ffffff"
        android:id="@+id/tv_straight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="18dp"
        android:text="Straight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/iv_pattern_straight"
        app:layout_constraintRight_toRightOf="@+id/iv_pattern_straight"
        app:layout_constraintTop_toBottomOf="@+id/iv_pattern_straight"/>
    <TextView
        android:textColor="#b3ffffff"
        android:id="@+id/tv_wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="18dp"
        android:text="Wave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/iv_pattern_wave"
        app:layout_constraintRight_toRightOf="@+id/iv_pattern_wave"
        app:layout_constraintTop_toBottomOf="@+id/iv_pattern_wave"/>
</androidx.constraintlayout.widget.ConstraintLayout>
