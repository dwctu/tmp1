<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emptyRly"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/emptyIv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/diff_text_color_65"
        android:gravity="center_horizontal"
        android:id="@+id/newtoy_notoy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="44dp"
        android:text="@string/toy_notoy1"
        android:layout_below="@+id/emptyIv"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/color_6c7273"
        android:id="@+id/newtoy_notoy3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/toy_notoy2"
        android:layout_below="@+id/newtoy_notoy2"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/disable_bt_40fff"
        android:id="@+id/newtoy_searching_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/newtoy_notoy3"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/newtoy_notoy3"/>
</RelativeLayout>
