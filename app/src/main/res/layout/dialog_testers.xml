<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_round_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.wear.widget.MediumBoldTextView
        android:textSize="17sp"
        android:textColor="@color/common_dialog_title_text_color"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:textStrokeWidth="medium"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/common_dialog_content_text_color"
        android:gravity="center"
        android:id="@+id/tv_text"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="30dp"/>
    <com.wear.widget.MediumBoldTextView
        android:textSize="15sp"
        android:textColor="@color/common_dialog_right_text_color"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_confirm"
        android:background="@drawable/common_dialog_btn_right"
        android:clickable="true"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:text="@string/common_ok"
        app:textStrokeWidth="regular"/>
    <com.wear.widget.MediumBoldTextView
        android:textSize="15sp"
        android:textColor="@color/common_dialog_left_text_color"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_cancel"
        android:background="@drawable/common_dialog_btn_left"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        android:text="@string/common_cancel"
        app:textStrokeWidth="regular"/>
</LinearLayout>
