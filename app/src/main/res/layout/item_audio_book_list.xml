<?xml version="1.0" encoding="utf-8"?>
<skin.support.constraint.SkinCompatConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_voice_book_item"
    android:layout_width="165dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_audio_book_cover"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="6dp"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:src="@drawable/bg_audio_book_cover_bottom"
        app:layout_constraintBottom_toBottomOf="@+id/iv_audio_book_cover"
        app:layout_constraintLeft_toLeftOf="@+id/iv_audio_book_cover"
        app:layout_constraintRight_toRightOf="@+id/iv_audio_book_cover"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/ds_guide_comtent_color"
        android:id="@+id/tv_audio_book_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_audio_book_cover"
        app:layout_constraintLeft_toLeftOf="@+id/iv_audio_book_cover"/>
    <ImageView
        android:id="@+id/iv_audio_book_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:src="@drawable/ic_audio_book_play"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_audio_book_cover"
        app:layout_constraintRight_toRightOf="@+id/iv_audio_book_cover"/>
    <TextView
        android:textStyle="bold"
        android:textColor="@color/title_text_color"
        android:ellipsize="end"
        android:gravity="left"
        android:id="@+id/tv_audio_book_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:maxLines="1"
        app:layout_constraintLeft_toLeftOf="@+id/iv_audio_book_cover"
        app:layout_constraintRight_toRightOf="@+id/iv_audio_book_cover"
        app:layout_constraintTop_toBottomOf="@+id/iv_audio_book_cover"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/link_text_color"
        android:id="@+id/tv_audio_book_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_audio_book_cover"
        app:layout_constraintTop_toBottomOf="@+id/tv_audio_book_name"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/link_text_color"
        android:id="@+id/tv_lab_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/iv_audio_book_cover"
        app:layout_constraintTop_toBottomOf="@+id/tv_audio_book_tags"/>
</skin.support.constraint.SkinCompatConstraintLayout>
