<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <skin.support.constraint.SkinCompatConstraintLayout
        android:id="@+id/cl_ad_banner"
        android:background="@drawable/bg_gaming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16">
        <com.wear.widget.RadiuImageView
            android:id="@+id/iv_ad_banner"
            android:layout_width="match_parent"
            android:layout_height="191dp"
            android:scaleType="fitXY"
            app:left_top_radius="12dp"
            app:right_top_radius="12dp"/>
        <com.wear.widget.RadiuImageView
            android:id="@+id/iv_icon_gaming"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_ad_banner"
            app:radius="5dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_color_85"
            android:ellipsize="end"
            android:id="@+id/tv_gaming_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_gaming_description"
            app:layout_constraintLeft_toRightOf="@+id/iv_icon_gaming"
            app:layout_constraintRight_toLeftOf="@+id/btn_play"
            app:layout_constraintTop_toTopOf="@+id/iv_icon_gaming"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/text_color_65"
            android:ellipsize="end"
            android:id="@+id/tv_gaming_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_icon_gaming"
            app:layout_constraintLeft_toLeftOf="@+id/tv_gaming_name"
            app:layout_constraintRight_toLeftOf="@+id/btn_play"
            app:layout_constraintTop_toBottomOf="@+id/tv_gaming_name"/>
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/btn_play"
            android:background="@drawable/selector_btn_gaming_play"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:text="@string/button_open_music_app"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_icon_gaming"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_icon_gaming"/>
    </skin.support.constraint.SkinCompatConstraintLayout>
</LinearLayout>
