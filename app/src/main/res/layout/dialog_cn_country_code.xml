<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <skin.support.constraint.SkinCompatConstraintLayout
        android:layout_gravity="center"
        android:background="@drawable/dialog_frozen_background"
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/yellow_warning"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="17sp"
            android:textColor="@color/dialog_cn_country_code_content_text_color"
            android:gravity="center"
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:text="@string/notification_delete_acount"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/dialog_cn_country_code_cancel_text_color"
            android:gravity="center"
            android:id="@+id/cancel"
            android:background="@drawable/dialog_cn_country_code_cancel_background"
            android:layout_width="126dp"
            android:layout_height="36dp"
            android:layout_marginTop="30dp"
            android:text="@string/common_cancel"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ok"
            app:layout_constraintTop_toBottomOf="@+id/text"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/ok"
            android:background="@drawable/red_natural_button_bg"
            android:layout_width="126dp"
            android:layout_height="36dp"
            android:layout_marginTop="30dp"
            android:text="@string/common_ok"
            android:textAlignment="center"
            app:layout_constraintLeft_toRightOf="@+id/cancel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text"/>
    </skin.support.constraint.SkinCompatConstraintLayout>
</LinearLayout>
