<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/complete_container"
    android:background="#33000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="right"
        android:id="@+id/ac_video_close"
        android:background="@drawable/video_close_bg"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/chat_video_preview_close_player"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:id="@+id/stop_fullscreen"
        android:padding="@dimen/dkplayer_controller_icon_padding"
        android:visibility="gone"
        android:layout_width="@dimen/dkplayer_controller_height"
        android:layout_height="@dimen/dkplayer_controller_height"
        android:src="@drawable/dkplayer_ic_action_arrow_back"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_play"
            android:background="@drawable/videoplayer_shape_play_bg"
            android:padding="22dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/chat_video_preview_play"/>
    </LinearLayout>
</FrameLayout>
