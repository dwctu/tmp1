<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_download"
    android:background="@drawable/bg_bottom_download"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent">
    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/color_FFFFFFF_85"
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Download Voice Control Feature Pack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/color_FFFFFFF_85"
        android:gravity="center"
        android:id="@+id/tv_button_no"
        android:background="@drawable/bg_download_no"
        android:layout_width="156dp"
        android:layout_height="46dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:text="No"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_button_download"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/color_FFFFFFF_85"
        android:gravity="center"
        android:id="@+id/tv_button_download"
        android:background="@drawable/bg_download_button"
        android:layout_width="156dp"
        android:layout_height="46dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:text="Download"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_button_no"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
