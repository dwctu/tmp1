<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ac_camera_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/ac_camera_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.wear.util.camera.record.widget.CameraView
            android:id="@+id/ac_camera_cameraview"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/ac_camera_preview_photo"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <SurfaceView
            android:id="@+id/ac_camera_surfaceview"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"/>
        <com.wear.util.camera.record.widget.FocusImageView
            android:id="@+id/ac_camera_focusImageView"
            android:visibility="invisible"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:focus_fail_id="@drawable/focus_focus_failed"
            app:focus_focusing_id="@drawable/focus_focusing"
            app:focus_success_id="@drawable/focus_focused"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/ac_camera_tv_photo"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_btm"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_btm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <com.wear.util.camera.TakeView
                    android:id="@+id/ac_camera_takeview"
                    android:layout_width="98dp"
                    android:layout_height="98dp"
                    android:layout_centerInParent="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:id="@+id/ac_camera_iv_roate"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/switch_camera"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ac_camera_takeview"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <RelativeLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginBottom="23dp">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:id="@+id/ac_camera_tv_cancel"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/common_cancel"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/color_FFFFFFF_85"
                    android:gravity="center"
                    android:id="@+id/tv_tip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/system_record_video_text"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/color_FFFFFFF_85"
                    android:gravity="center"
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/ac_camera_tv_send"
                    android:background="@drawable/camera_send_bg"
                    android:visibility="invisible"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/common_send"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@+id/ac_camera_ll_pb"
            android:visibility="invisible"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:id="@+id/ac_camera_pb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/ac_camera_iv_cancle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/close_camera_new"
            android:layout_marginStart="@dimen/dp_20"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_alignParentEnd="true">
            <ImageView
                android:id="@+id/ac_camera_iv_burn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/chat_camera_burn_disable"
                android:layout_marginEnd="6dp"/>
            <ImageView
                android:id="@+id/ac_camera_iv_flash"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/chat_camera_photo_flash_disable"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
