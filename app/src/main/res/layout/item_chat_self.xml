<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_root_anima"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">
    <include
        android:id="@+id/long_chat_create_layout"
        layout="@layout/long_chat_item_times"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/long_chat_item_selection"/>
        <View
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginRight="4dp"/>
        <ImageView
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/block_sync"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/message_fail"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>
        <FrameLayout
            android:id="@+id/fl_user_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="@dimen/dp_16">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:id="@+id/ll_user_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <include layout="@layout/item_chat_self_replymsg"/>
                <com.wear.util.HttpTextView
                    android:textSize="18sp"
                    android:textColor="@color/lvs_ui_standard_systemText"
                    android:gravity="center"
                    android:id="@+id/user_message"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:maxWidth="@dimen/activity_msg_max_lenth"
                    android:minHeight="45dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/message_blur"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/message_glass"
                android:background="@drawable/chat_message_send_glass"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/fl_emoji"
            android:visibility="gone"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/dp_8">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_emoji"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_view"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:lottie_autoPlay="false"/>
        </FrameLayout>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/user_img"
            android:visibility="gone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/chat_avatar_default"
            android:scaleType="centerCrop"
            app:riv_border_color="#333333"
            app:riv_border_width="0dp"
            app:riv_corner_radius="4dp"
            app:riv_mutate_background="true"/>
    </LinearLayout>
</LinearLayout>
