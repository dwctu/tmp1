<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_clear_context"
    android:layout_width="match_parent"
    android:layout_height="64dp">
    <TextView
        android:textSize="13sp"
        android:textColor="@color/chat_gpt_clear_context_color"
        android:id="@+id/text_clear_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Context cleared"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chat_start_line_left"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_clear_context"
        app:layout_constraintRight_toLeftOf="@+id/text_clear_context"
        app:layout_constraintTop_toTopOf="@+id/text_clear_context"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chat_start_line_right"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_clear_context"
        app:layout_constraintLeft_toRightOf="@+id/text_clear_context"
        app:layout_constraintTop_toTopOf="@+id/text_clear_context"/>
</androidx.constraintlayout.widget.ConstraintLayout>
