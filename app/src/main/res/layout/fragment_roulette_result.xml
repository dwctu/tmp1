<?xml version="1.0" encoding="utf-8"?>
<skin.support.constraint.SkinCompatConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/fragment_roulette_result_0"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.widget.RadarScanView
        android:id="@+id/radar_scan_view"
        android:tag="binding_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_16"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintBottom_toBottomOf="@+id/radar_scan_view"
        app:layout_constraintEnd_toEndOf="@+id/radar_scan_view"
        app:layout_constraintStart_toStartOf="@+id/radar_scan_view"
        app:layout_constraintTop_toTopOf="@+id/radar_scan_view"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/roulette_text_ac_73"
        android:gravity="start"
        android:id="@+id/tv_hint"
        android:tag="binding_2"
        android:paddingLeft="@dimen/dp_32"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_32"
        android:paddingBottom="@dimen/dp_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_56"
        android:layout_marginRight="@dimen/dp_32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radar_scan_view"
        app:lineHeight="18dp"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/roulette_text_6c_a6"
        android:gravity="start"
        android:id="@+id/tv_hint_more"
        android:tag="binding_3"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_56"
        android:layout_marginStart="-32dp"
        app:layout_constraintStart_toEndOf="@+id/tv_hint"
        app:layout_constraintTop_toBottomOf="@+id/radar_scan_view"
        app:lineHeight="18dp"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:tag="binding_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hint">
        <FrameLayout
            android:background="@drawable/bg_roulette_result_cancel"
            android:layout_width="64dp"
            android:layout_height="64dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_roulette_result_cancel"/>
            <com.wear.ui.discover.roulette.widget.RoundProgressBar
                android:id="@+id/round_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                app:is_draw_text="false"
                app:progress_line_color="@color/white"/>
        </FrameLayout>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/roulette_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/common_cancel"/>
    </LinearLayout>
</skin.support.constraint.SkinCompatConstraintLayout>
