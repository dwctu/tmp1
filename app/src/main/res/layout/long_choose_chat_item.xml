<?xml version="1.0" encoding="utf-8"?>
<skin.support.widget.SkinAutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:paddingLeft="40px"
    android:paddingRight="40px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <skin.support.widget.SkinAutoLinearLayout
        android:gravity="center_vertical"
        android:paddingBottom="48px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <skin.support.widget.SkinAutoLinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/select_status_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/select_status"
                android:visibility="visible"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@drawable/user_select_new"/>
        </skin.support.widget.SkinAutoLinearLayout>
        <skin.support.widget.SkinAutoFrameLayout
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="32px">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/user_img"
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@drawable/chat_avatar_default"
                android:scaleType="centerCrop"
                app:riv_border_color="#d8d8d8"
                app:riv_border_width="0dp"
                app:riv_corner_radius="6dp"
                app:riv_mutate_background="true"
                app:riv_oval="false"/>
            <skin.support.widget.SkinAutoFrameLayout
                android:layout_gravity="right"
                android:id="@+id/fl_online_status"
                android:background="@drawable/chat_status_bg"
                android:layout_width="20px"
                android:layout_height="20px">
                <ImageView
                    android:layout_gravity="top|right"
                    android:id="@+id/online_status"
                    android:layout_width="12px"
                    android:layout_height="12px"
                    android:src="@drawable/status_available"/>
            </skin.support.widget.SkinAutoFrameLayout>
        </skin.support.widget.SkinAutoFrameLayout>
        <skin.support.widget.SkinAutoLinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:layout_weight="1">
            <TextView
                android:textSize="32px"
                android:textColor="@color/lvs_ui_standard_systemText"
                android:id="@+id/chat_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
            <skin.support.widget.SkinAutoLinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="28px"
                    android:textColor="@color/lvs_ui_standard_systemText"
                    android:id="@+id/tv_user_name_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="28px"
                    android:textColor="@color/lvs_ui_standard_systemText"
                    android:ellipsize="end"
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="1"/>
            </skin.support.widget.SkinAutoLinearLayout>
        </skin.support.widget.SkinAutoLinearLayout>
    </skin.support.widget.SkinAutoLinearLayout>
</skin.support.widget.SkinAutoLinearLayout>
