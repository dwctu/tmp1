<?xml version="1.0" encoding="utf-8"?>
<skin.support.widget.SkinAutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bar="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/lvs_ui_standard_systemBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <skin.support.widget.SkinAutoFrameLayout
        android:id="@+id/login_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/test_2"
            android:adjustViewBounds="true"/>
        <skin.support.widget.SkinAutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="110px">
            <ImageView
                android:id="@+id/actionbar_back"
                android:background="@color/transparent"
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_marginLeft="32px"
                android:src="@drawable/nav_back_selector"
                android:layout_centerVertical="true"/>
            <com.wear.widget.MediumBoldTextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_color_85"
                android:gravity="center"
                android:id="@+id/actionbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/login_forget_title"
                android:singleLine="true"
                android:layout_centerInParent="true"/>
        </skin.support.widget.SkinAutoRelativeLayout>
        <com.wear.widget.MyActionBar
            android:id="@+id/actionbar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:src="@drawable/test_2"
            bar:back="true"
            bar:title="@string/login_forget_title"/>
    </skin.support.widget.SkinAutoFrameLayout>
    <skin.support.widget.SkinAutoRelativeLayout
        android:orientation="vertical"
        android:id="@+id/forget_above_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="274px">
        <skin.support.widget.SkinAutoLinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px">
            <TextView
                android:textSize="40px"
                android:textStyle="bold"
                android:textColor="@color/text_color_85"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_forget_tip"/>
        </skin.support.widget.SkinAutoLinearLayout>
        <skin.support.widget.SkinAutoRelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px">
            <skin.support.widget.SkinAutoLinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ll_email"
                android:layout_width="match_parent"
                android:layout_height="103px"
                android:layout_marginTop="240px">
                <EditText
                    android:textSize="32px"
                    android:textColor="@color/text_color_85"
                    android:textColorHint="@color/text_color_45"
                    android:id="@+id/email"
                    android:background="@color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="@string/common_email"
                    android:singleLine="true"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/email_content_delete"
                    android:visibility="gone"
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:src="@drawable/icon_psw_clear"/>
                <TextView
                    android:textSize="34px"
                    android:textColor="@color/login_forgot_password_send_text_disable_color"
                    android:gravity="center"
                    android:id="@+id/tv_send_verification_code"
                    android:background="@drawable/login_send_verification_code_btn_bg"
                    android:visibility="visible"
                    android:layout_width="136px"
                    android:layout_height="56px"
                    android:layout_marginLeft="32px"
                    android:text="@string/common_send"/>
            </skin.support.widget.SkinAutoLinearLayout>
            <View
                android:background="@color/lvs_ui_standard_systemStrokeRegular"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="343px"/>
            <TextView
                android:textSize="24px"
                android:textColor="@color/top_tip_text_color"
                android:id="@+id/error_tip"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="349px"
                android:text="@string/system_email_error"/>
            <skin.support.widget.SkinAutoLinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ll_verification_code"
                android:layout_width="match_parent"
                android:layout_height="103px"
                android:layout_marginTop="417px">
                <EditText
                    android:textSize="32px"
                    android:textColor="@color/text_color_85"
                    android:textColorHint="@color/text_color_45"
                    android:id="@+id/verification_code"
                    android:background="@color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="@string/forgot_password_input_hint"
                    android:singleLine="true"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/verification_code_content_delete"
                    android:visibility="gone"
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:src="@drawable/icon_psw_clear"/>
                <ImageView
                    android:id="@+id/verification_code_show"
                    android:visibility="gone"
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:layout_marginLeft="32px"
                    android:src="@drawable/icon_eye_close"
                    android:layout_toLeftOf="@+id/tv_send_verification_code"
                    android:layout_centerVertical="true"/>
            </skin.support.widget.SkinAutoLinearLayout>
        </skin.support.widget.SkinAutoRelativeLayout>
        <View
            android:background="@color/lvs_ui_standard_systemStrokeRegular"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="80px"
            android:layout_marginTop="510px"
            android:layout_marginRight="80px"/>
        <TextView
            android:textSize="24px"
            android:textColor="@color/top_tip_text_color"
            android:id="@+id/error_code_tip"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginTop="516px"
            android:layout_marginRight="80px"
            android:text="@string/wrong_email_verification"/>
        <com.wear.widget.roundwidget.SkinRoundTextView
            android:enabled="false"
            android:textSize="32px"
            android:textColor="@color/text_white_login_selector"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/send_email_btn"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginLeft="80px"
            android:layout_marginTop="648px"
            android:layout_marginRight="80px"
            android:text="@string/ds_button_next"
            style="@style/lvs_ui_standard_brand_gradient_radius_20px"/>
    </skin.support.widget.SkinAutoRelativeLayout>
</skin.support.widget.SkinAutoRelativeLayout>
