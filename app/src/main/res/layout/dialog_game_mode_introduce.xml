<?xml version="1.0" encoding="utf-8"?>
<skin.support.constraint.SkinCompatConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/add_to_play_list_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_gravity="center"
        android:id="@+id/view"
        android:background="@drawable/bnt_background_gray_corners_2"
        android:layout_width="67dp"
        android:layout_height="4dp"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_centerHorizontal="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@+id/view">
        <skin.support.constraint.SkinCompatConstraintLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_24"
            android:paddingRight="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:textColor="@color/text_color_85"
                android:id="@+id/tv_game_mode_guide_q1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/game_mode_guide_q1"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/text_color_65"
                android:id="@+id/tv_new_pc_game_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/new_pc_game_des"
                app:layout_constraintTop_toBottomOf="@+id/tv_game_mode_guide_q1"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_gamings"
                android:background="@color/bg_round_4"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@+id/tv_new_pc_game_des">
                <com.wear.widget.recycler.NoScrollRecyclerView
                    android:id="@+id/rv_gaming1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"/>
                <com.wear.widget.recycler.NoScrollRecyclerView
                    android:id="@+id/rv_gaming2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_16"/>
            </LinearLayout>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/text_color_85"
                android:id="@+id/tv_game_mode_guide_q2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_32"
                android:text="@string/game_mode_guide_q2"
                app:layout_constraintTop_toBottomOf="@+id/ll_gamings"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/text_color_65"
                android:id="@+id/tv_game_mode_guide_connection1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/game_mode_guide_connection1"
                app:layout_constraintTop_toBottomOf="@+id/tv_game_mode_guide_q2"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_game_mode_guide_connection2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                app:layout_constraintTop_toBottomOf="@+id/tv_game_mode_guide_connection1">
                <View
                    android:background="@drawable/dot_gray65_bg"
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_5"
                    android:layout_margin="8dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/text_color_65"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/game_mode_guide_connection2"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_game_mode_guide_connection3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                app:layout_constraintTop_toBottomOf="@+id/ll_game_mode_guide_connection2">
                <View
                    android:background="@drawable/dot_gray65_bg"
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_5"
                    android:layout_margin="8dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/text_color_65"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/game_mode_guide_connection3"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_game_mode_guide_connection4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                app:layout_constraintTop_toBottomOf="@+id/ll_game_mode_guide_connection3">
                <View
                    android:background="@drawable/dot_gray65_bg"
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_5"
                    android:layout_margin="8dp"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/text_color_65"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/game_mode_guide_connection4"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:textSize="18sp"
                android:textColor="@color/text_color_85"
                android:id="@+id/tv_game_mode_guide_q3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_32"
                android:text="@string/game_mode_guide_q3"
                app:layout_constraintTop_toBottomOf="@+id/ll_game_mode_guide_connection4"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/text_color_65"
                android:id="@+id/tv_game_mode_guide_integration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="150dp"
                android:text="@string/game_mode_guide_integration"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_game_mode_guide_q3"/>
        </skin.support.constraint.SkinCompatConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <View
        android:id="@+id/view_bg"
        android:background="@drawable/create_pattern_dialog_fade"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_dismiss"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_dismiss"
        android:background="@drawable/bg_ff2d89_red_22"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="@string/got_it"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginEnd="@dimen/dp_48"
        app:layout_constraintBottom_toBottomOf="parent"/>
</skin.support.constraint.SkinCompatConstraintLayout>
