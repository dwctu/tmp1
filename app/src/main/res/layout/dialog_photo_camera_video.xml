<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_chat_action_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.wear.widget.MediumBoldTextView
        android:textSize="16sp"
        android:textColor="@color/lvs_ui_standard_systemText"
        android:gravity="center"
        android:id="@+id/from_album"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/menu_choose_from_album"/>
    <View
        android:background="@color/lvs_ui_standard_systemStrokeStrong"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <com.wear.widget.MediumBoldTextView
        android:textSize="16sp"
        android:textColor="@color/lvs_ui_standard_systemText"
        android:gravity="center"
        android:id="@+id/from_camera"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/menu_camera"/>
    <View
        android:id="@+id/v_line"
        android:background="@color/lvs_ui_standard_systemBackground6"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <com.wear.widget.MediumBoldTextView
        android:textSize="16sp"
        android:textColor="@color/lvs_ui_standard_systemText"
        android:gravity="center"
        android:id="@+id/cancel_from"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/common_cancel"/>
    <View
        android:background="@color/lvs_ui_standard_systemStrokeStrong"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>
