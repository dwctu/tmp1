<?xml version="1.0" encoding="utf-8"?>
<skin.support.widget.SkinAutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/item_connections_block_0"
    android:background="@drawable/selector_lvs_ui_standard_card_default_bg"
    android:layout_width="match_parent"
    android:layout_height="128px">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:tag="binding_1"
        android:layout_width="80px"
        android:layout_height="80px"
        android:src="@drawable/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_marginStart="32px"/>
    <TextView
        android:textSize="32px"
        android:textColor="@color/lvs_ui_standard_systemText"
        android:tag="binding_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="24px"
        android:layout_marginEnd="64px"
        android:layout_toEndOf="@+id/avatar"/>
</skin.support.widget.SkinAutoRelativeLayout>
