<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.widget.MyActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:back="true"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/description"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/description_edittext_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/action_bar">
        <EditText
            android:textSize="14sp"
            android:textColor="@color/help_block"
            android:textColorHint="@color/text_gray"
            android:gravity="top|left"
            android:id="@+id/message_text"
            android:background="@null"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="82dp"
            android:hint="@string/description_hint"
            android:maxLength="60"
            android:imeOptions="actionDone"
            android:imeActionLabel="@string/common_done"
            android:textCursorDrawable="@color/colorPrimary"/>
    </LinearLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/description_sub_title_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/common_hashtags"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"/>
</LinearLayout>
