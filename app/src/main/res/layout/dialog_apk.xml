<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_round_layout"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/ll_progress"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="300dp"
        android:layout_height="100dp">
        <ProgressBar
            android:layout_gravity="center_vertical"
            android:id="@+id/proBar"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="5dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/tv_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="0%"/>
    </LinearLayout>
    <TextView
        android:gravity="center"
        android:id="@+id/tv_update_fail"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="@string/apk_update_download_fail"/>
    <ImageView
        android:background="#50000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/cancel"
        android:background="@drawable/common_dialog_single_pink_btn_selector"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="@string/common_cancel"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_fail"
        android:visibility="gone"
        android:layout_width="300dp"
        android:layout_height="40dp">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/cancel_two"
            android:background="@drawable/common_dialog_btn_left_selector"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0.1dp"
            android:layout_marginRight="0.1dp"
            android:text="@string/common_cancel"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/text_white_same_selector"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/done"
            android:background="@drawable/common_dialog_btn_right_finger_selector"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.1dp"
            android:layout_marginTop="0.1dp"
            android:text="@string/retry"
            android:layout_weight="1"
            android:layout_alignParentRight="true"/>
    </LinearLayout>
</LinearLayout>
