<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/remoteControl"
        android:background="@drawable/home_item_remote_content_hover_bg"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp">
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/home_item_remote"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">
            <com.wear.widget.MediumBoldTextView
                android:textSize="20sp"
                android:textColor="@color/text_color_85"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/closeRange_remoteControl"
                app:textStrokeWidth="semibold"/>
            <com.wear.widget.MediumBoldTextView
                android:textSize="13sp"
                android:textColor="@color/text_color_45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/new_homepage_v2_pattern_des"
                app:textStrokeWidth="regular"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
