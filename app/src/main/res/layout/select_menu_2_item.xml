<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/root_layout"
    android:background="@drawable/pattern_more_item_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="134dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/action_row_1"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/action_row_1_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="21dp"
                android:src="@drawable/pattern_item_share"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color_100"
                android:id="@+id/action_row_1_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/common_shared"/>
        </LinearLayout>
        <View
            android:background="@color/pattern_more_item_line_color"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/action_row_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp">
            <ImageView
                android:id="@+id/action_row_2_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="21dp"
                android:src="@drawable/pattern_more_rename"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color_100"
                android:id="@+id/action_row_2_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/common_rename"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
