<?xml version="1.0" encoding="utf-8"?>
<skin.support.widget.SkinCompatLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/dialog_fragment_roulette_settings_0"
    android:background="@drawable/bg_dialog_roulette"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">
        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:src="@drawable/nav_close"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_16"/>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_color_85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_settings"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:background="@color/pattern_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:text="@string/settings_your_gender"
        android:layout_marginStart="@dimen/dp_24"/>
    <androidx.recyclerview.widget.RecyclerView
        android:orientation="horizontal"
        android:id="@+id/gender_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"/>
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/settings_about_me"
        android:layout_marginStart="@dimen/dp_24"/>
    <EditText
        android:textSize="15sp"
        android:textColor="@color/text_color_85"
        android:textColorHint="@color/text_color_25"
        android:gravity="start|top"
        android:tag="binding_1"
        android:background="@drawable/bg_item_shape_roulette_setting_default"
        android:padding="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_24"
        android:hint="@string/comman_max_characters_60"
        android:maxLength="60"/>
    <View
        android:background="@color/pattern_line"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_24"/>
    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_85"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:text="Friend request reminder"
        android:layout_marginStart="@dimen/dp_24"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_color_30"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_24"
        android:text="Requires app update from both parties. Info remains private until both accept request."
        app:lineHeight="18dp"/>
    <RelativeLayout
        android:background="@drawable/card_natural_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_24">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/diff_text_color_65"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send friend request"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_toStartOf="@+id/setting_send_friend"/>
        <com.wear.widget.SwitchView
            android:id="@+id/setting_send_friend"
            android:tag="binding_2"
            android:background="@null"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn=""
            android:textOff=""
            android:thumb="@drawable/switch_custom_thumb_selector"
            android:layout_centerVertical="true"
            android:track="@drawable/switch_custom_track_selector"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/card_natural_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_24">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/diff_text_color_65"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receive friend request"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_toStartOf="@+id/setting_receive_friend"/>
        <com.wear.widget.SwitchView
            android:id="@+id/setting_receive_friend"
            android:tag="binding_3"
            android:background="@null"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn=""
            android:textOff=""
            android:thumb="@drawable/switch_custom_thumb_selector"
            android:layout_centerVertical="true"
            android:track="@drawable/switch_custom_track_selector"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/submit_btn"
        android:background="@drawable/red_natural_button_bg"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:text="@string/common_done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content"/>
</skin.support.widget.SkinCompatLinearLayout>
