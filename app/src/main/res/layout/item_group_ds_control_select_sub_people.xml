<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/user_img_layout"
        android:paddingLeft="5dp"
        android:paddingTop="7dp"
        android:paddingRight="15dp"
        android:paddingBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_select_status"
            android:padding="10dp"
            android:visibility="visible"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/choose_member_unselect"/>
        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_user_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/chat_avatar_default"
                android:scaleType="centerCrop"
                app:riv_border_color="#333333"
                app:riv_border_width="0dp"
                app:riv_corner_radius="4dp"
                app:riv_mutate_background="true"/>
            <FrameLayout
                android:layout_gravity="right"
                android:id="@+id/fl_online_status"
                android:background="@drawable/chat_status_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="top|right"
                    android:id="@+id/online_status"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/status_available"/>
            </FrameLayout>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.wear.widget.MediumBoldTextView
                    android:textSize="16sp"
                    android:textColor="@color/text_color_85"
                    android:ellipsize="end"
                    android:id="@+id/tv_show_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jhom"
                    android:maxLines="1"
                    android:layout_weight="1"
                    app:textStrokeWidth="medium"/>
                <TextView
                    android:textSize="11sp"
                    android:textColor="@color/select_text_color"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/toy_type_name_1"
                    android:background="@drawable/default_toy_bg"
                    android:paddingLeft="4dp"
                    android:paddingTop="0dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="0dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Ambi"
                    android:singleLine="true"/>
                <TextView
                    android:textSize="11sp"
                    android:textColor="@color/select_text_color"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/toy_type_name_2"
                    android:background="@drawable/default_toy_bg"
                    android:paddingLeft="4dp"
                    android:paddingTop="0dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="0dp"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Hush"
                    android:singleLine="true"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="12dp"
                    android:textColor="@color/ds_color"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/toys_number_text"
                    android:background="@drawable/toys_number_background"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingRight="@dimen/dp10"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="8dp"
                    android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:textColor="#ff6c7273"
                    android:id="@+id/tv_user_name_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#ff6c7273"
                    android:ellipsize="end"
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jhom"
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
