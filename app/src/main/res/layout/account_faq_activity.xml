<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.wear.widget.MyActionBar
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:back="true"
            app:title="@string/help_faq"
            app:withTab="false"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout
                android:id="@+id/swipe_refresh_pattern"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:direction="top">
                <ListView
                    android:id="@+id/pattern_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:footerDividersEnabled="false"/>
            </com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/pattern_list_empty"
                android:background="@color/bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="25sp"
                    android:textColor="@color/text_color_65"
                    android:id="@+id/pattern_list_empty_text"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/help_faq_not_data"/>
                <TextView
                    android:textSize="17sp"
                    android:textColor="@color/text_color_65"
                    android:gravity="center"
                    android:id="@+id/pattern_list_empty_tip"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="@string/patterns_share_no_tip"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/loading_layer"
        android:background="#20000000"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
