<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_222222"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.wear.ui.longDistance.imagepicker.view.HackyViewPager
                android:id="@+id/vp_main_preImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_main_play"
                android:visibility="gone"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/chat_video_preview_play"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_preview"
            android:paddingLeft="4dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <include
        android:id="@+id/layout_actionBar"
        layout="@layout/include_imagepreview_layout_actionbar"/>
    <RelativeLayout
        android:gravity="right"
        android:id="@+id/rl_main_bottom"
        android:background="@color/color_222222"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/ac_preview_tv_send"
                android:background="@drawable/camera_send_bg"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:text="@string/common_send"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
