<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/sensitivity_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/common_dialog_round_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="17sp"
            android:textColor="@color/common_dialog_title_text_color"
            android:gravity="center"
            android:id="@+id/tv_text"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Input the QR code number"/>
        <EditText
            android:textSize="15sp"
            android:textColor="@color/common_dialog_content_text_color"
            android:textColorHint="@color/text_secondary_light"
            android:gravity="center"
            android:id="@+id/et_text"
            android:background="@drawable/edit_background_corners_2"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">
            <TextView
                android:textSize="15sp"
                android:textColor="@color/common_dialog_left_text_color"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tv_cancel"
                android:background="@drawable/common_dialog_btn_left"
                android:layout_width="126dp"
                android:layout_height="36dp"
                android:layout_marginRight="11dp"
                android:text="@string/common_cancel"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/common_dialog_right_text_color"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/tv_confirm"
                android:background="@drawable/common_dialog_btn_right"
                android:clickable="true"
                android:layout_width="126dp"
                android:layout_height="36dp"
                android:text="@string/common_ok"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
