<?xml version="1.0" encoding="utf-8"?>
<skin.support.constraint.SkinCompatConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dialog_tip_control_link"
    android:paddingBottom="66dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/ll_tips_title"
        android:paddingTop="28dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/control_link_tip_text_color"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/control_link_tips_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/iv_guide"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/icon_tips"
            android:layout_marginStart="7dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_tips_text1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_tips_title">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_clc_tips01"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/control_link_tip_text_color"
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/control_link_tips1"
            android:layout_marginStart="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_tips_text2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_tips_text1">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_clc_tips02"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/control_link_tip_text_color"
            android:layout_gravity="center"
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/control_link_tips7"
            android:layout_marginStart="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_tips_text3"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_tips_text2">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_clc_tips03"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/control_link_tip_text_color"
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/control_link_tips2"
            android:layout_marginStart="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_tips_text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_tips_text3">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_clc_tips04"
                android:layout_marginStart="20dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/control_link_tip_text_color"
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/control_link_tips3"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tips_get_tophy"
            android:background="@drawable/bg_tips_get_goto"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginStart="80dp">
            <TextView
                android:textSize="13sp"
                android:textColor="@color/tips_get_goto_textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/control_link_tips4"
                android:layout_marginStart="6dp"/>
            <ImageView
                android:textColor="@color/tips_get_goto_textcolor"
                android:layout_gravity="center_vertical"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/icon_enter"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_tips_text5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_tips_text4">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_clc_tips05"
                android:layout_marginStart="20dp"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/control_link_tip_text_color"
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/control_link_tips5"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tips_goto_discord"
            android:background="@drawable/bg_tips_get_goto"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginStart="80dp">
            <TextView
                android:textSize="13sp"
                android:textColor="@color/tips_get_goto_textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/control_link_tips6"
                android:layout_marginStart="6dp"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/icon_enter"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/dialog_toy_select_ok_color"
        android:gravity="center"
        android:id="@+id/cancel_btn"
        android:background="@drawable/dialog_toy_select_ok_background"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="88dp"
        android:text="@string/got_it"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ok_btn"
        app:layout_constraintTop_toBottomOf="@+id/ll_tips_text5"/>
    <TextView
        android:textSize="16dp"
        android:textColor="@color/dialog_toy_select_ok_color"
        android:gravity="center"
        android:id="@+id/ok_btn"
        android:background="@drawable/dialog_toy_select_ok_background"
        android:visibility="gone"
        android:layout_width="155dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:text="@string/button_control_link_guides"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/cancel_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_tips_text5"/>
</skin.support.constraint.SkinCompatConstraintLayout>
