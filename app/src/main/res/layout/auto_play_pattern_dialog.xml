<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#00000000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/root_layout"
        android:background="@drawable/common_dialog_round_layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:minHeight="255dp"
        android:layout_centerInParent="true">
        <TextView
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#a0000000"
            android:id="@+id/friend_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="20sp"
            android:textColor="#a0000000"
            android:ellipsize="end"
            android:id="@+id/title_notice"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/chat_pattern_resend_play_title"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:textSize="18sp"
            android:textColor="#a0000000"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/pattern_name"
            android:background="@drawable/grey_text_corners"
            android:paddingLeft="13dp"
            android:paddingTop="3dp"
            android:paddingRight="13dp"
            android:paddingBottom="3dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxWidth="150dp"
            android:minWidth="150dp"
            android:text=""
            android:singleLine="true"/>
        <TextView
            android:textSize="15sp"
            android:textColor="#a0000000"
            android:gravity="center"
            android:id="@+id/pattern_receive"
            android:paddingLeft="13dp"
            android:paddingTop="3dp"
            android:paddingRight="13dp"
            android:paddingBottom="3dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/received_pattern_to_notice"
            android:singleLine="false"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:background="#50000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/pink_stroke"
            android:gravity="center"
            android:id="@+id/play_pattern"
            android:background="@drawable/save_pattern_btn_selector"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/common_play"/>
        <ImageView
            android:background="#50000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="4dp"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/pink_stroke"
            android:gravity="center"
            android:id="@+id/auto_play_pattern"
            android:background="@drawable/save_pattern_btn_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:minHeight="50dp"
            android:text="@string/chat_pattern_resend_auto_play"/>
        <ImageView
            android:background="#50000000"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/pink_stroke"
            android:gravity="center"
            android:id="@+id/dont_play_pattern"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/chat_pattern_resend_dont_play"/>
    </LinearLayout>
</RelativeLayout>
