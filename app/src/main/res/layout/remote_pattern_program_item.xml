<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="0dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:textSize="18sp"
                android:textColor="@color/text_color_85"
                android:gravity="center"
                android:id="@+id/pattern_number"
                android:visibility="gone"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:text="1"/>
            <ImageView
                android:id="@+id/pattern_state_icon"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/content_icon_pattern_avatar"/>
            <ImageView
                android:id="@+id/pattern_select_icon"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/chat_toolbar_pattern_pause"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:id="@+id/pattern_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/pattern_time_layer">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="21sp"
                        android:textColor="@color/text_color_85"
                        android:id="@+id/pattern_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:text=""
                        android:singleLine="true"
                        android:layout_weight="1"/>
                    <ImageView
                        android:background="@drawable/content_icon_playing"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="8dp"/>
                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/iv_pattern_playing"
                        android:visibility="gone"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/content_icon_musicewave_playing"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="56dp">
                        <TextView
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/pattern_func_v1"
                            android:background="@drawable/content_icon_tag_pinkvibration"
                            android:paddingLeft="8dp"
                            android:paddingTop="0dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="0dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginBottom="3dp"
                            android:singleLine="true"/>
                        <TextView
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/pattern_func_v2"
                            android:background="@drawable/content_icon_tag_bluevibration"
                            android:paddingLeft="8dp"
                            android:paddingTop="0dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="0dp"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginBottom="3dp"
                            android:singleLine="true"/>
                        <TextView
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/pattern_func_r"
                            android:background="@drawable/content_icon_tag_rotation"
                            android:paddingLeft="8dp"
                            android:paddingTop="0dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="0dp"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginBottom="3dp"
                            android:singleLine="true"/>
                        <TextView
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/pattern_func_p"
                            android:background="@drawable/content_icon_tag_pump"
                            android:paddingLeft="8dp"
                            android:paddingTop="0dp"
                            android:paddingRight="8dp"
                            android:paddingBottom="0dp"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginBottom="3dp"
                            android:singleLine="true"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/text_color_45"
                        android:id="@+id/pattern_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="David"
                        android:singleLine="false"/>
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/text_color_45"
                        android:gravity="center_vertical"
                        android:id="@+id/pattern_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="02:23"/>
                    <TextView
                        android:textSize="15sp"
                        android:textColor="@color/color_accent"
                        android:id="@+id/shear_action"
                        android:background="@drawable/bnt_background_pink_corners_9"
                        android:paddingLeft="5dp"
                        android:paddingTop="1dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="1dp"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/common_shared"
                        android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/pattern_operation"
            android:background="@drawable/button_transparent_selector"
            android:padding="15dp"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/pattern_operation_image"
                android:background="@drawable/content_icon_more"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
