<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_round_gray_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="17sp"
        android:textColor="@color/text_primary_light"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="@string/alarm_notice_dialog_title"/>
    <ListView
        android:id="@+id/lv_alarm_from"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:textSize="18sp"
        android:textColor="@color/text_white_same_selector"
        android:gravity="center"
        android:id="@+id/tv_done"
        android:background="@drawable/common_dialog_single_pink_btn_selector"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/common_ok"/>
</LinearLayout>
