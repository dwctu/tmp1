<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/multi_select_slid_layout_uman"
        android:background="@color/multi_control_panel_bg"
        android:paddingTop="@dimen/mutli_toys_select_padding_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/multi_select_toys_rcv"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            bar:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/linear_text_tip"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true">
            <View
                android:id="@+id/v_0"
                android:background="@color/chat_control_board_line"
                android:layout_width="0.4dp"
                android:layout_height="match_parent"
                android:layout_marginRight="66dp"
                bar:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/panel_fys_tip_text_color"
                android:layout_gravity="center"
                android:id="@+id/tip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                bar:layout_constraintBottom_toBottomOf="parent"
                bar:layout_constraintLeft_toLeftOf="parent"
                bar:layout_constraintRight_toLeftOf="@+id/v_0"
                bar:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <RelativeLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/slide_top_panel"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mutli_toys_select_uman_height"
            android:layout_alignParentBottom="true">
            <TextView
                android:textSize="11sp"
                android:textColor="@color/text_color_65"
                android:gravity="center"
                android:id="@+id/multi_select_toys_nums"
                android:background="@color/multi_control_panel_bg"
                android:paddingBottom="11dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/toy_connected"/>
            <View
                android:id="@+id/multi_select_toys_btn_rorect"
                android:background="@drawable/mutli_toys_select_uman_selector"
                android:layout_width="28dp"
                android:layout_height="3dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/multi_select_toys_btn_line"
            android:background="@color/chat_control_board_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
