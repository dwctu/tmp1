<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bar="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_voice"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_friend_avatar"
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/chat_avatar_default"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            bar:riv_border_color="#333333"
            bar:riv_border_width="0dp"
            bar:riv_corner_radius="4dp"
            bar:riv_mutate_background="true"
            bar:riv_oval="true"/>
        <TextView
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/tv_friend_name"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Super Rebecca"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/tip_background_light"
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/tv_calling_notice"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/chat_waitAcceptance"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/tip_background_light"
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/tv_come_in_notice"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/dialog_receiveRequest_notice"
            android:layout_centerInParent="true"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/layout_calling_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/iv_cancel"
            android:background="@drawable/content_icon_cutphone_big"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_gravity="top|center_horizontal"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/common_cancel"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/layout_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="160dp">
            <ImageView
                android:id="@+id/iv_reject"
                android:background="@drawable/content_icon_cutphone_big"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_gravity="top|center_horizontal"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/common_reject"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_accept"
                android:background="@drawable/content_icon_phone_accept"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <TextView
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_gravity="top|center_horizontal"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/common_accept"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
