<?xml version="1.0" encoding="utf-8"?>
<com.wear.widget.auto.SkinAutoConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_img_layout"
    android:background="@drawable/selector_lvs_ui_standard_card_default_bg"
    android:paddingLeft="32px"
    android:paddingTop="24px"
    android:paddingRight="32px"
    android:paddingBottom="24px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <skin.support.widget.SkinAutoFrameLayout
        android:id="@+id/fl_online_status"
        android:background="@drawable/chat_status_bg"
        android:visibility="gone"
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignTop="@+id/avatar"
        android:layout_alignEnd="@+id/avatar"
        app:layout_constraintEnd_toEndOf="@+id/iv_user_img"
        app:layout_constraintTop_toTopOf="@+id/iv_user_img">
        <com.wear.widget.SquareView
            android:layout_gravity="top|right"
            android:id="@+id/sv_online_status_online"
            android:background="@drawable/image_connections_online"
            android:layout_width="12px"
            android:layout_height="wrap_content"/>
        <com.wear.widget.SquareView
            android:layout_gravity="top|right"
            android:id="@+id/sv_online_status_offline"
            android:background="@drawable/image_connections_offline"
            android:visibility="gone"
            android:layout_width="12px"
            android:layout_height="wrap_content"/>
    </skin.support.widget.SkinAutoFrameLayout>
    <skin.support.widget.SkinAutoLinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_user_img"
        app:layout_constraintTop_toTopOf="parent">
        <skin.support.widget.SkinAutoLinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="32px"
                android:textColor="@color/lvs_ui_standard_systemText"
                android:ellipsize="end"
                android:id="@+id/tv_show_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"
                app:textStrokeWidth="medium"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_official"
                android:visibility="visible"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/tag_official"
                android:layout_marginStart="2dp"/>
        </skin.support.widget.SkinAutoLinearLayout>
        <skin.support.widget.SkinAutoLinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="28px"
                android:textColor="@color/lvs_ui_standard_systemText3"
                android:id="@+id/tv_user_name_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="28px"
                android:textColor="@color/lvs_ui_standard_systemText3"
                android:ellipsize="end"
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"/>
        </skin.support.widget.SkinAutoLinearLayout>
    </skin.support.widget.SkinAutoLinearLayout>
</com.wear.widget.auto.SkinAutoConstraintLayout>
