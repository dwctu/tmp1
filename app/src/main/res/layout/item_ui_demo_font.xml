<?xml version="1.0" encoding="utf-8"?>
<com.wear.widget.roundwidget.SkinRoundAutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/cl_font"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <com.wear.widget.roundwidget.SkinRoundTextView
        android:textSize="17sp"
        android:id="@+id/tv_font_simple"
        android:background="@color/red_dot_new_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="文字样式"
        android:layout_weight="1.5"/>
    <com.wear.widget.roundwidget.SkinRoundTextView
        android:textAppearance="@style/lvs_ui_standard_text_caption"
        android:id="@+id/tv_font_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="字号(px)"
        android:layout_weight="1"/>
    <com.wear.widget.roundwidget.SkinRoundTextView
        android:textAppearance="@style/lvs_ui_standard_text_caption"
        android:id="@+id/tv_line_height"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="行高(px)"
        android:layout_weight="1"/>
    <com.wear.widget.roundwidget.SkinRoundTextView
        android:textAppearance="@style/lvs_ui_standard_text_caption"
        android:id="@+id/tv_font_wight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="字重"
        android:layout_weight="1"/>
    <com.wear.widget.roundwidget.SkinRoundTextView
        android:textAppearance="@style/lvs_ui_standard_text_caption"
        android:id="@+id/tv_font_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="组件名称"
        android:layout_weight="1"/>
</com.wear.widget.roundwidget.SkinRoundAutoLinearLayout>
