<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_round_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_b65_wo"
        android:gravity="center"
        android:id="@+id/tv_des1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="24dp"
        android:text="VIBEMATE"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/text_color_b65_wo"
        android:gravity="center"
        android:id="@+id/tv_des2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="30dp"
        android:text="@string/guide_to_reinstall_ads"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/common_dialog_left_text_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_white_btn"
            android:background="@drawable/common_dialog_cancel_btn_selector"
            android:clickable="true"
            android:layout_width="126dp"
            android:layout_height="36dp"
            android:text="@string/install_to_try_btn"/>
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/common_dialog_right_text_color"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_red_btn"
            android:background="@drawable/common_dialog_btn_right"
            android:clickable="true"
            android:layout_width="126dp"
            android:layout_height="36dp"
            android:text="@string/not_interested_btn"
            android:maxLines="1"
            android:layout_marginStart="15dp"/>
    </LinearLayout>
</LinearLayout>
