<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_root"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.widget.MyActionBar
        android:id="@+id/ab_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:back="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="36dp">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/default_ds_select_friend_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_search"
                android:padding="7dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/nav_searchbox_icon"/>
            <EditText
                android:textSize="15sp"
                android:textColor="@color/text_color_85"
                android:textColorHint="@color/text_color_45"
                android:gravity="center_vertical"
                android:id="@+id/et_search"
                android:background="@color/transparent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="@string/common_search"
                android:singleLine="true"
                android:maxLength="30"
                android:layout_weight="1"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:imeActionLabel="@string/common_done"/>
        </LinearLayout>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/text_color_85"
            android:gravity="center"
            android:id="@+id/tv_Cancel"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/common_cancel"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_friend"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/ll_search"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/text_color_45"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/empty_view"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="166.5dp"
        android:text="@string/ds_no_available_sub"
        android:drawableTop="@drawable/icon_ds_default_empty_illustrator"
        android:drawablePadding="10dp"
        android:lineSpacingExtra="4dp"/>
</LinearLayout>
