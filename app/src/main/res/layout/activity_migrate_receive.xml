<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.widget.MyActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:title="@string/chat_history_migration"/>
    <androidx.core.widget.NestedScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp">
            <ImageView
                android:id="@+id/ac_migrate_receive_iv_transfer"
                android:layout_width="263dp"
                android:layout_height="238dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/chathistorymigrationicon_before"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/text_color_85"
                    android:gravity="center"
                    android:id="@+id/ac_migrate_receive_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="25dp"
                    android:text="@string/transfer_chats_des"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/migrate_status_interrupted_color"
                    android:gravity="center"
                    android:id="@+id/ac_migrate_receive_interrupted"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="25dp"
                    android:text="@string/transfer_interrupted_des1"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/text_color_65"
                    android:gravity="center"
                    android:id="@+id/ac_migrate_receive_trying"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="25dp"
                    android:text="@string/transfer_interrupted_des2"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/text_color_65"
                    android:gravity="center"
                    android:id="@+id/ac_migrate_receive_screen_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:text="@string/transfer_chats_tip"/>
                <TextView
                    android:textSize="13sp"
                    android:textColor="@color/text_color_65"
                    android:gravity="center"
                    android:id="@+id/ac_migrate_receive_stop"
                    android:background="@drawable/migrate_transfer_cancel_selector"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/button_stop_trnsfer"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/text_color_white"
                    android:gravity="center"
                    android:id="@+id/ac_migrate_receive_ok"
                    android:background="@drawable/migrate_select_next_selector"
                    android:visibility="gone"
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/common_ok"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
