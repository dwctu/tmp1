<?xml version="1.0" encoding="utf-8"?>
<skin.support.widget.SkinAutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:tag="layout/activity_third_bind_account_0"
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <skin.support.widget.SkinAutoFrameLayout
        android:id="@+id/login_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/test_2"
            android:adjustViewBounds="true"/>
        <skin.support.widget.SkinAutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="110px">
            <ImageView
                android:id="@+id/actionbar_back"
                android:background="@color/transparent"
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_marginLeft="32px"
                android:src="@drawable/nav_back_selector"
                android:layout_centerVertical="true"/>
            <com.wear.widget.MediumBoldTextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_color_85"
                android:gravity="center"
                android:id="@+id/actionbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/title_bind_account"
                android:singleLine="true"
                android:layout_centerInParent="true"/>
        </skin.support.widget.SkinAutoRelativeLayout>
    </skin.support.widget.SkinAutoFrameLayout>
    <skin.support.widget.SkinAutoLinearLayout
        android:orientation="vertical"
        android:id="@+id/forget_above_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="274px">
        <skin.support.widget.SkinAutoLinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px">
            <TextView
                android:textSize="40px"
                android:textStyle="bold"
                android:textColor="@color/text_color_85"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bind_lovense_account"/>
        </skin.support.widget.SkinAutoLinearLayout>
        <skin.support.widget.SkinAutoLinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_marginTop="88px"
            android:layout_marginRight="80px">
            <skin.support.widget.SkinAutoLinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ll_email"
                android:layout_width="match_parent"
                android:layout_height="103px">
                <EditText
                    android:textSize="32px"
                    android:textColor="@color/text_color_85"
                    android:textColorHint="@color/text_color_45"
                    android:id="@+id/et_email"
                    android:background="@color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="Username or Email"
                    android:singleLine="true"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/email_content_delete"
                    android:visibility="gone"
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:src="@drawable/icon_psw_clear"/>
            </skin.support.widget.SkinAutoLinearLayout>
            <View
                android:background="@color/divider_2"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <skin.support.widget.SkinAutoLinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ll_verification_code"
                android:layout_width="match_parent"
                android:layout_height="103px"
                android:layout_marginTop="32px">
                <EditText
                    android:textSize="32px"
                    android:textColor="@color/text_color_85"
                    android:textColorHint="@color/text_color_45"
                    android:id="@+id/et_password"
                    android:background="@color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="Password"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:imeOptions="actionSend"/>
                <ImageView
                    android:id="@+id/verification_code_content_delete"
                    android:visibility="gone"
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:src="@drawable/icon_psw_clear"/>
            </skin.support.widget.SkinAutoLinearLayout>
        </skin.support.widget.SkinAutoLinearLayout>
        <View
            android:background="@color/divider_2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"/>
        <com.wear.widget.roundwidget.SkinRoundTextView
            android:enabled="false"
            android:textSize="32px"
            android:textColor="@color/text_white_login_selector"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/btn_bind"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginLeft="80px"
            android:layout_marginTop="60dp"
            android:layout_marginRight="80px"
            android:text="@string/button_bind"
            style="@style/lvs_ui_standard_brand_gradient_radius_20px"/>
    </skin.support.widget.SkinAutoLinearLayout>
</skin.support.widget.SkinAutoRelativeLayout>
