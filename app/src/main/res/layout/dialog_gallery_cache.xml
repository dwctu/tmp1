<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/add_to_play_list_background"
    android:paddingLeft="@dimen/dp_24"
    android:paddingRight="@dimen/dp_24"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_gravity="center"
        android:id="@+id/view"
        android:background="@drawable/bnt_background_gray_corners_2"
        android:layout_width="67dp"
        android:layout_height="4dp"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="18sp"
        android:textColor="@color/diff_text_color_65"
        android:gravity="center"
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/common_setting"
        android:layout_below="@+id/view"/>
    <RelativeLayout
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:src="@drawable/card_status_bg"
        android:layout_below="@+id/title_tv">
        <TextView
            android:textSize="16sp"
            android:textColor="@color/diff_text_color_65"
            android:paddingTop="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/debug_switch_autoclear_cache"
            android:layout_toLeftOf="@+id/setting_clear_cache_switch"
            android:layout_centerVertical="true"/>
        <com.wear.widget.SwitchView
            android:id="@+id/setting_clear_cache_switch"
            android:background="@null"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn=""
            android:textOff=""
            android:thumb="@drawable/switch_custom_thumb_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:track="@drawable/switch_custom_track_selector"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/iv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/card_status_bg"
        android:layout_below="@+id/iv">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toLeftOf="@+id/setting_clear_white_list_switch1">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/diff_text_color_65"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/debug_switch_enable_allowdomains"/>
            <TextView
                android:textSize="13sp"
                android:textColor="@color/text_secondary_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/switch_enable_allowdomains_des"/>
        </LinearLayout>
        <com.wear.widget.SwitchView
            android:id="@+id/setting_clear_white_list_switch1"
            android:background="@null"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn=""
            android:textOff=""
            android:thumb="@drawable/switch_custom_thumb_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:track="@drawable/switch_custom_track_selector"/>
    </RelativeLayout>
    <View
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/iv1"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
