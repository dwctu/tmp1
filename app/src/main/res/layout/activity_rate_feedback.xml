<?xml version="1.0" encoding="utf-8"?>
<skin.support.constraint.SkinCompatConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lvs_ui_standard_systemBackground"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/nav_login_close"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textColor="@color/lvs_ui_standard_systemText"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="@string/bad_rating_feedback_title"
        app:layout_constraintTop_toBottomOf="@+id/iv_close"
        style="@style/lvs_ui_standard_text_title"/>
    <TextView
        android:textColor="@color/lvs_ui_standard_systemText3"
        android:gravity="center"
        android:id="@+id/tv_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/bad_rating_feedback_des"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        style="@style/lvs_ui_standard_text_body"/>
    <com.wear.widget.roundwidget.SkinRoundConstraintLayout
        android:id="@+id/cl_feedback_container"
        android:background="@color/lvs_ui_standard_systemBackground2"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle"
        app:rRadius="8dp"
        app:rStrokeColor="@color/lvs_ui_standard_systemStrokeStrong"
        app:rStrokeWidth="1dp">
        <EditText
            android:textColor="@color/lvs_ui_standard_systemText2"
            android:textColorHint="@color/lvs_ui_standard_systemText4"
            android:gravity="top"
            android:id="@+id/et_feedback"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:hint="@string/bad_rating_feedback_hint"
            android:maxLength="500"
            app:layout_constraintBottom_toTopOf="@+id/tv_feedback_hint"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/lvs_ui_standard_text_title2"/>
        <TextView
            android:textColor="@color/lvs_ui_standard_systemText3"
            android:id="@+id/tv_feedback_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="0/500"
            android:layout_marginEnd="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/lvs_ui_standard_text_body"/>
    </com.wear.widget.roundwidget.SkinRoundConstraintLayout>
    <TextView
        android:textColor="@color/lvs_ui_standard_systemRedRegular"
        android:id="@+id/tv_feedback_error"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/common_content_limit"
        app:layout_constraintTop_toBottomOf="@+id/cl_feedback_container"
        style="@style/lvs_ui_standard_text_caption"/>
    <com.wear.widget.roundwidget.SkinRoundTextView
        android:enabled="false"
        android:id="@+id/btn_submit"
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:text="@string/help_submit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_feedback_container"
        style="@style/lvs_ui_standard_button_brand_gradient_huge"/>
</skin.support.constraint.SkinCompatConstraintLayout>
