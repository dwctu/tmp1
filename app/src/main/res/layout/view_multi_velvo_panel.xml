<?xml version="1.0" encoding="utf-8"?>
<com.wear.widget.llong.sliding.SlideLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slide_layout"
    android:tag="layout/view_multi_velvo_panel_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_gravity="end|center_vertical"
            android:id="@+id/drawer_view_button"
            android:background="@drawable/drawer_view_button_bg"
            android:layout_width="@dimen/dp_20"
            android:layout_height="120dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/icon_retract"
                android:tag="binding_1"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_11"
                android:src="@drawable/icon_velvo_expand"/>
        </FrameLayout>
    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <View
            android:id="@+id/velvo_line1"
            android:background="@color/drawer_view_divider_line_color"
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <FrameLayout
            android:id="@+id/velvo_container"
            android:background="@drawable/drawer_view_subject_bg"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:animateLayoutChanges="true"
            app:layout_constraintBottom_toTopOf="@+id/velvo_change_mode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/velvo_line1"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/drawer_view_title_text_color"
                android:gravity="center"
                android:id="@+id/velvo_default"
                android:layout_width="64dp"
                android:layout_height="@dimen/dp_40"
                android:text="@string/velvo_name"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/velvo_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <View
            android:id="@+id/velvo_line2"
            android:background="@color/drawer_view_divider_line_color"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            app:layout_constraintBottom_toBottomOf="@+id/velvo_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/velvo_change_mode"
            android:background="@drawable/drawer_view_subject_bg"
            android:layout_width="0dp"
            android:layout_height="79.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/velvo_line1">
            <ImageView
                android:id="@+id/icon_switch"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:src="@drawable/icon_switch"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/drawer_view_title_text_color"
                android:gravity="center"
                android:id="@+id/drawer_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.wear.widget.llong.sliding.SlideLayout>
