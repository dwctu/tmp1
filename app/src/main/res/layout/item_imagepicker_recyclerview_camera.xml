<?xml version="1.0" encoding="utf-8"?>
<com.wear.ui.longDistance.imagepicker.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/srl_item"
    android:background="@color/color_303030"
    android:padding="1dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.wear.ui.longDistance.imagepicker.view.SquareImageView
        android:id="@+id/iv_item_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/nav_picture"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"/>
</com.wear.ui.longDistance.imagepicker.view.SquareRelativeLayout>
