<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.wear.widget.MyActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:back="true"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/intvideo_title"
        app:withTab="false"/>
    <skin.support.design.widget.SkinMaterialTabLayout
        android:id="@+id/tab_layout"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@+id/actionbar"
        app:tabGravity="fill"
        app:tabIndicator="@drawable/common_tab_indicator"
        app:tabIndicatorColor="@color/interactive_video_tab_select"
        app:tabIndicatorFullWidth="false"
        app:tabMode="auto"
        app:tabSelectedTextColor="@color/interactive_video_tab_select"
        app:tabTextAppearance="@style/CommonTabTextStyle"
        app:tabTextColor="@color/interactive_video_tab_unselect"
        app:tabUnboundedRipple="true"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout"/>
</androidx.constraintlayout.widget.ConstraintLayout>
